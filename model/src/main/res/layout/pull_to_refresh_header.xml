<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="bottom">

    <RelativeLayout
        android:id="@+id/xlistview_header_content"
        android:layout_width="fill_parent"
        android:layout_height="40dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">

            <com.autonavi.auto.skin.view.SkinImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:id="@+id/head_arrowImageView"
                app:src4Night="@drawable/ic_trip_arrow_night"
                app:src4Skin="@drawable/ic_trip_arrow_day"
                android:src="@drawable/ic_trip_arrow_day"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.autonavi.auto.skin.view.SkinTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/onSecondaryDay"
                app:textColor4Night="@color/onSecondaryNight"
                app:textColor4Skin="@color/onSecondaryDay"
                android:id="@+id/head_tipsTextView"
                android:textSize="@dimen/sv_dimen_16"
                android:text=""/>

            <com.autonavi.auto.skin.view.SkinTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/head_lastUpdatedTextView"
                android:visibility="gone"
                android:textColor="@color/onSecondaryDay"
                app:textColor4Night="@color/onSecondaryNight"
                app:textColor4Skin="@color/onSecondaryDay"
                android:text=""
                android:textSize="@dimen/sv_dimen_12"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>