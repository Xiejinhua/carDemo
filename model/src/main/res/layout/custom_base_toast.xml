<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <com.desaysv.psmap.model.view.ShadowLayout
        android:id="@+id/shadowLayout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sv_dimen_90"
        android:button="@null"
        app:layout_constraintLeft_toLeftOf="@+id/rb_team"
        app:layout_constraintBottom_toTopOf="@+id/rb_team"
        app:radius="@dimen/sv_dimen_4"
        app:shadowColor="@color/customColorBlack10Day"
        app:shadowDx="@dimen/sv_dimen_6"
        app:shadowDy="@dimen/sv_dimen_6"
        app:shadowRadius="@dimen/sv_dimen_12"
        android:gravity="center">
        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:id="@+id/bg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sv_dimen_90"
            android:maxWidth="@dimen/sv_dimen_1224"
            android:minWidth="@dimen/sv_dimen_220"
            android:paddingLeft="@dimen/sv_dimen_32"
            android:background="@drawable/shape_bg_toast_pop_day"
            app:background4Night="@drawable/shape_bg_toast_pop_night"
            app:background4Skin="@drawable/shape_bg_toast_pop_day"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints">

            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/complete"
                android:layout_width="@dimen/sv_dimen_54"
                android:layout_height="@dimen/sv_dimen_54"
                android:src="@drawable/ic_toast_complete_day"
                android:visibility="gone"
                android:layout_marginRight="@dimen/sv_dimen_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/msg"
                app:layout_constraintTop_toTopOf="parent"
                app:src4Night="@drawable/ic_toast_complete_night"
                app:src4Skin="@drawable/ic_toast_complete_day"
                tools:visibility="gone" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sv_dimen_0"
                android:layout_marginRight="@dimen/sv_dimen_24"
                android:gravity="center"
                android:textColor="@color/onPrimaryDay"
                android:textSize="@dimen/sv_dimen_34"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/complete"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                tools:text="测试" />
        </com.autonavi.auto.skin.view.SkinConstraintLayout>
    </com.desaysv.psmap.model.view.ShadowLayout>
</layout>
