<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <com.autonavi.auto.skin.view.SkinImageView
        android:id="@+id/cr_head"
        android:layout_width="@dimen/sv_dimen_74"
        android:layout_height="@dimen/sv_dimen_86"
        android:background="@drawable/ic_group_head_portrait"
        app:background4Night="@drawable/ic_group_head_portrait"
        app:background4Skin="@drawable/ic_group_head_portrait"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.autonavi.auto.skin.view.SkinImageView
        android:id="@+id/head_iv"
        android:layout_width="@dimen/sv_dimen_66"
        android:layout_height="@dimen/sv_dimen_66"
        android:layout_marginTop="@dimen/sv_dimen_4"
        tools:src="@drawable/ic_default_avatar_night"
        app:layout_constraintLeft_toLeftOf="@+id/cr_head"
        app:layout_constraintRight_toRightOf="@+id/cr_head"
        app:layout_constraintTop_toTopOf="@+id/cr_head"/>

    <com.autonavi.auto.skin.view.SkinImageView
        android:id="@+id/iv_offline_bg"
        android:layout_width="@dimen/sv_dimen_66"
        android:layout_height="@dimen/sv_dimen_66"
        android:layout_marginTop="@dimen/sv_dimen_4"
        android:background="@drawable/ic_group_head_poffline_bg"
        app:layout_constraintLeft_toLeftOf="@+id/cr_head"
        app:layout_constraintRight_toRightOf="@+id/cr_head"
        app:layout_constraintTop_toTopOf="@+id/cr_head"/>
</androidx.constraintlayout.widget.ConstraintLayout>