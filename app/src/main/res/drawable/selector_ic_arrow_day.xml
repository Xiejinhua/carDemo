<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_selected="false">
        <bitmap android:alpha="0.8" android:src="@drawable/ic_arrow_restrict_down_day" />
    </item>

    <item android:state_pressed="true" android:state_selected="true">
        <bitmap android:alpha="0.8" android:src="@drawable/ic_arrow_restrict_up_day" />
    </item>

    <item android:state_selected="true">
        <bitmap android:alpha="1" android:src="@drawable/ic_arrow_restrict_up_day" />
    </item>
    <item>
        <bitmap android:alpha="1" android:src="@drawable/ic_arrow_restrict_down_day" />
    </item>
</selector>