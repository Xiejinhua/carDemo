<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_checked="true">
        <bitmap android:src="@drawable/ic_set_road_conditions_night" android:alpha="0.8" />
    </item>
    <item android:state_pressed="false" android:state_checked="true" android:drawable="@drawable/ic_set_road_conditions_night"/>
    <item android:state_pressed="true" android:state_checked="false">
        <bitmap android:src="@drawable/ic_set_road_conditions_day" android:alpha="0.8" />
    </item>
    <item android:state_pressed="false" android:state_checked="false" android:drawable="@drawable/ic_set_road_conditions_day"/>
</selector>