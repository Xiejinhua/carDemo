<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_selected="false">
        <bitmap android:alpha="0.8" android:src="@drawable/ic_screen_zoom_out_night" />
    </item>
    <item android:state_pressed="true" android:state_selected="true">
        <bitmap android:alpha="0.8" android:src="@drawable/ic_screen_zoom_in_night" />
    </item>
    <item android:state_selected="false">
        <bitmap android:alpha="1" android:src="@drawable/ic_screen_zoom_out_night" />
    </item>
    <item android:state_selected="true">
        <bitmap android:alpha="1" android:src="@drawable/ic_screen_zoom_in_night" />
    </item>
</selector>