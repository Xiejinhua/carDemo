<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- checked pressed -->
	<item
		android:drawable="@drawable/ic_switch_checked_thumb_night" android:state_checked="true" android:state_pressed="true"/>

	<!-- unchecked pressed -->
	<item android:drawable="@drawable/ic_switch_thumb_night" android:state_checked="false" android:state_pressed="true"/>

	<!-- checked unpressed -->
	<item android:drawable="@drawable/ic_switch_checked_thumb_night" android:state_checked="true" android:state_pressed="false"/>

	<!-- normal -->
	<item android:drawable="@drawable/ic_switch_thumb_night"/>
</selector>
