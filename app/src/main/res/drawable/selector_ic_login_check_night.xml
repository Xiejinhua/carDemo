<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_selected="true">
        <bitmap android:src="@drawable/ic_login_check_select_night" android:alpha="0.8" />
    </item>
    <item android:state_pressed="false" android:state_selected="true" >
        <bitmap android:src="@drawable/ic_login_check_select_night" android:alpha="1.0" />
    </item>
    <item android:state_pressed="true" android:state_selected="false">
        <bitmap android:src="@drawable/ic_login_check_night" android:alpha="0.8" />
    </item>
    <item android:state_pressed="false" android:state_selected="false">
        <bitmap android:src="@drawable/ic_login_check_night" android:alpha="1.0" />
    </item>
</selector>