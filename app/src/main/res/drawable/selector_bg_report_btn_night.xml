                android:radius="@dimen/sv_dimen_12"/>

            <gradient
                android:angle="270"
                android:endColor="@color/customColorReportBtnBgPressedNight"
                android:startColor="@color/customColorReportBtnBgPressedNight"
                android:type="linear" />
        </shape>
    </item>
