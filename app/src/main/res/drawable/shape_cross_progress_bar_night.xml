<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/sv_dimen_4" />
            <gradient
                android:angle="0"
                android:endColor="#33929CAA"
                android:startColor="#33929CAA" />

        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/sv_dimen_4" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/onTertiaryContainerNight"
                    android:centerY="0.75"
                    android:endColor="@color/onTertiaryContainerNight"
                    android:startColor="@color/onTertiaryContainerNight" />
            </shape>
        </clip>
    </item>

</layer-list>