<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.example.aha_api_sdkd01.manger.models.LineListModel.DataDTO.ListDTO" />
        <variable
            name="isNight"
            type="Boolean" />
        <variable
            name="isLast"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_width="@dimen/sv_dimen_640"
        tools:background="@color/white">
        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:id="@+id/item_cl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sv_dimen_180"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/image"
                android:layout_width="@dimen/sv_dimen_160"
                android:layout_height="@dimen/sv_dimen_120"
                android:scaleType="fitXY"
                android:background="@drawable/ic_aha_list_default_picture_day"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="北京环球度假区"
                app:setAhaDetailTitle="@{item.caption}"
                app:setAhaDetailTitleNight="@{isNight}"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Skin="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                app:setSearchListTitleTextColor="@{isNight}"
                android:textSize="@dimen/sv_dimen_34"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="@dimen/sv_dimen_16"
                android:layout_marginTop="@dimen/sv_dimen_3_5"
                app:layout_constraintLeft_toRightOf="@+id/image"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/image"/>

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/day_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="天数："
                android:textColor="@color/onSecondaryDay"
                app:textColor4Night="@color/onSecondaryNight"
                app:textColor4Skin="@color/onSecondaryDay"
                app:setSearchListAddressTextColor="@{isNight}"
                android:textSize="@dimen/sv_dimen_30"
                android:layout_marginLeft="@dimen/sv_dimen_16"
                android:layout_marginBottom="@dimen/sv_dimen_7"
                app:layout_constraintLeft_toRightOf="@+id/image"
                app:layout_constraintBottom_toBottomOf="@+id/image"/>

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/day_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="1天"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                app:setSearchListTitleTextColor="@{isNight}"
                android:textSize="@dimen/sv_dimen_32"
                app:layout_constraintLeft_toRightOf="@+id/day_title"
                app:layout_constraintBottom_toBottomOf="@+id/day_title"/>

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/mileage_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="里程："
                android:textColor="@color/onSecondaryDay"
                app:textColor4Night="@color/onSecondaryNight"
                app:textColor4Skin="@color/onSecondaryDay"
                app:setSearchListAddressTextColor="@{isNight}"
                android:textSize="@dimen/sv_dimen_30"
                android:layout_marginLeft="@dimen/sv_dimen_24"
                app:layout_constraintLeft_toRightOf="@+id/day_num"
                app:layout_constraintBottom_toBottomOf="@+id/day_title"/>
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/mileage_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="24km"
                app:setAhaTripMileage="@{item.totalDistance}"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                app:setSearchListTitleTextColor="@{isNight}"
                android:textSize="@dimen/sv_dimen_32"
                app:layout_constraintLeft_toRightOf="@+id/mileage_title"
                app:layout_constraintBottom_toBottomOf="@+id/mileage_title"/>
            <com.autonavi.auto.skin.view.SkinView
                android:layout_width="match_parent"
                android:layout_height="@dimen/sv_dimen_1"
                android:background="@color/lineDay"
                app:background4Night="@color/lineNight"
                app:background4Skin="@color/lineDay"
                app:setSearchLine="@{isNight}"
                android:layout_marginHorizontal="@dimen/sv_dimen_40"
                app:layout_constraintBottom_toBottomOf="parent" />
        </com.autonavi.auto.skin.view.SkinConstraintLayout>
        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:id="@+id/open_trip_app"
            android:layout_width="@dimen/sv_dimen_400"
            android:layout_height="@dimen/sv_dimen_90"
            android:background="@drawable/selector_bg_report_btn_day"
            app:background4Skin="@drawable/selector_bg_report_btn_day"
            app:background4Night="@drawable/selector_bg_report_btn_night"
            app:setMobileLoginBtn="@{true}"
            app:setMobileLoginNight="@{isNight}"
            android:layout_marginTop="@dimen/sv_dimen_40"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_cl"
            app:visibleGone="@{isLast}">
            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/ic_aha_list_more_day"
                android:layout_width="@dimen/sv_dimen_64"
                android:layout_height="@dimen/sv_dimen_64"
                android:scaleType="fitXY"
                android:src="@drawable/ic_aha_list_more_day"
                android:layout_marginRight="@dimen/sv_dimen_20"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/more_text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"/>
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/more_text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sv_dimen_90"
                android:text="@string/sv_custom_more_trip"
                android:textColor="@color/customAhaSecenicPointTextDay"
                app:textColor4Skin="@color/customAhaSecenicPointTextDay"
                app:textColor4Night="@color/onPrimaryNight"
                app:setMoreAhaText="@{isNight}"
                android:textSize="@dimen/sv_dimen_34"
                android:gravity="center"
                app:layout_constraintLeft_toRightOf="@+id/ic_aha_list_more_day"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </com.autonavi.auto.skin.view.SkinConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/sv_dimen_40"
            app:visibleGone="@{isLast}"
            app:layout_constraintTop_toBottomOf="@+id/open_trip_app"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>