<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
    </data>

    <com.autonavi.auto.skin.view.SkinConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:layout_width="@dimen/sv_dimen_680"
            android:layout_height="@dimen/sv_dimen_1178"
            android:layout_marginStart="@dimen/sv_dimen_20"
            android:layout_marginTop="@dimen/sv_dimen_90"
            android:background="@drawable/ic_main_bg_day"
            android:onClick="@{()->0}"
            android:paddingHorizontal="@dimen/sv_dimen_20"
            android:paddingTop="@dimen/sv_dimen_20"
            android:paddingBottom="@dimen/sv_dimen_28"
            android:soundEffectsEnabled="false"
            app:background4Night="@drawable/ic_main_bg_night"
            app:background4Skin="@drawable/ic_main_bg_day"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/search_category_back"
                android:layout_width="@dimen/sv_dimen_64"
                android:layout_height="@dimen/sv_dimen_64"
                android:layout_marginStart="@dimen/sv_dimen_30"
                android:layout_marginTop="@dimen/sv_dimen_30"
                android:background="@drawable/selector_ic_back_day"
                android:contentDescription="@string/sv_search_back_accessibility"
                app:background4Night="@drawable/selector_ic_back_night"
                app:background4Skin="@drawable/selector_ic_back_day"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/search_category_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户隐私授权"
                android:textColor="@color/onPrimaryDay"
                android:textSize="@dimen/sv_dimen_34"
                app:layout_constraintBottom_toBottomOf="@+id/search_category_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/search_category_back"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay" />


            <ImageView
                android:id="@+id/ivQrCodeBg"
                android:layout_width="@dimen/sv_dimen_350"
                android:layout_height="@dimen/sv_dimen_350"
                android:layout_marginTop="@dimen/sv_dimen_167"
                android:background="@drawable/shape_douyin_qrcode_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_category_title" />

            <ImageView
                android:id="@+id/ivQrCode"
                android:layout_width="@dimen/sv_dimen_308"
                android:layout_height="@dimen/sv_dimen_308"
                app:layout_constraintBottom_toBottomOf="@+id/ivQrCodeBg"
                app:layout_constraintEnd_toEndOf="@+id/ivQrCodeBg"
                app:layout_constraintStart_toStartOf="@+id/ivQrCodeBg"
                app:layout_constraintTop_toTopOf="@+id/ivQrCodeBg" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tvWeChatTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信扫码查看"
                android:textColor="@color/onPrimaryDay"
                android:layout_marginTop="@dimen/sv_dimen_48"
                android:textSize="@dimen/sv_dimen_28"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivQrCodeBg"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tvSafeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请确保驾驶安全的情况下使用"
                android:textColor="@color/onSecondaryDay"
                android:layout_marginTop="@dimen/sv_dimen_9"
                android:textSize="@dimen/sv_dimen_28"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvWeChatTitle"
                app:textColor4Night="@color/onSecondaryNight"
                app:textColor4Skin="@color/onSecondaryDay" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tvReadTitle"
                android:layout_width="@dimen/sv_dimen_480"
                android:layout_height="wrap_content"
                android:text="为了更好的保障您的合法权益，请阅读并同意《隐私条款》"
                android:textColor="@color/onSecondaryDay"
                android:layout_marginTop="@dimen/sv_dimen_130"
                android:textSize="@dimen/sv_dimen_28"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSafeTitle"
                app:textColor4Night="@color/onSecondaryNight"
                app:textColor4Skin="@color/onSecondaryDay" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tvConfirm"
                style="@style/CustomTextAppearanceBodyMedium"
                android:layout_width="@dimen/sv_dimen_400"
                android:layout_height="@dimen/sv_dimen_90"
                android:background="@drawable/selector_btn_confirm_day"
                android:gravity="center"
                android:text="同意并继续"
                android:textColor="@color/primaryDay"
                android:textSize="@dimen/sv_dimen_34"
                android:layout_marginTop="@dimen/sv_dimen_60"
                app:background4Night="@drawable/selector_btn_confirm_night"
                app:background4Skin="@drawable/selector_btn_confirm_day"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvReadTitle"
                app:textColor4Night="@color/primaryNight"
                app:textColor4Skin="@color/primaryDay"
                tools:textColor="@color/onPrimaryNight"
                tools:visibility="visible" />



        </com.autonavi.auto.skin.view.SkinConstraintLayout>


    </com.autonavi.auto.skin.view.SkinConstraintLayout>

</layout>