<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="bean"
            type="com.autonavi.gbl.user.msgpush.model.AimPushMsg" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sv_dimen_180">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_width="@dimen/sv_dimen_680">
            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/sv_dimen_64"
                android:layout_height="@dimen/sv_dimen_64"
                android:background="@drawable/ic_message_poi_day"
                app:background4Skin="@drawable/ic_message_poi_day"
                app:background4Night="@drawable/ic_message_poi_night"
                android:layout_marginTop="@dimen/sv_dimen_30"
                android:layout_marginLeft="@dimen/sv_dimen_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/message_red"
                android:layout_width="@dimen/sv_dimen_10"
                android:layout_height="@dimen/sv_dimen_10"
                android:src="@drawable/shape_bg_dot_red_day"
                app:src4Night="@drawable/shape_bg_dot_red_night"
                app:src4Skin="@drawable/shape_bg_dot_red_day"
                app:setAimPushMsgRed="@{bean}"
                android:layout_marginRight="@dimen/sv_dimen_10"
                android:layout_marginTop="@dimen/sv_dimen_10"
                app:layout_constraintRight_toRightOf="@+id/icon"
                app:layout_constraintTop_toTopOf="@+id/icon"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sv_dimen_16"
                android:layout_marginTop="@dimen/sv_dimen_36"
                android:layout_marginRight="@dimen/sv_dimen_32"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Skin="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                android:textSize="@dimen/sv_dimen_34"
                app:layout_constraintLeft_toRightOf="@+id/icon"
                app:layout_constraintRight_toLeftOf="@+id/time"
                app:layout_constraintTop_toTopOf="parent"
                app:setAimPushMsgName="@{bean}"
                tools:text="汇港城" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sv_dimen_12"
                android:textColor="@color/onSecondaryDay"
                app:textColor4Skin="@color/onSecondaryDay"
                app:textColor4Night="@color/onSecondaryNight"
                android:textSize="@dimen/sv_dimen_30"
                app:layout_constraintLeft_toLeftOf="@+id/name"
                app:layout_constraintTop_toBottomOf="@+id/name"
                app:setAimPushMsgTitle="@{bean}"
                tools:text="来自手机发送的位置" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Skin="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                android:textSize="@dimen/sv_dimen_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/more"
                app:layout_constraintTop_toTopOf="parent"
                app:setAimPushMsgTime="@{bean}"
                tools:text="02月04日" />
            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/more"
                android:layout_width="@dimen/sv_dimen_64"
                android:layout_height="@dimen/sv_dimen_64"
                android:background="@drawable/selector_ic_message_more_day"
                app:background4Skin="@drawable/selector_ic_message_more_day"
                app:background4Night="@drawable/selector_ic_message_more_night"
                android:layout_marginRight="@dimen/sv_dimen_40"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <com.autonavi.auto.skin.view.SkinView
                android:layout_width="match_parent"
                android:layout_height="@dimen/sv_dimen_1"
                android:background="@color/lineDay"
                app:background4Night="@color/lineNight"
                app:background4Skin="@color/lineDay"
                android:layout_marginLeft="@dimen/sv_dimen_30"
                android:layout_marginRight="@dimen/sv_dimen_40"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@+id/item">
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/onPrimaryContainerDay"
                app:textColor4Skin="@color/onPrimaryContainerDay"
                app:textColor4Night="@color/onPrimaryNight"
                android:textSize="@dimen/sv_dimen_34"
                android:text="@string/sv_common_delete"
                android:gravity="center"
                android:paddingHorizontal="@dimen/sv_dimen_36"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/shape_delete_message_bg" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>