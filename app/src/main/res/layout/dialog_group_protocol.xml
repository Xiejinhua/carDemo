<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:id="@+id/tip_cl"
            android:layout_width="@dimen/sv_dimen_900"
            android:layout_height="@dimen/sv_dimen_600"
            android:background="@drawable/shape_bg_custom_dialog_day"
            app:background4Skin="@drawable/shape_bg_custom_dialog_day"
            app:background4Night="@drawable/shape_bg_custom_dialog_night"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/close_tip_iv"
                android:layout_width="@dimen/sv_dimen_60"
                android:layout_height="@dimen/sv_dimen_60"
                android:layout_marginStart="@dimen/sv_dimen_30"
                android:layout_marginTop="@dimen/sv_dimen_30"
                android:src="@drawable/selector_ic_dialog_close_day"
                app:src4Skin="@drawable/selector_ic_dialog_close_day"
                app:src4Night="@drawable/selector_ic_dialog_close_night"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tip_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sv_dimen_50"
                android:text="@string/sv_group_agreement"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Skin="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                android:textSize="@dimen/sv_dimen_40"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.autonavi.auto.skin.view.SkinScrollView
                style="@style/scrollbar_style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/sv_dimen_30"
                android:layout_marginTop="@dimen/sv_dimen_44"
                android:layout_marginRight="@dimen/sv_dimen_30"
                android:layout_marginBottom="@dimen/sv_dimen_60"
                android:background="@drawable/shape_bg_custom_dialog_day"
                app:background4Skin="@drawable/shape_bg_custom_dialog_day"
                app:background4Night="@drawable/shape_bg_custom_dialog_night"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tip_title"
                android:fadingEdge="vertical"
                android:fadingEdgeLength="@dimen/sv_dimen_50"
                android:requiresFadingEdge="vertical">

                <com.autonavi.auto.skin.view.SkinTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sv_dimen_70"
                    android:layout_marginTop="@dimen/sv_dimen_31"
                    android:layout_marginRight="@dimen/sv_dimen_70"
                    android:layout_marginBottom="@dimen/sv_dimen_10"
                    android:lineSpacingMultiplier="1.3"
                    android:paddingBottom="@dimen/sv_dimen_45"
                    android:text="@string/sv_group_agreement_context"
                    android:textColor="@color/onPrimaryDay"
                    app:textColor4Skin="@color/onPrimaryDay"
                    app:textColor4Night="@color/onSecondaryNight"
                    android:textSize="@dimen/sv_dimen_28" />
            </com.autonavi.auto.skin.view.SkinScrollView>
        </com.autonavi.auto.skin.view.SkinConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>