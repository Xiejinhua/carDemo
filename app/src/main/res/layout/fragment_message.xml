<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.desaysv.psmap.ui.settings.message.MessageViewModel" />
        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/message_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/customColorBlack60Day">

        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:layout_width="@dimen/sv_dimen_680"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{()->0}"
            android:soundEffectsEnabled="false"
            android:layout_marginStart="@dimen/sv_dimen_20"
            android:layout_marginTop="@dimen/sv_dimen_90"
            android:layout_marginBottom="@dimen/sv_dimen_6"
            android:background="@drawable/ic_main_bg_day"
            app:background4Night="@drawable/ic_main_bg_night"
            app:background4Skin="@drawable/ic_main_bg_day">
            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/back"
                android:layout_width="@dimen/sv_dimen_64"
                android:layout_height="@dimen/sv_dimen_64"
                android:layout_marginLeft="@dimen/sv_dimen_30"
                android:background="@drawable/selector_ic_back_day"
                app:background4Skin="@drawable/selector_ic_back_day"
                app:background4Night="@drawable/selector_ic_back_night"
                android:layout_marginTop="@dimen/sv_dimen_30"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_tab_cl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sv_dimen_10"
                android:layout_marginTop="@dimen/sv_dimen_29"
                app:layout_constraintLeft_toRightOf="@+id/back"
                app:layout_constraintTop_toTopOf="parent">
                <RadioGroup
                    android:id="@+id/layout_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.autonavi.auto.skin.view.SkinRadioButton
                        android:id="@+id/rb_my_message"
                        android:layout_width="@dimen/sv_dimen_240"
                        android:layout_height="@dimen/sv_dimen_66"
                        android:gravity="center"
                        android:button="@null"
                        tools:checked="true"
                        android:text="@string/sv_setting_my_message"
                        android:textColor="@color/color_setting_rb_day"
                        app:textColor4Skin="@color/color_setting_rb_day"
                        app:textColor4Night="@color/color_setting_rb_night"
                        android:textSize="@dimen/sv_dimen_38"
                        app:setTypefaceBold="@{viewModel.selectTab}"
                        android:drawableBottom="@drawable/selector_bg_rb_transparent"
                        android:drawablePadding="@dimen/sv_dimen_6"/>

                    <com.autonavi.auto.skin.view.SkinRadioButton
                        android:id="@+id/rb_broadcast_message"
                        android:layout_width="@dimen/sv_dimen_240"
                        android:layout_height="@dimen/sv_dimen_66"
                        android:layout_marginLeft="@dimen/sv_dimen_24"
                        android:gravity="center"
                        android:button="@null"
                        android:text="@string/message2_stv_text1"
                        android:textColor="@color/color_setting_rb_day"
                        app:textColor4Skin="@color/color_setting_rb_day"
                        app:textColor4Night="@color/color_setting_rb_night"
                        android:textSize="@dimen/sv_dimen_38"
                        app:setTypefaceBold="@{!viewModel.selectTab}"
                        android:drawableBottom="@drawable/selector_bg_rb_transparent"
                        android:drawablePadding="@dimen/sv_dimen_6"/>
                </RadioGroup>

                <com.autonavi.auto.skin.view.SkinImageView
                    android:id="@+id/my_message_red"
                    android:layout_width="@dimen/sv_dimen_10"
                    android:layout_height="@dimen/sv_dimen_10"
                    android:src="@drawable/shape_bg_dot_red_day"
                    app:src4Night="@drawable/shape_bg_dot_red_night"
                    app:src4Skin="@drawable/shape_bg_dot_red_day"
                    app:visibleGone="@{viewModel.myMessageRed}"
                    android:layout_marginLeft="@dimen/sv_dimen_198"
                    android:layout_marginTop="@dimen/sv_dimen_4"
                    app:layout_constraintLeft_toLeftOf="@+id/layout_tab"
                    app:layout_constraintTop_toTopOf="@+id/layout_tab"
                    android:visibility="gone"
                    tools:visibility="visible" />
                <com.autonavi.auto.skin.view.SkinImageView
                    android:id="@+id/broadcast_message_red"
                    android:layout_width="@dimen/sv_dimen_10"
                    android:layout_height="@dimen/sv_dimen_10"
                    android:src="@drawable/shape_bg_dot_red_day"
                    app:src4Night="@drawable/shape_bg_dot_red_night"
                    app:src4Skin="@drawable/shape_bg_dot_red_day"
                    app:visibleGone="@{viewModel.broadcastMessageRed}"
                    android:layout_marginRight="@dimen/sv_dimen_32"
                    android:layout_marginTop="@dimen/sv_dimen_4"
                    app:layout_constraintRight_toRightOf="@+id/layout_tab"
                    app:layout_constraintTop_toTopOf="@+id/layout_tab"
                    android:visibility="gone"
                    tools:visibility="visible" />
                <!-- 底部指示条 -->
                <com.autonavi.auto.skin.view.SkinImageView
                    android:id="@+id/indicator"
                    android:layout_width="@dimen/sv_dimen_240"
                    android:layout_height="@dimen/sv_dimen_4"
                    android:src="@drawable/ic_rb_day"
                    app:src4Skin="@drawable/ic_rb_day"
                    app:src4Night="@drawable/ic_rb_night"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.desaysv.psmap.model.view.DampingReboundNestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/sv_dimen_29"
                android:layout_marginBottom="@dimen/sv_dimen_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:visibleGone="@{!viewModel.isLoading &amp;&amp; viewModel.hasAimData &amp;&amp; viewModel.selectTab}">
                <com.desaysv.psmap.ui.search.view.SlideRecyclerView
                    android:id="@+id/my_message_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:listSelector="@android:color/transparent"
                    android:overScrollMode="never"
                    android:requiresFadingEdge="horizontal"
                    android:scrollbars="vertical"
                    android:scrollbarSize="@dimen/sv_dimen_3"
                    android:scrollbarStyle="insideOverlay"
                    android:scrollbarThumbVertical="@drawable/shape_account_scrollbar_thumb"
                    android:paddingLeft="@dimen/sv_dimen_10"
                    app:setLayoutManager="@{true}" />
            </com.desaysv.psmap.model.view.DampingReboundNestedScrollView>

            <com.desaysv.psmap.model.view.DampingReboundNestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/sv_dimen_29"
                android:layout_marginBottom="@dimen/sv_dimen_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:visibleGone="@{!viewModel.isLoading &amp;&amp; viewModel.hasTeamData &amp;&amp; !viewModel.selectTab}">
                <com.desaysv.psmap.ui.search.view.SlideRecyclerView
                    android:id="@+id/broadcast_message_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:listSelector="@android:color/transparent"
                    android:overScrollMode="never"
                    android:requiresFadingEdge="horizontal"
                    android:scrollbars="vertical"
                    android:scrollbarSize="@dimen/sv_dimen_3"
                    android:scrollbarStyle="insideOverlay"
                    android:scrollbarThumbVertical="@drawable/shape_account_scrollbar_thumb"
                    android:paddingLeft="@dimen/sv_dimen_10"
                    app:setLayoutManager="@{true}" />
            </com.desaysv.psmap.model.view.DampingReboundNestedScrollView>

            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="@dimen/sv_dimen_80"
                android:layout_height="@dimen/sv_dimen_80"
                android:indeterminateBehavior="repeat"
                android:indeterminateDrawable="@drawable/rotate_loading_view_day"
                app:setActiveIndeterminateDrawable="@{viewModel.themeChange}"
                android:indeterminateOnly="true"
                app:visibleGone="@{viewModel.isLoading}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/loading_tip"
                app:layout_constraintVertical_chainStyle="packed"
                tools:visibility="gone" />
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/loading_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/routecarresultrestrictedarea_text_fail"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                android:includeFontPadding="false"
                android:textSize="@dimen/sv_dimen_38"
                tools:visibility="gone"
                app:visibleGone="@{viewModel.isLoading}"
                android:layout_marginTop="@dimen/sv_dimen_40"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loading"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/empty"
                android:layout_width="@dimen/sv_dimen_200"
                android:layout_height="@dimen/sv_dimen_200"
                android:background="@drawable/ic_message_empty_day"
                app:background4Night="@drawable/ic_message_empty_night"
                app:background4Skin="@drawable/ic_message_empty_day"
                android:layout_marginTop="@dimen/sv_dimen_225"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/back"
                tools:visibility="visible"
                app:visibleGone="@{!viewModel.isLoading &amp;&amp; ((!viewModel.hasAimData &amp;&amp; viewModel.selectTab) || (!viewModel.hasTeamData &amp;&amp; !viewModel.selectTab))}" />
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/sv_setting_no_message"
                tools:visibility="visible"
                app:visibleGone="@{!viewModel.isLoading &amp;&amp; ((!viewModel.hasAimData &amp;&amp; viewModel.selectTab) || (!viewModel.hasTeamData &amp;&amp; !viewModel.selectTab))}"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Skin="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                android:textSize="@dimen/sv_dimen_28"
                android:layout_marginTop="@dimen/sv_dimen_40"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/empty"/>
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tip_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="@string/sv_setting_message_tip"
                tools:visibility="visible"
                android:text="@{viewModel.messageTip}"
                app:visibleGone="@{!viewModel.isLoading &amp;&amp; ((!viewModel.hasAimData &amp;&amp; viewModel.selectTab) || (!viewModel.hasTeamData &amp;&amp; !viewModel.selectTab))}"
                android:textColor="@color/onSecondaryDay"
                app:textColor4Skin="@color/onSecondaryDay"
                app:textColor4Night="@color/onSecondaryNight"
                android:textSize="@dimen/sv_dimen_24"
                android:layout_marginTop="@dimen/sv_dimen_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tip"/>
        </com.autonavi.auto.skin.view.SkinConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>