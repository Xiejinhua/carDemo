<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.desaysv.psmap.ui.settings.trip.MyTripViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/customColorBlack60Day">
        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:id="@+id/layout"
            android:layout_width="@dimen/sv_dimen_680"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{()->0}"
            android:soundEffectsEnabled="false"
            android:layout_marginStart="@dimen/sv_dimen_20"
            android:layout_marginTop="@dimen/sv_dimen_90"
            android:layout_marginBottom="@dimen/sv_dimen_6"
            android:background="@drawable/ic_main_bg_day"
            app:background4Night="@drawable/ic_main_bg_night"
            app:background4Skin="@drawable/ic_main_bg_day">
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/back"
                android:layout_width="@dimen/sv_dimen_64"
                android:layout_height="@dimen/sv_dimen_64"
                android:layout_marginLeft="@dimen/sv_dimen_30"
                android:background="@drawable/selector_ic_back_day"
                app:background4Night="@drawable/selector_ic_back_night"
                app:background4Skin="@drawable/selector_ic_back_day"
                android:layout_marginTop="@dimen/sv_dimen_30"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/sv_setting_rb15"
                android:text="@{viewModel.title}"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Skin="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                android:textSize="@dimen/sv_dimen_34"
                android:layout_marginTop="@dimen/sv_dimen_37"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/trip_setting"
                android:layout_width="@dimen/sv_dimen_64"
                android:layout_height="@dimen/sv_dimen_64"
                android:background="@drawable/selector_ic_trip_setting_day"
                app:background4Night="@drawable/selector_ic_trip_setting_night"
                app:background4Skin="@drawable/selector_ic_trip_setting_day"
                android:layout_marginTop="@dimen/sv_dimen_30"
                android:layout_marginRight="@dimen/sv_dimen_30"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:visibleGone="@{!viewModel.showTripSetting}"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/empty_no_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:visibility="gone"
                app:visibleGone="@{!viewModel.isNotEmptyData &amp;&amp; !viewModel.showTripSetting}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <com.autonavi.auto.skin.view.SkinImageView
                    android:id="@+id/no_trip_no_login_ic"
                    android:layout_width="@dimen/sv_dimen_200"
                    android:layout_height="@dimen/sv_dimen_200"
                    android:background="@drawable/ic_message_empty_day"
                    app:background4Night="@drawable/ic_message_empty_night"
                    app:background4Skin="@drawable/ic_message_empty_day"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/no_trip_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"/>
                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/no_trip_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sv_setting_current_no_trip"
                    android:textColor="@color/onPrimaryDay"
                    app:textColor4Skin="@color/onPrimaryDay"
                    app:textColor4Night="@color/onPrimaryNight"
                    android:textSize="@dimen/sv_dimen_28"
                    android:layout_marginTop="@dimen/sv_dimen_40"
                    app:layout_constraintTop_toBottomOf="@+id/no_trip_no_login_ic"
                    app:layout_constraintBottom_toTopOf="@+id/open_trip_text"
                    app:layout_constraintLeft_toLeftOf="@+id/no_trip_no_login_ic"
                    app:layout_constraintRight_toRightOf="@+id/no_trip_no_login_ic"/>
                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/open_trip_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sv_setting_use_gd_open_trip"
                    android:textColor="@color/onSecondaryDay"
                    app:textColor4Skin="@color/onSecondaryDay"
                    app:textColor4Night="@color/onSecondaryNight"
                    android:textSize="@dimen/sv_dimen_24"
                    android:layout_marginTop="@dimen/sv_dimen_12"
                    app:layout_constraintBottom_toTopOf="@+id/login_text"
                    app:layout_constraintTop_toBottomOf="@+id/no_trip_text"
                    app:layout_constraintLeft_toLeftOf="@+id/no_trip_no_login_ic"
                    app:layout_constraintRight_toRightOf="@+id/no_trip_no_login_ic"/>

                <com.desaysv.psmap.model.view.ShadowLayout
                    android:id="@+id/login_text"
                    android:layout_width="@dimen/sv_dimen_304"
                    android:layout_height="@dimen/sv_dimen_90"
                    app:visibleGone="@{!viewModel.loginState}"
                    android:background="@drawable/selector_bg_confirm_day"
                    app:background4Skin="@drawable/selector_bg_confirm_day"
                    app:background4Night="@drawable/selector_bg_confirm_night"
                    android:layout_marginBottom="@dimen/sv_dimen_30"
                    android:layout_marginTop="@dimen/sv_dimen_40"
                    app:layout_constraintTop_toBottomOf="@+id/open_trip_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@+id/no_trip_no_login_ic"
                    app:layout_constraintRight_toRightOf="@+id/no_trip_no_login_ic"
                    app:radius="@dimen/sv_dimen_4"
                    app:setShadowColor="@{viewModel.isNight}"
                    app:shadowColor="@color/customColorShadowColorDay"
                    app:shadowDx="@dimen/sv_dimen_2"
                    app:shadowDy="@dimen/sv_dimen_2"
                    app:shadowRadius="@dimen/sv_dimen_10">
                    <com.autonavi.auto.skin.view.SkinTextView
                        android:layout_width="@dimen/sv_dimen_304"
                        android:layout_height="@dimen/sv_dimen_90"
                        android:text="@string/sv_setting_login_trip"
                        android:textColor="@color/customAhaSecenicPointTextDay"
                        app:textColor4Skin="@color/customAhaSecenicPointTextDay"
                        app:textColor4Night="@color/onPrimaryNight"
                        android:textSize="@dimen/sv_dimen_34"
                        android:gravity="center" />
                </com.desaysv.psmap.model.view.ShadowLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:visibility="visible"
                app:visibleGone="@{viewModel.showTripSetting}"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintLeft_toLeftOf="parent">
                <com.sy.swbt.SettingSwitchView
                    android:id="@+id/auto_record_trip_switch"
                    style="@style/switch_style_night"
                    android:layout_marginLeft="@dimen/sv_dimen_40"
                    android:layout_marginTop="@dimen/sv_dimen_67"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/auto_record_trip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trace_setting_text_auto_matic_content"
                    android:textColor="@color/onPrimaryDay"
                    app:textColor4Skin="@color/onPrimaryDay"
                    app:textColor4Night="@color/onPrimaryNight"
                    android:textSize="@dimen/sv_dimen_34"
                    android:layout_marginLeft="@dimen/sv_dimen_32"
                    app:layout_constraintTop_toTopOf="@+id/auto_record_trip_switch"
                    app:layout_constraintBottom_toBottomOf="@+id/auto_record_trip_switch"
                    app:layout_constraintLeft_toRightOf="@+id/auto_record_trip_switch"/>
                <com.autonavi.auto.skin.view.SkinImageView
                    android:id="@+id/auto_record_trip_info"
                    android:layout_width="@dimen/sv_dimen_64"
                    android:layout_height="@dimen/sv_dimen_64"
                    android:background="@drawable/selector_ic_more_info_tip_day"
                    app:background4Skin="@drawable/selector_ic_more_info_tip_day"
                    app:background4Night="@drawable/selector_ic_more_info_tip_night"
                    android:importantForAccessibility="no"
                    android:layout_marginRight="@dimen/sv_dimen_40"
                    android:layout_marginTop="@dimen/sv_dimen_58"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/clear_record_trip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trace_setting_text_clean_trace"
                    android:textColor="@color/onPrimaryDay"
                    app:textColor4Skin="@color/onPrimaryDay"
                    app:textColor4Night="@color/onPrimaryNight"
                    android:textSize="@dimen/sv_dimen_34"
                    android:layout_marginLeft="@dimen/sv_dimen_40"
                    android:layout_marginTop="@dimen/sv_dimen_70"
                    app:layout_constraintTop_toBottomOf="@+id/auto_record_trip_switch"
                    app:layout_constraintLeft_toLeftOf="parent" />
                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/clear_record_trip_btn"
                    android:layout_width="@dimen/sv_dimen_64"
                    android:layout_height="@dimen/sv_dimen_64"
                    android:background="@drawable/selector_ic_favorite_delete_day"
                    app:background4Night="@drawable/selector_ic_favorite_delete_night"
                    app:background4Skin="@drawable/selector_ic_favorite_delete_day"
                    android:enabled="@{viewModel.isNotEmptyData}"
                    app:setViewAlpha="@{viewModel.isNotEmptyData}"
                    android:layout_marginRight="@dimen/sv_dimen_40"
                    app:layout_constraintRight_toLeftOf="@+id/clear_record_trip_info"
                    app:layout_constraintTop_toTopOf="@+id/clear_record_trip"
                    app:layout_constraintBottom_toBottomOf="@+id/clear_record_trip"/>
                <com.autonavi.auto.skin.view.SkinImageView
                    android:id="@+id/clear_record_trip_info"
                    android:layout_width="@dimen/sv_dimen_64"
                    android:layout_height="@dimen/sv_dimen_64"
                    android:background="@drawable/selector_ic_more_info_tip_day"
                    app:background4Skin="@drawable/selector_ic_more_info_tip_day"
                    app:background4Night="@drawable/selector_ic_more_info_tip_night"
                    android:importantForAccessibility="no"
                    android:layout_marginRight="@dimen/sv_dimen_40"
                    app:layout_constraintTop_toTopOf="@+id/clear_record_trip"
                    app:layout_constraintBottom_toBottomOf="@+id/clear_record_trip"
                    app:layout_constraintRight_toRightOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.desaysv.psmap.ui.search.view.CustomRefreshLayout
                android:id="@+id/refreshLayout"
                app:srlEnablePureScrollMode="false"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:srlAccentColor="@android:color/transparent"
                app:srlDisableContentWhenLoading="true"
                app:srlDisableContentWhenRefresh="true"
                app:srlEnableAutoLoadMore="false"
                app:srlEnableLoadMoreWhenContentNotFull="true"
                app:srlEnableOverScrollBounce="true"
                app:srlEnableOverScrollDrag="true"
                app:srlEnableScrollContentWhenLoaded="true"
                app:srlEnablePreviewInEditMode="true"
                app:srlEnableScrollContentWhenRefreshed="true"
                app:srlPrimaryColor="@android:color/transparent"
                app:srlReboundDuration="200"
                app:visibleGone="@{viewModel.isNotEmptyData &amp;&amp; !viewModel.showTripSetting}"
                tools:visibility="visible"
                android:layout_marginTop="@dimen/sv_dimen_30"
                android:layout_marginBottom="@dimen/sv_dimen_6"
                android:layout_marginLeft="@dimen/sv_dimen_24"
                android:layout_marginRight="@dimen/sv_dimen_34"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <com.desaysv.psmap.ui.search.view.SlideRecyclerView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:requiresFadingEdge="horizontal"
                    app:setLayoutManager="@{true}"
                    tools:visibility="visible" />
            </com.desaysv.psmap.ui.search.view.CustomRefreshLayout>
        </com.autonavi.auto.skin.view.SkinConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>