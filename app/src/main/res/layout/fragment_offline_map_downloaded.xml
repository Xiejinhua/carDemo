<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.desaysv.psmap.ui.settings.offlinedata.download.OfflineMapDownloadedViewModel" />
    </data>

    <com.autonavi.auto.skin.view.SkinConstraintLayout
        android:id="@+id/cl_offline_data_downloaded"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/sv_dimen_26"
        tools:background="@color/white"
        tools:layout_width="@dimen/sv_dimen_640">
        <com.desaysv.psmap.model.view.DampingReboundNestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/sv_dimen_26">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/offline_data_update_tip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sv_dimen_56"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="更新全部1个城市 2.8M"
                    android:text="@{viewModel.updateTip}"
                    android:textColor="@color/onSecondaryDay"
                    app:textColor4Skin="@color/onSecondaryDay"
                    app:textColor4Night="@color/onSecondaryNight"
                    android:textSize="@dimen/sv_dimen_28"
                    android:gravity="center"
                    app:visibleGone="@{!viewModel.isLoading &amp;&amp; viewModel.hasUpdateData}"
                    android:background="@color/customSettingErrorInputBgDay"
                    app:background4Skin="@color/customSettingErrorInputBgDay"
                    app:background4Night="@color/inversePrimaryNight"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/update_citylist"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/offline_data_update_tip"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="@dimen/sv_dimen_40"
                    android:overScrollMode="never"
                    app:setLayoutManager="@{true}"
                    app:visibleGone="@{!viewModel.isLoading &amp;&amp; viewModel.hasUpdateData}"/>
                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/offline_data_downloaded_tip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sv_dimen_56"
                    app:layout_constraintTop_toBottomOf="@+id/update_citylist"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="以下2个城市下载成功"
                    android:text="@{viewModel.downloadedTip}"
                    android:textColor="@color/onSecondaryDay"
                    app:textColor4Skin="@color/onSecondaryDay"
                    app:textColor4Night="@color/onSecondaryNight"
                    android:textSize="@dimen/sv_dimen_28"
                    android:gravity="center"
                    app:visibleGone="@{!viewModel.isLoading &amp;&amp; viewModel.hasDownloadedData}"
                    android:background="@color/customSettingErrorInputBgDay"
                    app:background4Skin="@color/customSettingErrorInputBgDay"
                    app:background4Night="@color/inversePrimaryNight"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/downloaded_citylist"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/offline_data_downloaded_tip"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="@dimen/sv_dimen_40"
                    android:overScrollMode="never"
                    app:setLayoutManager="@{true}"
                    app:visibleGone="@{!viewModel.isLoading &amp;&amp; viewModel.hasDownloadedData}"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.desaysv.psmap.model.view.DampingReboundNestedScrollView>

        <com.autonavi.auto.skin.view.SkinImageView
            android:id="@+id/downloading_no_data_iv"
            android:layout_width="@dimen/sv_dimen_200"
            android:layout_height="@dimen/sv_dimen_200"
            android:scaleType="fitXY"
            android:background="@drawable/ic_message_empty_day"
            app:background4Night="@drawable/ic_message_empty_night"
            app:background4Skin="@drawable/ic_message_empty_day"
            android:layout_marginTop="@dimen/sv_dimen_202"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:visibleGone="@{!viewModel.isLoading &amp;&amp; !viewModel.hasUpdateData &amp;&amp; !viewModel.hasDownloadedData}"
            tools:visibility="visible"/>
        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/downloading_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sv_dimen_40"
            app:layout_constraintTop_toBottomOf="@+id/downloading_no_data_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/offline_downloadmanager_text_offline_data_downloaded_no"
            android:textColor="@color/onPrimaryDay"
            app:textColor4Skin="@color/onPrimaryDay"
            app:textColor4Night="@color/onPrimaryNight"
            android:textSize="@dimen/sv_dimen_28"
            android:gravity="center"
            app:visibleGone="@{!viewModel.isLoading &amp;&amp; !viewModel.hasUpdateData &amp;&amp; !viewModel.hasDownloadedData}"/>

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="@dimen/sv_dimen_80"
            android:layout_height="@dimen/sv_dimen_80"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/rotate_loading_view_day"
            app:setActiveIndeterminateDrawable="@{viewModel.isNight}"
            android:indeterminateOnly="true"
            app:visibleGone="@{viewModel.isLoading}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/loading_tip"
            app:layout_constraintVertical_chainStyle="packed"
            tools:visibility="gone" />
        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/loading_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/routecarresultrestrictedarea_text_fail"
            android:textColor="@color/onPrimaryDay"
            app:textColor4Night="@color/onPrimaryNight"
            app:textColor4Skin="@color/onPrimaryDay"
            android:includeFontPadding="false"
            android:textSize="@dimen/sv_dimen_38"
            tools:visibility="gone"
            app:visibleGone="@{viewModel.isLoading}"
            android:layout_marginTop="@dimen/sv_dimen_40"
            android:layout_marginBottom="@dimen/sv_dimen_92"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loading"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </com.autonavi.auto.skin.view.SkinConstraintLayout>
</layout>