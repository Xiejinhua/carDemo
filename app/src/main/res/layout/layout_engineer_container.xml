<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.desaysv.psmap.ui.engineer.MainEngineerViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="@dimen/sv_dimen_500">

        <TextView
            android:id="@+id/gps_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sv_dimen_15"
            android:text="@{viewModel.debugInfo}"
            android:textAllCaps="false"
            android:textColor="#f00"
            android:textSize="@dimen/sv_dimen_24"
            app:layout_constraintBottom_toTopOf="@+id/pos_replay_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            visibleGone="@{viewModel.showDebugInfo}"
            tool:visibility="visible" />

        <TextView
            android:id="@+id/sensorparainfo_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sv_dimen_50"
            android:layout_marginBottom="@dimen/sv_dimen_15"
            android:text="@{viewModel.drInfo}"
            android:textAllCaps="false"
            android:textColor="#f00"
            android:textSize="@dimen/sv_dimen_24"
            app:layout_constraintBottom_toTopOf="@+id/pos_replay_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/gps_msg"
            visibleGone="@{viewModel.showDebugInfo}"
            tool:visibility="visible" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pos_replay_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tool:visibility="visible">

            <Button
                android:id="@+id/show_float_msg"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sv_dimen_60"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="#3f000000"
                android:text="@string/sv_engineer_pos_debug_info"
                android:textColor="#f00"
                android:textSize="@dimen/sv_dimen_24"
                android:onClick="@{() -> viewModel.showDebugInfo(!viewModel.showDebugInfo)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                visibleGone="@{viewModel.gpsTest}"
                tool:visibility="visible" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/go_btn_replay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                visibleGone="@{viewModel.replayPosTest}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toEndOf="@+id/show_float_msg">

                <Button
                    android:id="@+id/start_btn_replay"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sv_dimen_60"
                    android:background="#3f000000"
                    android:onClick="@{() -> viewModel.startReplay()}"
                    android:text="@string/sv_engineer_pos_replay_start"
                    android:textColor="#f00"
                    android:textSize="@dimen/sv_dimen_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <Button
                    android:id="@+id/pause_btn_replay"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sv_dimen_60"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="#3f000000"
                    android:onClick="@{() -> viewModel.pauseReplay()}"
                    android:text="@string/sv_engineer_pos_replay_pause"
                    android:textColor="#f00"
                    android:textSize="@dimen/sv_dimen_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/start_btn_replay" />

                <Button
                    android:id="@+id/resume_btn_replay"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sv_dimen_60"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="#3f000000"
                    android:onClick="@{() -> viewModel.resumeReplay()}"
                    android:text="@string/sv_engineer_pos_replay_resume"
                    android:textColor="#f00"
                    android:textSize="@dimen/sv_dimen_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/pause_btn_replay" />

                <Button
                    android:id="@+id/end_btn_replay"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sv_dimen_60"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="#3f000000"
                    android:onClick="@{() -> viewModel.stopReplay()}"
                    android:text="@string/sv_engineer_pos_replay_exit"
                    android:textColor="#f00"
                    android:textSize="@dimen/sv_dimen_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/resume_btn_replay"
                    tool:visibility="visible" />

                <Button
                    android:id="@+id/replay_file_select"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sv_dimen_60"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="#3f000000"
                    android:onClick="@{() -> viewModel.switchReplayLocFile()}"
                    android:text="@{viewModel.locFileName}"
                    android:textAllCaps="false"
                    android:textColor="#f00"
                    android:textSize="@dimen/sv_dimen_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/end_btn_replay"
                    tool:text="@string/sv_engineer_pos_replay_file"
                    tool:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>