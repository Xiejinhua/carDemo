<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.desaysv.psmap.ui.ahatrip.AhaTripMainViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/customColorBlack60Day">
        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:id="@+id/layout"
            android:layout_width="@dimen/sv_dimen_680"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{()->0}"
            android:soundEffectsEnabled="false"
            android:layout_marginStart="@dimen/sv_dimen_20"
            android:layout_marginTop="@dimen/sv_dimen_90"
            android:layout_marginBottom="@dimen/sv_dimen_6"
            android:background="@drawable/ic_main_bg_day"
            app:background4Night="@drawable/ic_main_bg_night"
            app:background4Skin="@drawable/ic_main_bg_day">
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/back"
                android:layout_width="@dimen/sv_dimen_64"
                android:layout_height="@dimen/sv_dimen_64"
                android:layout_marginLeft="@dimen/sv_dimen_30"
                android:background="@drawable/selector_ic_back_day"
                app:background4Night="@drawable/selector_ic_back_night"
                app:background4Skin="@drawable/selector_ic_back_day"
                android:layout_marginTop="@dimen/sv_dimen_30"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sv_custom_trip"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Skin="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                android:textSize="@dimen/sv_dimen_34"
                android:layout_marginTop="@dimen/sv_dimen_37"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.desaysv.psmap.ui.ahatrip.AhaSearchBoxView
                android:id="@+id/search_box"
                android:layout_width="@dimen/sv_dimen_472"
                android:layout_height="@dimen/sv_dimen_72"
                android:layout_marginTop="@dimen/sv_dimen_28"
                android:layout_marginLeft="@dimen/sv_dimen_40"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/back"
                tools:background="@color/black"/>

            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/user_image"
                android:layout_width="@dimen/sv_dimen_72"
                android:layout_height="@dimen/sv_dimen_72"
                android:src="@drawable/ic_aha_user_center_day"
                app:src4Skin="@drawable/ic_aha_user_center_day"
                app:src4Night="@drawable/ic_aha_user_center_night"
                android:layout_marginRight="@dimen/sv_dimen_40"
                android:layout_marginTop="@dimen/sv_dimen_28"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/back" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_tab_cl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sv_dimen_40"
                android:layout_marginTop="@dimen/sv_dimen_30"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_image">
                <RadioGroup
                    android:id="@+id/layout_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.autonavi.auto.skin.view.SkinRadioButton
                        android:id="@+id/rb_day"
                        android:layout_width="@dimen/sv_dimen_116"
                        android:layout_height="@dimen/sv_dimen_72"
                        android:gravity="center"
                        android:button="@null"
                        tools:checked="true"
                        android:text="@string/sv_custom_trip_day"
                        android:textColor="@color/color_aha_rb_day"
                        app:textColor4Skin="@color/color_aha_rb_day"
                        app:textColor4Night="@color/color_aha_rb_night"
                        android:textSize="@dimen/sv_dimen_34"
                        app:setTypefaceBold="@{viewModel.selectTab}" />

                    <com.autonavi.auto.skin.view.SkinRadioButton
                        android:id="@+id/rb_score"
                        android:layout_width="@dimen/sv_dimen_116"
                        android:layout_height="@dimen/sv_dimen_72"
                        android:layout_marginLeft="@dimen/sv_dimen_60"
                        android:gravity="center"
                        android:button="@null"
                        android:text="@string/sv_custom_trip_score"
                        android:textColor="@color/color_aha_rb_day"
                        app:textColor4Skin="@color/color_aha_rb_day"
                        app:textColor4Night="@color/color_aha_rb_night"
                        android:textSize="@dimen/sv_dimen_34"
                        app:setTypefaceBold="@{!viewModel.selectTab}" />
                </RadioGroup>
                <!-- 底部指示条 -->
                <com.autonavi.auto.skin.view.SkinImageView
                    android:id="@+id/indicator"
                    android:layout_width="@dimen/sv_dimen_116"
                    android:layout_height="@dimen/sv_dimen_72"
                    android:src="@drawable/shape_btn_confirm_day"
                    app:src4Skin="@drawable/shape_btn_confirm_day"
                    app:src4Night="@drawable/shape_aha_rb_night"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.desaysv.psmap.ui.search.view.CustomRefreshLayout
                android:id="@+id/refreshLayout"
                app:srlEnablePureScrollMode="false"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:srlAccentColor="@android:color/transparent"
                app:srlDisableContentWhenLoading="true"
                app:srlDisableContentWhenRefresh="true"
                app:srlEnableAutoLoadMore="false"
                app:srlEnableLoadMoreWhenContentNotFull="true"
                app:srlEnableOverScrollBounce="true"
                app:srlEnableOverScrollDrag="true"
                app:srlEnableScrollContentWhenLoaded="true"
                app:srlEnablePreviewInEditMode="true"
                app:srlEnableScrollContentWhenRefreshed="true"
                app:srlPrimaryColor="@android:color/transparent"
                app:srlReboundDuration="200"
                app:visibleGone="@{!viewModel.lineLoading &amp;&amp; viewModel.lineAllList.size() > 0}"
                tools:visibility="visible"
                android:layout_marginTop="@dimen/sv_dimen_1"
                android:layout_marginBottom="@dimen/sv_dimen_20"
                android:layout_marginLeft="@dimen/sv_dimen_40"
                android:layout_marginRight="@dimen/sv_dimen_40"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_tab_cl"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tripList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    android:requiresFadingEdge="horizontal"
                    app:setLayoutManager="@{true}"
                    tools:visibility="visible" />
            </com.desaysv.psmap.ui.search.view.CustomRefreshLayout>

            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="@dimen/sv_dimen_80"
                android:layout_height="@dimen/sv_dimen_80"
                android:indeterminateBehavior="repeat"
                android:indeterminateDrawable="@drawable/rotate_loading_view_day"
                app:setActiveIndeterminateDrawable="@{viewModel.themeChange}"
                android:indeterminateOnly="true"
                app:visibleGone="@{viewModel.lineLoading}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_tab_cl"
                app:layout_constraintBottom_toTopOf="@+id/loading_tip"
                app:layout_constraintVertical_chainStyle="packed"
                tools:visibility="visible" />
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/loading_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/routecarresultrestrictedarea_text_fail"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                android:includeFontPadding="false"
                android:textSize="@dimen/sv_dimen_38"
                tools:visibility="visible"
                app:visibleGone="@{viewModel.lineLoading}"
                android:layout_marginTop="@dimen/sv_dimen_40"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loading"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/empty"
                android:layout_width="@dimen/sv_dimen_200"
                android:layout_height="@dimen/sv_dimen_200"
                android:background="@drawable/ic_message_empty_day"
                app:background4Night="@drawable/ic_message_empty_night"
                app:background4Skin="@drawable/ic_message_empty_day"
                android:layout_marginTop="@dimen/sv_dimen_190"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_tab_cl"
                app:layout_constraintBottom_toTopOf="@+id/tip"
                tools:visibility="visible"
                app:visibleGone="@{!viewModel.lineLoading &amp;&amp; viewModel.lineAllList.size() &lt;= 0}"/>
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/sv_custom_trip_no_data"
                tools:visibility="visible"
                android:textColor="@color/onSecondaryDay"
                app:textColor4Skin="@color/onSecondaryDay"
                app:textColor4Night="@color/onSecondaryNight"
                android:textSize="@dimen/sv_dimen_28"
                android:layout_marginTop="@dimen/sv_dimen_40"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/empty"
                app:visibleGone="@{!viewModel.lineLoading &amp;&amp; viewModel.lineAllList.size() &lt;= 0}"/>
        </com.autonavi.auto.skin.view.SkinConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>