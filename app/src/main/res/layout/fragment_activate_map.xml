<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.desaysv.psmap.ui.activate.ActivateMapViewModel" />
        <import type="android.text.TextUtils"/>
    </data>

    <com.autonavi.auto.skin.view.SkinConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_active_bg_day"
        app:background4Night="@drawable/shape_active_bg_night"
        app:background4Skin="@drawable/shape_active_bg_day">
        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:marginActivateAgreement="@{!viewModel.screenStatus}">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/normal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:visibility="gone"
                app:visibleGone="@{viewModel.activeLayoutType == 3 &amp;&amp; !viewModel.isActivating}">
                <com.autonavi.auto.skin.view.SkinImageView
                    android:id="@+id/ic_start_up"
                    android:layout_width="@dimen/sv_dimen_300"
                    android:layout_height="@dimen/sv_dimen_300"
                    android:layout_marginTop="@dimen/sv_dimen_80"
                    android:background="@drawable/ic_start_up_day"
                    app:background4Night="@drawable/ic_start_up_night"
                    app:background4Skin="@drawable/ic_start_up_day"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/normal_tip"
                    app:layout_constraintVertical_chainStyle="packed"/>
                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/normal_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sv_activation_no_file_active"
                    android:textSize="@dimen/sv_dimen_34"
                    android:textColor="@color/onPrimaryDay"
                    app:textColor4Night="@color/onPrimaryNight"
                    app:textColor4Skin="@color/onPrimaryDay"
                    android:layout_marginTop="@dimen/sv_dimen_32"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ic_start_up"
                    app:layout_constraintBottom_toTopOf="@+id/normal_manual"/>
                <com.desaysv.psmap.model.view.ShadowLayout
                    android:id="@+id/normal_manual"
                    android:layout_width="@dimen/sv_dimen_400"
                    android:layout_height="@dimen/sv_dimen_90"
                    android:background="@drawable/selector_bg_report_btn_day"
                    app:background4Night="@drawable/selector_bg_report_btn_night"
                    app:background4Skin="@drawable/selector_bg_report_btn_day"
                    android:layout_marginTop="@dimen/sv_dimen_44"
                    app:layout_constraintTop_toBottomOf="@+id/normal_tip"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/normal_net"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:radius="@dimen/sv_dimen_4"
                    app:setShadowColor="@{viewModel.isNight}"
                    app:shadowColor="@color/customColorShadowColorDay"
                    app:shadowDx="@dimen/sv_dimen_2"
                    app:shadowDy="@dimen/sv_dimen_2"
                    app:shadowRadius="@dimen/sv_dimen_10">
                    <com.autonavi.auto.skin.view.SkinTextView
                        android:layout_width="@dimen/sv_dimen_400"
                        android:layout_height="@dimen/sv_dimen_90"
                        android:gravity="center"
                        android:text="@string/sv_activation_manual_activation"
                        android:textColor="@color/customAhaSecenicPointTextDay"
                        app:textColor4Night="@color/onPrimaryContainerNight"
                        app:textColor4Skin="@color/customAhaSecenicPointTextDay"
                        android:textSize="@dimen/sv_dimen_34" />
                </com.desaysv.psmap.model.view.ShadowLayout>
                <com.desaysv.psmap.model.view.ShadowLayout
                    android:id="@+id/normal_net"
                    android:layout_width="@dimen/sv_dimen_400"
                    android:layout_height="@dimen/sv_dimen_90"
                    android:background="@drawable/selector_bg_inverse_primary_day"
                    app:background4Skin="@drawable/selector_bg_inverse_primary_day"
                    app:background4Night="@drawable/selector_btn_confirm_login_night"
                    android:layout_marginLeft="@dimen/sv_dimen_80"
                    app:layout_constraintTop_toTopOf="@+id/normal_manual"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/normal_manual"
                    app:radius="@dimen/sv_dimen_4"
                    app:setShadowColor="@{viewModel.isNight}"
                    app:shadowColor="@color/customColorShadowColorDay"
                    app:shadowDx="@dimen/sv_dimen_2"
                    app:shadowDy="@dimen/sv_dimen_2"
                    app:shadowRadius="@dimen/sv_dimen_10">
                    <com.autonavi.auto.skin.view.SkinTextView
                        android:layout_width="@dimen/sv_dimen_400"
                        android:layout_height="@dimen/sv_dimen_90"
                        android:gravity="center"
                        android:text="@string/sv_activation_net_activation"
                        android:textColor="@color/primaryDay"
                        app:textColor4Night="@color/onPrimaryNight"
                        app:textColor4Skin="@color/primaryDay"
                        android:textSize="@dimen/sv_dimen_34" />
                </com.desaysv.psmap.model.view.ShadowLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/manual_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:visibleGone="@{viewModel.activeLayoutType == 0 &amp;&amp; !viewModel.isActivating}"
                tools:visibility="visible">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/serial_number_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sv_dimen_131"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:visibility="visible"
                    app:visibleGone="@{viewModel.showSerialNumber}">
                    <com.autonavi.auto.skin.view.SkinTextView
                        android:id="@+id/device_num_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sv_activation_device_num"
                        android:textColor="@color/onPrimaryDay"
                        app:textColor4Night="@color/onPrimaryNight"
                        app:textColor4Skin="@color/onPrimaryDay"
                        android:textSize="@dimen/sv_dimen_34"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <com.autonavi.auto.skin.view.SkinTextView
                        android:id="@+id/device_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="TEST007"
                        android:text="@{viewModel.uuidNumber}"
                        android:textColor="@color/onPrimaryDay"
                        app:textColor4Night="@color/onPrimaryNight"
                        app:textColor4Skin="@color/onPrimaryDay"
                        android:textSize="@dimen/sv_dimen_36"
                        android:layout_marginLeft="@dimen/sv_dimen_40"
                        app:layout_constraintLeft_toRightOf="@+id/device_num_title"
                        app:layout_constraintBottom_toBottomOf="@+id/device_num_title"
                        app:layout_constraintTop_toTopOf="@+id/device_num_title"/>
                    <com.autonavi.auto.skin.view.SkinTextView
                        android:id="@+id/serial_number_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sv_activation_serial_number"
                        android:textColor="@color/onPrimaryDay"
                        app:textColor4Night="@color/onPrimaryNight"
                        app:textColor4Skin="@color/onPrimaryDay"
                        android:textSize="@dimen/sv_dimen_34"
                        android:layout_marginTop="@dimen/sv_dimen_69"
                        app:layout_constraintTop_toBottomOf="@+id/device_num_title"
                        app:layout_constraintLeft_toLeftOf="@+id/device_num_title"/>

                    <com.desaysv.psmap.ui.activate.ActiveInputNumberCodeView
                        android:id="@+id/serial_number_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:layout_width="@dimen/sv_dimen_768"
                        tools:layout_height="@dimen/sv_dimen_90"
                        android:layout_marginLeft="@dimen/sv_dimen_40"
                        app:layout_constraintTop_toTopOf="@+id/serial_number_title"
                        app:layout_constraintBottom_toBottomOf="@+id/serial_number_title"
                        app:layout_constraintLeft_toRightOf="@+id/serial_number_title"/>
                    <com.autonavi.auto.skin.view.SkinTextView
                        android:id="@+id/serial_number_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sv_activation_please_get_series_number_and_activation_code"
                        android:textColor="@color/onSecondaryContainerDay"
                        app:textColor4Night="@color/onSecondaryNight"
                        app:textColor4Skin="@color/onSecondaryContainerDay"
                        android:textSize="@dimen/sv_dimen_24"
                        android:layout_marginTop="@dimen/sv_dimen_44"
                        app:layout_constraintStart_toStartOf="@+id/serial_number_title"
                        app:layout_constraintTop_toBottomOf="@+id/serial_number_title" />

                    <com.desaysv.psmap.model.view.ShadowLayout
                        android:id="@+id/serial_number_net"
                        android:layout_width="@dimen/sv_dimen_400"
                        android:layout_height="@dimen/sv_dimen_90"
                        android:background="@drawable/selector_bg_report_btn_day"
                        app:background4Night="@drawable/selector_bg_report_btn_night"
                        app:background4Skin="@drawable/selector_bg_report_btn_day"
                        android:layout_marginTop="@dimen/sv_dimen_160"
                        app:layout_constraintTop_toBottomOf="@+id/serial_number_tip"
                        app:layout_constraintRight_toLeftOf="@+id/next"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:radius="@dimen/sv_dimen_4"
                        app:setShadowColor="@{viewModel.isNight}"
                        app:shadowColor="@color/customColorShadowColorDay"
                        app:shadowDx="@dimen/sv_dimen_2"
                        app:shadowDy="@dimen/sv_dimen_2"
                        app:shadowRadius="@dimen/sv_dimen_10">
                        <com.autonavi.auto.skin.view.SkinTextView
                            android:layout_width="@dimen/sv_dimen_400"
                            android:layout_height="@dimen/sv_dimen_90"
                            android:gravity="center"
                            android:text="@string/sv_activation_re_activation"
                            android:textColor="@color/customAhaSecenicPointTextDay"
                            app:textColor4Night="@color/onPrimaryContainerNight"
                            app:textColor4Skin="@color/customAhaSecenicPointTextDay"
                            android:textSize="@dimen/sv_dimen_34" />
                    </com.desaysv.psmap.model.view.ShadowLayout>
                    <com.desaysv.psmap.model.view.ShadowLayout
                        android:id="@+id/next"
                        android:layout_width="@dimen/sv_dimen_400"
                        android:layout_height="@dimen/sv_dimen_90"
                        android:background="@drawable/selector_bg_inverse_primary_day"
                        app:background4Skin="@drawable/selector_bg_inverse_primary_day"
                        app:background4Night="@drawable/selector_btn_confirm_login_night"
                        app:setActivateManualBtn="@{!TextUtils.isEmpty(viewModel.serialNumberInput)}"
                        app:setActivateManualBtnNight="@{viewModel.isNight}"
                        android:layout_marginLeft="@dimen/sv_dimen_80"
                        app:layout_constraintTop_toTopOf="@+id/serial_number_net"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/serial_number_net"
                        app:radius="@dimen/sv_dimen_4"
                        app:setShadowColor="@{viewModel.isNight}"
                        app:shadowColor="@color/customColorShadowColorDay"
                        app:shadowDx="@dimen/sv_dimen_2"
                        app:shadowDy="@dimen/sv_dimen_2"
                        app:shadowRadius="@dimen/sv_dimen_10">
                        <com.autonavi.auto.skin.view.SkinTextView
                            android:layout_width="@dimen/sv_dimen_400"
                            android:layout_height="@dimen/sv_dimen_90"
                            android:gravity="center"
                            android:text="@string/activate_by_manual_text_next"
                            android:textColor="@color/primaryDay"
                            app:textColor4Night="@color/onPrimaryNight"
                            app:textColor4Skin="@color/primaryDay"
                            android:textSize="@dimen/sv_dimen_34" />
                    </com.desaysv.psmap.model.view.ShadowLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/active_code_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sv_dimen_131"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:visibility="gone"
                    app:visibleGone="@{!viewModel.showSerialNumber}">
                    <com.autonavi.auto.skin.view.SkinTextView
                        android:id="@+id/active_code_device_num_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sv_activation_device_num"
                        android:textColor="@color/onPrimaryDay"
                        app:textColor4Night="@color/onPrimaryNight"
                        app:textColor4Skin="@color/onPrimaryDay"
                        android:textSize="@dimen/sv_dimen_34"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <com.autonavi.auto.skin.view.SkinTextView
                        android:id="@+id/active_code_device_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="TEST007"
                        android:text="@{viewModel.uuidNumber}"
                        android:textColor="@color/onPrimaryDay"
                        app:textColor4Night="@color/onPrimaryNight"
                        app:textColor4Skin="@color/onPrimaryDay"
                        android:textSize="@dimen/sv_dimen_36"
                        android:layout_marginLeft="@dimen/sv_dimen_40"
                        app:layout_constraintLeft_toRightOf="@+id/active_code_device_num_title"
                        app:layout_constraintBottom_toBottomOf="@+id/active_code_device_num_title"
                        app:layout_constraintTop_toTopOf="@+id/active_code_device_num_title"/>
                    <com.autonavi.auto.skin.view.SkinTextView
                        android:id="@+id/active_code_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sv_activation_activation_code"
                        android:textColor="@color/onPrimaryDay"
                        app:textColor4Night="@color/onPrimaryNight"
                        app:textColor4Skin="@color/onPrimaryDay"
                        android:textSize="@dimen/sv_dimen_34"
                        android:layout_marginTop="@dimen/sv_dimen_69"
                        app:layout_constraintTop_toBottomOf="@+id/active_code_device_num_title"
                        app:layout_constraintLeft_toLeftOf="@+id/active_code_device_num_title"/>

                    <com.desaysv.psmap.ui.activate.ActiveInputNumberCodeView
                        android:id="@+id/active_code_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:layout_width="@dimen/sv_dimen_768"
                        tools:layout_height="@dimen/sv_dimen_90"
                        android:layout_marginLeft="@dimen/sv_dimen_40"
                        app:layout_constraintTop_toTopOf="@+id/active_code_title"
                        app:layout_constraintBottom_toBottomOf="@+id/active_code_title"
                        app:layout_constraintLeft_toRightOf="@+id/active_code_title"/>
                    <com.autonavi.auto.skin.view.SkinTextView
                        android:id="@+id/active_code_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sv_activation_please_get_series_number_and_activation_code"
                        android:textColor="@color/onSecondaryContainerDay"
                        app:textColor4Night="@color/onSecondaryNight"
                        app:textColor4Skin="@color/onSecondaryContainerDay"
                        android:textSize="@dimen/sv_dimen_24"
                        android:layout_marginTop="@dimen/sv_dimen_44"
                        app:layout_constraintStart_toStartOf="@+id/active_code_title"
                        app:layout_constraintTop_toBottomOf="@+id/active_code_title" />

                    <com.desaysv.psmap.model.view.ShadowLayout
                        android:id="@+id/active_code_to_active"
                        android:layout_width="@dimen/sv_dimen_400"
                        android:layout_height="@dimen/sv_dimen_90"
                        android:background="@drawable/selector_bg_report_btn_day"
                        app:background4Night="@drawable/selector_bg_report_btn_night"
                        app:background4Skin="@drawable/selector_bg_report_btn_day"
                        app:setActivateManualBtn="@{!TextUtils.isEmpty(viewModel.activeCodeInput)}"
                        app:setActivateManualBtnNight="@{viewModel.isNight}"
                        android:layout_marginTop="@dimen/sv_dimen_160"
                        app:layout_constraintTop_toBottomOf="@+id/active_code_tip"
                        app:layout_constraintRight_toLeftOf="@+id/previous"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:radius="@dimen/sv_dimen_4"
                        app:setShadowColor="@{viewModel.isNight}"
                        app:shadowColor="@color/customColorShadowColorDay"
                        app:shadowDx="@dimen/sv_dimen_2"
                        app:shadowDy="@dimen/sv_dimen_2"
                        app:shadowRadius="@dimen/sv_dimen_10">
                        <com.autonavi.auto.skin.view.SkinTextView
                            android:layout_width="@dimen/sv_dimen_400"
                            android:layout_height="@dimen/sv_dimen_90"
                            android:gravity="center"
                            android:text="@string/activate_by_manual_text_activate"
                            android:textColor="@color/customAhaSecenicPointTextDay"
                            app:textColor4Night="@color/onPrimaryContainerNight"
                            app:textColor4Skin="@color/customAhaSecenicPointTextDay"
                            android:textSize="@dimen/sv_dimen_34" />
                    </com.desaysv.psmap.model.view.ShadowLayout>
                    <com.desaysv.psmap.model.view.ShadowLayout
                        android:id="@+id/previous"
                        android:layout_width="@dimen/sv_dimen_400"
                        android:layout_height="@dimen/sv_dimen_90"
                        android:background="@drawable/selector_bg_inverse_primary_day"
                        app:background4Skin="@drawable/selector_bg_inverse_primary_day"
                        app:background4Night="@drawable/selector_btn_confirm_login_night"
                        android:layout_marginLeft="@dimen/sv_dimen_80"
                        app:layout_constraintTop_toTopOf="@+id/active_code_to_active"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/active_code_to_active"
                        app:radius="@dimen/sv_dimen_4"
                        app:setShadowColor="@{viewModel.isNight}"
                        app:shadowColor="@color/customColorShadowColorDay"
                        app:shadowDx="@dimen/sv_dimen_2"
                        app:shadowDy="@dimen/sv_dimen_2"
                        app:shadowRadius="@dimen/sv_dimen_10">
                        <com.autonavi.auto.skin.view.SkinTextView
                            android:layout_width="@dimen/sv_dimen_400"
                            android:layout_height="@dimen/sv_dimen_90"
                            android:gravity="center"
                            android:text="@string/activate_by_manual_text_previous"
                            android:textColor="@color/primaryDay"
                            app:textColor4Night="@color/onPrimaryNight"
                            app:textColor4Skin="@color/primaryDay"
                            android:textSize="@dimen/sv_dimen_34" />
                    </com.desaysv.psmap.model.view.ShadowLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fail_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:visibility="gone"
                app:visibleGone="@{viewModel.activeLayoutType == 2 &amp;&amp; !viewModel.isActivating}">

                <com.autonavi.auto.skin.view.SkinImageView
                    android:id="@+id/fail_imageView"
                    android:layout_width="@dimen/sv_dimen_200"
                    android:layout_height="@dimen/sv_dimen_200"
                    android:background="@drawable/ic_activation_error_day"
                    app:background4Night="@drawable/ic_activation_error_night"
                    app:background4Skin="@drawable/ic_activation_error_day"
                    android:layout_marginTop="@dimen/sv_dimen_130"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/data_exce"
                    app:layout_constraintVertical_chainStyle="packed"/>

                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/data_exce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sv_dimen_40"
                    tools:text="@string/sv_activation_data_exe_active_fali"
                    android:text="@{viewModel.failType}"
                    android:textColor="@color/onPrimaryDay"
                    app:textColor4Night="@color/onPrimaryNight"
                    app:textColor4Skin="@color/onPrimaryDay"
                    android:textSize="@dimen/sv_dimen_28"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fail_imageView"
                    app:layout_constraintBottom_toTopOf="@+id/txt_usb"/>

                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/txt_usb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sv_dimen_40"
                    tools:text="@string/sv_activation_keep_network_connected_with_activation_file"
                    android:text="@{viewModel.failTip}"
                    android:textColor="@color/onPrimaryDay"
                    app:textColor4Night="@color/onPrimaryNight"
                    app:textColor4Skin="@color/onPrimaryDay"
                    android:textSize="@dimen/sv_dimen_34"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/data_exce"
                    app:layout_constraintBottom_toTopOf="@+id/activate_buttons"/>

                <LinearLayout
                    android:id="@+id/activate_buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sv_dimen_133"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/txt_usb"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <com.desaysv.psmap.model.view.ShadowLayout
                        android:id="@+id/fail_activate_manual"
                        android:layout_width="@dimen/sv_dimen_400"
                        android:layout_height="@dimen/sv_dimen_90"
                        android:background="@drawable/selector_bg_report_btn_day"
                        app:background4Night="@drawable/selector_bg_report_btn_night"
                        app:background4Skin="@drawable/selector_bg_report_btn_day"
                        app:radius="@dimen/sv_dimen_4"
                        app:setShadowColor="@{viewModel.isNight}"
                        app:shadowColor="@color/customColorShadowColorDay"
                        app:shadowDx="@dimen/sv_dimen_2"
                        app:shadowDy="@dimen/sv_dimen_2"
                        app:shadowRadius="@dimen/sv_dimen_10">
                        <com.autonavi.auto.skin.view.SkinTextView
                            android:layout_width="@dimen/sv_dimen_400"
                            android:layout_height="@dimen/sv_dimen_90"
                            android:text="@string/sv_activation_manual_activation"
                            android:textColor="@color/customAhaSecenicPointTextDay"
                            app:textColor4Night="@color/onPrimaryContainerNight"
                            app:textColor4Skin="@color/customAhaSecenicPointTextDay"
                            android:textSize="@dimen/sv_dimen_34"
                            android:gravity="center" />
                    </com.desaysv.psmap.model.view.ShadowLayout>

                    <com.desaysv.psmap.model.view.ShadowLayout
                        android:id="@+id/activate_again"
                        android:layout_width="@dimen/sv_dimen_400"
                        android:layout_height="@dimen/sv_dimen_90"
                        android:background="@drawable/selector_bg_inverse_primary_day"
                        app:background4Skin="@drawable/selector_bg_inverse_primary_day"
                        app:background4Night="@drawable/selector_btn_confirm_login_night"
                        android:layout_marginStart="@dimen/sv_dimen_80"
                        app:radius="@dimen/sv_dimen_4"
                        app:setShadowColor="@{viewModel.isNight}"
                        app:shadowColor="@color/customColorShadowColorDay"
                        app:shadowDx="@dimen/sv_dimen_2"
                        app:shadowDy="@dimen/sv_dimen_2"
                        app:shadowRadius="@dimen/sv_dimen_10">
                        <com.autonavi.auto.skin.view.SkinTextView
                            android:layout_width="@dimen/sv_dimen_400"
                            android:layout_height="@dimen/sv_dimen_90"
                            android:text="@string/sv_activation_re_activation"
                            android:textColor="@color/primaryDay"
                            app:textColor4Night="@color/onPrimaryNight"
                            app:textColor4Skin="@color/primaryDay"
                            android:textSize="@dimen/sv_dimen_34"
                            android:gravity="center" />
                    </com.desaysv.psmap.model.view.ShadowLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.autonavi.auto.skin.view.SkinConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:visibility="gone"
                app:visibleGone="@{viewModel.isActivating}">

                <ProgressBar
                    android:id="@+id/loading"
                    android:layout_width="@dimen/sv_dimen_80"
                    android:layout_height="@dimen/sv_dimen_80"
                    android:layout_marginTop="@dimen/sv_dimen_89"
                    app:setActiveIndeterminateDrawable="@{viewModel.isNight}"
                    android:indeterminateBehavior="repeat"
                    android:indeterminateDrawable="@drawable/rotate_loading_active_view_day"
                    android:indeterminateOnly="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/content"
                    app:layout_constraintVertical_chainStyle="packed"/>

                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sv_dimen_38"
                    android:text="@string/sv_activation_activing_txt"
                    android:textColor="@color/onPrimaryDay"
                    app:textColor4Night="@color/onPrimaryNight"
                    app:textColor4Skin="@color/onPrimaryDay"
                    android:layout_marginTop="@dimen/sv_dimen_40"
                    app:layout_constraintTop_toBottomOf="@+id/loading"
                    app:layout_constraintBottom_toTopOf="@+id/confirmStop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/confirmStop"
                    android:layout_width="@dimen/sv_dimen_300"
                    android:layout_height="@dimen/sv_dimen_117"
                    android:layout_weight="1"
                    android:background="@drawable/selector_bg_confirm_day"
                    app:background4Night="@drawable/selector_bg_confirm_night"
                    app:background4Skin="@drawable/selector_bg_confirm_day"
                    android:text="@string/sv_activation_deactivate"
                    android:gravity="center"
                    android:textSize="@dimen/sv_dimen_28"
                    android:textColor="@color/onPrimaryNight"
                    android:paddingTop="@dimen/sv_dimen_51"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            </com.autonavi.auto.skin.view.SkinConstraintLayout>
            <View
                android:id="@+id/back_door"
                android:layout_width="@dimen/sv_dimen_300"
                android:layout_height="@dimen/sv_dimen_160"
                android:layout_marginStart="@dimen/sv_dimen_10"
                android:layout_marginTop="@dimen/sv_dimen_90"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.autonavi.auto.skin.view.SkinConstraintLayout>
    </com.autonavi.auto.skin.view.SkinConstraintLayout>
</layout>