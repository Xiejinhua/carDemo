<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.desaysv.psmap.ui.route.RouteViewModel" />

        <import type="android.text.TextUtils" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:id="@+id/clNaviStrategy"
            android:layout_width="@dimen/sv_dimen_850"
            android:layout_height="@dimen/sv_dimen_148"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_main_bg_day"
            android:paddingTop="@dimen/sv_dimen_14"
            android:paddingBottom="@dimen/sv_dimen_26"
            app:background4Night="@drawable/ic_main_bg_night"
            app:background4Skin="@drawable/ic_main_bg_day"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/ivImage"
                android:layout_width="@dimen/sv_dimen_4"
                android:layout_height="@dimen/sv_dimen_64"
                android:layout_marginStart="@dimen/sv_dimen_1"
                android:src="@drawable/ic_traffic_restriction_day"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:src4Night="@drawable/ic_traffic_restriction_night"
                app:src4Skin="@drawable/ic_traffic_restriction_day" />


            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tvTitle"
                android:layout_width="@dimen/sv_dimen_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sv_dimen_16"
                android:layout_marginEnd="@dimen/sv_dimen_16"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{viewModel.cloudShowInfoTip}"
                android:textColor="@color/onPrimaryDay"
                android:textSize="@dimen/sv_dimen_34"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btSetUp"
                app:layout_constraintStart_toEndOf="@+id/ivImage"
                app:layout_constraintTop_toTopOf="parent"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                tools:text="起点在限行路段，请合理安排出行" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/btSetUp"
                android:layout_width="@dimen/sv_dimen_104"
                android:layout_height="@dimen/sv_dimen_64"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/sv_dimen_4"
                android:layout_marginEnd="@dimen/sv_dimen_16"
                android:background="@drawable/selector_btn_confirm_day"
                android:gravity="center"
                android:textColor="@color/onPrimaryContainerDay"
                android:textSize="@dimen/sv_dimen_34"
                app:background4Night="@drawable/selector_btn_confirm_night"
                app:background4Skin="@drawable/selector_btn_confirm_day"
                app:btSetUpTip="@{viewModel.cloudShowInfoBtType}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ivClose"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:textColor4Night="@color/onPrimaryContainerNight"
                app:textColor4Skin="@color/onPrimaryContainerDay"
                app:visibleGone="@{viewModel.cloudShowInfoBtVisibility}"
                tools:text="设置"
                tools:visibility="visible" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/ivClose"
                android:layout_width="@dimen/sv_dimen_64"
                android:layout_height="@dimen/sv_dimen_64"
                android:layout_marginEnd="@dimen/sv_dimen_32"
                android:background="@drawable/selector_ic_close_day"
                app:background4Night="@drawable/selector_ic_close_night"
                app:background4Skin="@drawable/selector_ic_close_day"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.autonavi.auto.skin.view.SkinConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
