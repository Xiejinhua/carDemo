<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.desaysv.psmap.ui.settings.voicedata.VoiceDataViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/customColorBlack60Day">
        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:id="@+id/layout"
            android:layout_width="@dimen/sv_dimen_680"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{()->0}"
            android:soundEffectsEnabled="false"
            android:layout_marginStart="@dimen/sv_dimen_20"
            android:layout_marginTop="@dimen/sv_dimen_90"
            android:layout_marginBottom="@dimen/sv_dimen_6"
            android:background="@drawable/ic_main_bg_day"
            app:background4Night="@drawable/ic_main_bg_night"
            app:background4Skin="@drawable/ic_main_bg_day">
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/back"
                android:layout_width="@dimen/sv_dimen_64"
                android:layout_height="@dimen/sv_dimen_64"
                android:layout_marginLeft="@dimen/sv_dimen_30"
                android:background="@drawable/selector_ic_back_day"
                app:background4Night="@drawable/selector_ic_back_night"
                app:background4Skin="@drawable/selector_ic_back_day"
                android:layout_marginTop="@dimen/sv_dimen_30"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/offline_main_text_voice"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Skin="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                android:textSize="@dimen/sv_dimen_34"
                android:layout_marginTop="@dimen/sv_dimen_37"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/voice_loading"
                android:layout_width="@dimen/sv_dimen_80"
                android:layout_height="@dimen/sv_dimen_80"
                android:indeterminateBehavior="repeat"
                android:indeterminateDrawable="@drawable/rotate_loading_active_view_day"
                app:setActiveIndeterminateDrawable="@{viewModel.isNight}"
                android:indeterminateOnly="true"
                app:visibleGone="@{viewModel.voiceList == null || viewModel.voiceList.size() == 0}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/loading_tip"
                app:layout_constraintVertical_chainStyle="packed"
                tools:visibility="gone" />
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/loading_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/routecarresultrestrictedarea_text_fail"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                android:includeFontPadding="false"
                android:textSize="@dimen/sv_dimen_38"
                tools:visibility="gone"
                app:visibleGone="@{viewModel.voiceList == null || viewModel.voiceList.size() == 0}"
                android:layout_marginTop="@dimen/sv_dimen_40"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/voice_loading"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <com.desaysv.psmap.model.view.DampingReboundNestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="@dimen/sv_dimen_50"
                android:layout_marginHorizontal="@dimen/sv_dimen_40"
                android:overScrollMode="never"
                android:visibility="gone"
                tools:visibility="visible"
                app:visibleGone="@{viewModel.voiceList != null &amp;&amp; viewModel.voiceList.size() > 0}"
                app:layout_constraintTop_toBottomOf="@+id/back"
                app:layout_constraintBottom_toBottomOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.autonavi.auto.skin.view.SkinTextView
                        android:id="@+id/select_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/sv_setting_standard_female_voice"
                        android:text="@{viewModel.useVoice.name}"
                        android:textColor="@color/onPrimaryDay"
                        app:textColor4Skin="@color/onPrimaryDay"
                        app:textColor4Night="@color/onPrimaryNight"
                        android:textSize="@dimen/sv_dimen_34"
                        android:layout_marginTop="@dimen/sv_dimen_14"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <com.autonavi.auto.skin.view.SkinTextView
                        android:id="@+id/select_use"
                        android:layout_width="@dimen/sv_dimen_116"
                        android:layout_height="@dimen/sv_dimen_40"
                        android:layout_marginLeft="@dimen/sv_dimen_16"
                        android:background="@drawable/ic_voice_now_use_day"
                        app:background4Skin="@drawable/ic_voice_now_use_day"
                        app:background4Night="@drawable/ic_voice_now_use_night"
                        app:layout_constraintLeft_toRightOf="@+id/select_name"
                        app:layout_constraintTop_toTopOf="@+id/select_name"
                        app:layout_constraintBottom_toBottomOf="@+id/select_name"/>
                    <com.autonavi.auto.skin.view.SkinTextView
                        android:id="@+id/select_size_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/sv_dimen_16"
                        tools:text="@string/sv_setting_system_default_voice"
                        app:voiceSizeDefault="@{viewModel.useVoice}"
                        android:textColor="@color/onSecondaryDay"
                        app:textColor4Skin="@color/onSecondaryDay"
                        app:textColor4Night="@color/onSecondaryNight"
                        android:textSize="@dimen/sv_dimen_30"
                        app:layout_constraintRight_toLeftOf="@+id/select_downloaded"
                        app:layout_constraintTop_toTopOf="@+id/select_downloaded"
                        app:layout_constraintBottom_toBottomOf="@+id/select_downloaded"/>
                    <com.autonavi.auto.skin.view.SkinTextView
                        android:id="@+id/select_downloaded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/offline_datalist_offline_city_status"
                        android:textColor="@color/onPrimaryDay"
                        app:textColor4Skin="@color/onPrimaryDay"
                        app:textColor4Night="@color/onPrimaryNight"
                        android:textSize="@dimen/sv_dimen_30"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/select_name"
                        app:layout_constraintBottom_toBottomOf="@+id/select_name"/>
                    <com.autonavi.auto.skin.view.SkinView
                        android:id="@+id/line"
                        app:background4Skin="@color/lineDay"
                        app:background4Night="@color/lineNight"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/sv_dimen_1"
                        android:background="@color/lineDay"
                        android:layout_marginTop="@dimen/sv_dimen_24"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/select_name"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/voice_data_list"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginBottom="@dimen/sv_dimen_4"
                        app:layout_constraintTop_toBottomOf="@+id/line"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:overScrollMode="never"
                        app:setLayoutManager="@{true}"
                        tools:listitem="@layout/item_voice_data"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.desaysv.psmap.model.view.DampingReboundNestedScrollView>
        </com.autonavi.auto.skin.view.SkinConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>