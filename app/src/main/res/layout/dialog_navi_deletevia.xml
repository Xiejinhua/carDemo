<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.desaysv.psmap.ui.dialog.NaviDeleteViaDialogViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:layout_width="@dimen/sv_dimen_680"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sv_dimen_20"
            android:layout_marginTop="@dimen/sv_dimen_90"
            android:layout_marginBottom="@dimen/sv_dimen_24"
            android:background="@drawable/ic_main_bg_day"
            android:onClick="@{()->0}"
            android:soundEffectsEnabled="false"
            android:paddingBottom="@dimen/sv_dimen_80"
            app:background4Night="@drawable/ic_main_bg_night"
            app:background4Skin="@drawable/ic_main_bg_day"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/close_iv"
                android:layout_width="@dimen/sv_dimen_64"
                android:layout_height="@dimen/sv_dimen_64"
                android:layout_marginStart="@dimen/sv_dimen_30"
                android:layout_marginTop="@dimen/sv_dimen_30"
                android:background="@drawable/selector_ic_delete_circle_day"
                app:background4Night="@drawable/selector_ic_delete_circle_night"
                app:background4Skin="@drawable/selector_ic_delete_circle_day"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sv_dimen_40"
                android:layout_marginTop="@dimen/sv_dimen_24"
                android:ellipsize="end"
                android:lines="1"
                android:text="@{viewModel.showViaNaviViaData.name}"
                android:textColor="@color/onPrimaryDay"
                android:textSize="@dimen/sv_dimen_34"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/close_iv"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                tools:text="和平饭店" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tvDistanceTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sv_dimen_40"
                android:layout_marginTop="@dimen/sv_dimen_12"
                android:ellipsize="end"
                android:lines="1"
                android:text="@{viewModel.showViaNaviViaData.address}"
                android:textColor="@color/onSecondaryDay"
                android:textSize="@dimen/sv_dimen_28"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvName"
                app:textColor4Night="@color/onSecondaryNight"
                app:textColor4Skin="@color/onSecondaryDay"
                tools:text="五星级·南京东路20号" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tvConfirm"
                android:layout_width="@dimen/sv_dimen_400"
                android:layout_height="@dimen/sv_dimen_90"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/sv_dimen_40"
                android:layout_marginTop="@dimen/sv_dimen_48"
                android:gravity="center"
                android:text="@string/sv_route_along_search_btn_delete"
                android:textColor="@color/customAhaSecenicPointTextDay"
                android:textSize="@dimen/sv_dimen_34"
                android:background="@drawable/selector_bg_report_btn_day"
                app:background4Night="@drawable/selector_bg_report_btn_night"
                app:background4Skin="@drawable/selector_bg_report_btn_day"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDistanceTime"
                app:textColor4Night="@color/onPrimaryContainerNight"
                app:textColor4Skin="@color/customAhaSecenicPointTextDay"
                tools:visibility="visible" />

        </com.autonavi.auto.skin.view.SkinConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>