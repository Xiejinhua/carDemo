<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.desaysv.psmap.ui.settings.mobileinternet.InternetWXViewModel" />
        <import type="android.text.TextUtils"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/customColorBlack60Day">
        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:layout_width="@dimen/sv_dimen_680"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{()->0}"
            android:soundEffectsEnabled="false"
            android:layout_marginStart="@dimen/sv_dimen_20"
            android:layout_marginTop="@dimen/sv_dimen_90"
            android:layout_marginBottom="@dimen/sv_dimen_6"
            android:background="@drawable/ic_main_bg_day"
            app:background4Night="@drawable/ic_main_bg_night"
            app:background4Skin="@drawable/ic_main_bg_day">
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/back"
                android:layout_width="@dimen/sv_dimen_64"
                android:layout_height="@dimen/sv_dimen_64"
                android:layout_marginLeft="@dimen/sv_dimen_30"
                android:background="@drawable/selector_ic_back_day"
                app:background4Night="@drawable/selector_ic_back_night"
                app:background4Skin="@drawable/selector_ic_back_day"
                android:layout_marginTop="@dimen/sv_dimen_30"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sv_setting_connect_wx"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Skin="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                android:textSize="@dimen/sv_dimen_34"
                android:layout_marginTop="@dimen/sv_dimen_37"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!--微信互联-绑定二维码-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_qr_code"
                android:layout_width="0dp"
                android:layout_height="0dp"
                tools:visibility="gone"
                app:visibleGone="@{viewModel.showWeChatLayout != 3}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/image_qr"
                    android:layout_width="@dimen/sv_dimen_350"
                    android:layout_height="@dimen/sv_dimen_350"
                    android:padding="@dimen/sv_dimen_2"
                    android:background="@drawable/shape_bg_qr_border"
                    app:bitmap="@{viewModel.qrImage}"
                    app:radius="@{16}"
                    app:invisible="@{viewModel.showWeChatLayout != 4 &amp;&amp; viewModel.showWeChatLayout != 2}"
                    android:layout_marginTop="@dimen/sv_dimen_255"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:ignore="ContentDescription" />

                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/qr_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/sv_setting_connect_wx_qr_code"
                    android:text="@{viewModel.tip}"
                    android:textColor="@color/onTertiaryDay"
                    app:textColor4Night="@color/onTertiaryNight"
                    app:textColor4Skin="@color/onTertiaryDay"
                    android:textSize="@dimen/sv_dimen_28"
                    android:gravity="center"
                    android:paddingTop="@dimen/sv_dimen_48"
                    android:lineSpacingExtra="@dimen/sv_dimen_5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image_qr" />
                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/qr_tip_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sv_setting_connect_wx_qr_code_tip"
                    android:textColor="@color/onSecondaryDay"
                    app:textColor4Night="@color/onSecondaryNight"
                    app:textColor4Skin="@color/onSecondaryDay"
                    android:textSize="@dimen/sv_dimen_24"
                    android:lineSpacingExtra="@dimen/sv_dimen_3"
                    android:layout_marginTop="@dimen/sv_dimen_48"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/qr_txt" />

                <com.autonavi.auto.skin.view.SkinImageView
                    android:layout_width="@dimen/sv_dimen_350"
                    android:layout_height="@dimen/sv_dimen_350"
                    android:background="@drawable/ic_bg_login_default_qr_day"
                    app:background4Skin="@drawable/ic_bg_login_default_qr_day"
                    app:background4Night="@drawable/ic_bg_login_default_qr_night"
                    app:layout_constraintStart_toStartOf="@+id/image_qr"
                    app:layout_constraintTop_toTopOf="@+id/image_qr"
                    tools:visibility="visible"
                    app:invisible="@{viewModel.showWeChatLayout == 2 || viewModel.showWeChatLayout == 4}" />

                <com.autonavi.auto.skin.view.SkinImageView
                    android:id="@+id/qr_img_default"
                    android:layout_width="@dimen/sv_dimen_350"
                    android:layout_height="@dimen/sv_dimen_350"
                    app:invisible="@{viewModel.showWeChatLayout == 2 || viewModel.showWeChatLayout == 4}"
                    app:layout_constraintStart_toStartOf="@+id/image_qr"
                    app:layout_constraintTop_toTopOf="@+id/image_qr"
                    tools:visibility="visible" />

                <ProgressBar
                    android:id="@+id/loading"
                    android:layout_width="@dimen/sv_dimen_180"
                    android:layout_height="@dimen/sv_dimen_180"
                    android:indeterminateBehavior="repeat"
                    android:indeterminateDrawable="@drawable/rotate_loading_login_view_day"
                    app:setIndeterminateDrawableLogin="@{viewModel.isNight}"
                    android:indeterminateOnly="true"
                    android:layout_marginTop="@dimen/sv_dimen_47"
                    app:layout_constraintEnd_toEndOf="@+id/qr_img_default"
                    app:layout_constraintStart_toStartOf="@+id/qr_img_default"
                    app:layout_constraintTop_toTopOf="@+id/qr_img_default"
                    tools:visibility="visible"
                    app:visibleGone="@{viewModel.showWeChatLayout == 2}"/>
                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/qr_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sv_dimen_67"
                    android:text="@string/sv_common_qr_code_refresh"
                    app:visibleGone="@{viewModel.showWeChatLayout == 2}"
                    android:textColor="@color/primaryDay"
                    app:textColor4Skin="@color/primaryDay"
                    app:textColor4Night="@color/onPrimaryNight"
                    android:textSize="@dimen/sv_dimen_38"
                    app:layout_constraintEnd_toEndOf="@+id/qr_img_default"
                    app:layout_constraintStart_toStartOf="@+id/qr_img_default"
                    app:layout_constraintBottom_toBottomOf="@+id/qr_img_default" />

                <com.autonavi.auto.skin.view.SkinImageView
                    android:id="@+id/qr_refresh"
                    android:layout_width="@dimen/sv_dimen_180"
                    android:layout_height="@dimen/sv_dimen_180"
                    android:src="@drawable/ic_refresh_day"
                    app:src4Skin="@drawable/ic_refresh_day"
                    app:src4Night="@drawable/ic_refresh_night"
                    android:gravity="center"
                    app:visibleGone="@{viewModel.showWeChatLayout == 4}"
                    android:layout_marginTop="@dimen/sv_dimen_40"
                    app:layout_constraintEnd_toEndOf="@+id/qr_img_default"
                    app:layout_constraintStart_toStartOf="@+id/qr_img_default"
                    app:layout_constraintTop_toTopOf="@+id/qr_img_default"
                    tools:visibility="visible" />

                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/fail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sv_dimen_67"
                    android:text="@string/sv_agreement_click_to_refresh"
                    app:visibleGone="@{viewModel.showWeChatLayout == 4}"
                    android:textColor="@color/primaryDay"
                    app:textColor4Skin="@color/primaryDay"
                    app:textColor4Night="@color/onPrimaryNight"
                    android:textSize="@dimen/sv_dimen_38"
                    app:layout_constraintEnd_toEndOf="@+id/qr_img_default"
                    app:layout_constraintStart_toStartOf="@+id/qr_img_default"
                    app:layout_constraintBottom_toBottomOf="@+id/qr_img_default" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <!--微信互联-信息-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_wx_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:visibility="visible"
                app:visibleGone="@{viewModel.showWeChatLayout == 3}">

                <com.autonavi.auto.skin.view.SkinImageView
                    android:id="@+id/user_image"
                    android:layout_width="@dimen/sv_dimen_120"
                    android:layout_height="@dimen/sv_dimen_120"
                    android:layout_marginTop="@dimen/sv_dimen_154"
                    android:layout_marginLeft="@dimen/sv_dimen_140"
                    app:imageUrl="@{viewModel.avatar}"
                    app:placeHolder="@{viewModel.defaultAvatar}"
                    app:radius="@{0}"
                    android:background="@drawable/ic_default_avatar_day"
                    app:background4Skin="@drawable/ic_default_avatar_day"
                    app:background4Night="@drawable/ic_default_avatar_night"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.autonavi.auto.skin.view.SkinImageView
                    android:id="@+id/ic_wx"
                    android:layout_width="@dimen/sv_dimen_40"
                    android:layout_height="@dimen/sv_dimen_40"
                    android:src="@drawable/ic_wechat_iv_day"
                    app:src4Skin="@drawable/ic_wechat_iv_day"
                    app:src4Night="@drawable/ic_wechat_iv_night"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/user_image"
                    android:layout_marginTop="@dimen/sv_dimen_166"
                    android:layout_marginLeft="@dimen/sv_dimen_64"/>
                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/has_bind_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sv_setting_has_bind_wechat"
                    android:textColor="@color/onPrimaryDay"
                    app:textColor4Skin="@color/onPrimaryDay"
                    app:textColor4Night="@color/onPrimaryNight"
                    android:textSize="@dimen/sv_dimen_34"
                    android:layout_marginTop="@dimen/sv_dimen_160"
                    android:layout_marginLeft="@dimen/sv_dimen_16"
                    app:layout_constraintStart_toEndOf="@+id/ic_wx"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/how_unbind_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sv_setting_how_unbind_wechat"
                    android:textColor="@color/primaryContainerSecondaryDay"
                    app:textColor4Skin="@color/primaryContainerSecondaryDay"
                    app:textColor4Night="@color/onTertiaryContainerNight"
                    android:textSize="@dimen/sv_dimen_30"
                    android:layout_marginTop="@dimen/sv_dimen_223"
                    app:layout_constraintStart_toStartOf="@+id/ic_wx"
                    app:layout_constraintTop_toTopOf="parent" />
                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/line"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/sv_dimen_1"
                    android:background="@color/lineDay"
                    app:background4Night="@color/lineNight"
                    app:background4Skin="@color/lineDay"
                    android:layout_marginTop="@dimen/sv_dimen_60"
                    android:layout_marginHorizontal="@dimen/sv_dimen_40"
                    app:layout_constraintTop_toBottomOf="@+id/user_image"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <com.autonavi.auto.skin.view.SkinImageView
                    android:id="@+id/ic_bg_wechat_tip"
                    android:layout_width="@dimen/sv_dimen_454"
                    android:layout_height="@dimen/sv_dimen_400"
                    android:src="@drawable/ic_bg_wechat_tip_day"
                    app:src4Skin="@drawable/ic_bg_wechat_tip_day"
                    app:src4Night="@drawable/ic_bg_wechat_tip_night"
                    app:layout_constraintTop_toBottomOf="@+id/line"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="@dimen/sv_dimen_60" />
                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/connect_wx_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/sv_setting_connect_wx_1"
                    android:textColor="@color/customColorRbBgDay"
                    app:textColor4Skin="@color/customColorRbBgDay"
                    app:textColor4Night="@color/customColorWhite80Night"
                    android:textSize="@dimen/sv_dimen_30"
                    android:layout_marginTop="@dimen/sv_dimen_40"
                    android:layout_marginHorizontal="@dimen/sv_dimen_80"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ic_bg_wechat_tip" />
                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/connect_wx_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/sv_setting_connect_wx_2"
                    android:textColor="@color/customColorRbBgDay"
                    app:textColor4Skin="@color/customColorRbBgDay"
                    app:textColor4Night="@color/customColorWhite80Night"
                    android:textSize="@dimen/sv_dimen_30"
                    android:layout_marginHorizontal="@dimen/sv_dimen_80"
                    android:layout_marginTop="@dimen/sv_dimen_30"
                    android:lineSpacingExtra="@dimen/sv_dimen_0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/connect_wx_1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.autonavi.auto.skin.view.SkinConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>