<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="type"
            type="Integer" />
    </data>

    <com.autonavi.auto.skin.view.SkinConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/customColorBlack60Day">
        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:id="@+id/layout"
            android:layout_width="@dimen/sv_dimen_680"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{()->0}"
            android:soundEffectsEnabled="false"
            android:layout_marginStart="@dimen/sv_dimen_20"
            android:layout_marginTop="@dimen/sv_dimen_90"
            android:layout_marginBottom="@dimen/sv_dimen_6"
            android:background="@drawable/ic_main_bg_day"
            app:background4Night="@drawable/ic_main_bg_night"
            app:background4Skin="@drawable/ic_main_bg_day">
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/back"
                android:layout_width="@dimen/sv_dimen_64"
                android:layout_height="@dimen/sv_dimen_64"
                android:layout_marginLeft="@dimen/sv_dimen_30"
                android:background="@drawable/selector_ic_back_day"
                app:background4Night="@drawable/selector_ic_back_night"
                app:background4Skin="@drawable/selector_ic_back_day"
                android:layout_marginTop="@dimen/sv_dimen_30"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/sv_setting_gd_vehicle"
                android:text="@{type == 0 ? @string/sv_agreement_terms_text : (type == 1 ? @string/sv_agreement_policy_text : @string/sv_agreement_account_text)}"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Skin="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                android:textSize="@dimen/sv_dimen_34"
                android:includeFontPadding="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/back"
                app:layout_constraintBottom_toBottomOf="@+id/back"/>

            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/qr_img_bg"
                android:layout_width="@dimen/sv_dimen_350"
                android:layout_height="@dimen/sv_dimen_350"
                android:background="@drawable/shape_bg_qr_day"
                app:background4Skin="@drawable/shape_bg_qr_day"
                app:background4Night="@drawable/shape_bg_qr_night"
                android:layout_marginTop="@dimen/sv_dimen_255"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/qr_img"
                android:layout_width="@dimen/sv_dimen_300"
                android:layout_height="@dimen/sv_dimen_300"
                app:layout_constraintEnd_toEndOf="@+id/qr_img_bg"
                app:layout_constraintStart_toStartOf="@+id/qr_img_bg"
                app:layout_constraintTop_toTopOf="@+id/qr_img_bg"
                app:layout_constraintBottom_toBottomOf="@+id/qr_img_bg"
                app:agreementImage="@{type}" />


            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/qr_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sv_dimen_48"
                android:textColor="@color/onTertiaryDay"
                app:textColor4Skin="@color/onTertiaryDay"
                app:textColor4Night="@color/onTertiaryNight"
                android:textSize="@dimen/sv_dimen_30"
                app:layout_constraintEnd_toEndOf="@+id/qr_img_bg"
                app:layout_constraintStart_toStartOf="@+id/qr_img_bg"
                app:layout_constraintTop_toBottomOf="@+id/qr_img_bg"
                android:text="@string/sv_agreement_scan_qr_code"
                tools:text="@string/sv_agreement_scan_qr_code" />
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/fail_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sv_dimen_12"
                android:text="@string/sv_agreement_safe_driving_message"
                android:textColor="@color/onTertiaryDay"
                app:textColor4Skin="@color/onTertiaryDay"
                app:textColor4Night="@color/onTertiaryNight"
                android:textSize="@dimen/sv_dimen_30"
                app:layout_constraintEnd_toEndOf="@+id/qr_img_bg"
                app:layout_constraintStart_toStartOf="@+id/qr_img_bg"
                app:layout_constraintTop_toBottomOf="@+id/qr_tip" />
        </com.autonavi.auto.skin.view.SkinConstraintLayout>
    </com.autonavi.auto.skin.view.SkinConstraintLayout>
</layout>