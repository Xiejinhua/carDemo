<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="isNight"
            type="Boolean" />
    </data>


    <com.autonavi.auto.skin.view.SkinConstraintLayout
        android:id="@+id/search_box"
        android:layout_width="@dimen/sv_dimen_472"
        android:layout_height="@dimen/sv_dimen_72"
        android:background="@drawable/shape_commont_search_box_bg_day"
        app:background4Night="@drawable/shape_commont_search_box_bg_night"
        app:background4Skin="@drawable/shape_commont_search_box_bg_day">

        <com.autonavi.auto.skin.view.SkinView
            android:id="@+id/line"
            android:layout_width="@dimen/sv_dimen_1"
            android:layout_height="@dimen/sv_dimen_32"
            android:background="@color/lineDay"
            app:background4Night="@color/lineNight"
            app:background4Skin="@color/lineDay"
            android:layout_marginRight="@dimen/sv_dimen_16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/cl_trip_city" />
        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:id="@+id/cl_trip_city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tv_trip_city_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京市"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxWidth="@dimen/sv_dimen_152"
                android:textColor="@color/onPrimaryDay"
                android:textSize="@dimen/sv_dimen_30"
                android:layout_marginEnd="@dimen/sv_dimen_8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_trip_city_arrow"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay" />

            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/iv_trip_city_arrow"
                android:layout_width="@dimen/sv_dimen_32"
                android:layout_height="@dimen/sv_dimen_32"
                android:layout_marginEnd="@dimen/sv_dimen_16"
                android:background="@drawable/iv_offline_city_arrow_day"
                app:background4Night="@drawable/iv_offline_city_arrow_night"
                app:background4Skin="@drawable/iv_offline_city_arrow_day"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_trip_city_title"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </com.autonavi.auto.skin.view.SkinConstraintLayout>

        <com.autonavi.auto.skin.view.SkinImageView
            android:id="@+id/search"
            android:layout_width="@dimen/sv_dimen_64"
            android:layout_height="@dimen/sv_dimen_64"
            android:layout_marginStart="@dimen/sv_dimen_12"
            android:background="@drawable/selector_ic_search_day"
            app:background4Night="@drawable/selector_ic_search_night"
            app:background4Skin="@drawable/selector_ic_search_day"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cl_offline_city"
            app:layout_constraintTop_toTopOf="parent" />

        <com.autonavi.auto.skin.view.SkinEditText
            android:id="@+id/search_around_editText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/sv_dimen_16"
            android:background="@null"
            android:ellipsize="end"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="left|center_vertical"
            android:hint="请输入目的地"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/onPrimaryDay"
            android:textColorHint="@color/onSecondaryDay"
            android:textCursorDrawable="@drawable/shape_bg_cursor_day"
            app:setTextCursorDrawable="@{isNight}"
            android:textSize="@dimen/sv_dimen_30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/search"
            app:layout_constraintEnd_toStartOf="@+id/siv_search_delete"
            app:layout_constraintTop_toTopOf="parent"
            app:textColor4Night="@color/onPrimaryNight"
            app:textColor4Skin="@color/onPrimaryDay"
            app:textColorHint4Night="@color/onSecondaryNight"
            app:textColorHint4Skin="@color/onSecondaryDay" />

        <com.autonavi.auto.skin.view.SkinImageView
            android:id="@+id/siv_search_delete"
            android:layout_width="@dimen/sv_dimen_64"
            android:layout_height="@dimen/sv_dimen_64"
            android:layout_marginEnd="@dimen/sv_dimen_11_5"
            android:src="@drawable/selector_ic_delete_circle_day"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cls_loading"
            app:layout_constraintTop_toTopOf="parent"
            app:src4Night="@drawable/selector_ic_delete_circle_night"
            app:src4Skin="@drawable/selector_ic_delete_circle_day"
            tools:visibility="visible" />

        <ProgressBar
            android:id="@+id/cls_loading"
            android:layout_width= "@dimen/sv_dimen_64"
            android:layout_height="@dimen/sv_dimen_64"
            android:layout_marginEnd="@dimen/sv_dimen_16"
            android:padding="@dimen/sv_dimen_10"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/rotate_loading_view_day"
            app:setIndeterminateDrawableSearch="@{isNight}"
            android:indeterminateOnly="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/line"
            app:layout_constraintTop_toTopOf="parent" />
    </com.autonavi.auto.skin.view.SkinConstraintLayout>
</layout>