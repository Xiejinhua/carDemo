<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.desaysv.psmap.ui.settings.offlinedata.UsbOfflineMapViewModel" />
    </data>

    <com.autonavi.auto.skin.view.SkinConstraintLayout
        android:id="@+id/agreement_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="@{()->0}"
        android:soundEffectsEnabled="false"
        android:background="@drawable/shape_bg_full_screen_day"
        app:background4Night="@drawable/shape_bg_full_screen_night"
        app:background4Skin="@drawable/shape_bg_full_screen_day">

        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sv_dimen_116"
            android:includeFontPadding="false"
            android:text="@string/offline_main_text_main_update"
            android:textColor="@color/onPrimaryDay"
            app:textColor4Night="@color/onPrimaryNight"
            app:textColor4Skin="@color/onPrimaryDay"
            android:textSize="@dimen/sv_dimen_28"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="@dimen/sv_dimen_54"
            android:layout_height="@dimen/sv_dimen_54"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/rotate_loading_view_day"
            app:setActiveIndeterminateDrawable="@{viewModel.isNight}"
            android:indeterminateOnly="true"
            app:visibleGone="@{viewModel.loading}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/loading_tip"
            app:layout_constraintVertical_chainStyle="packed"
            tools:visibility="gone" />
        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/loading_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sv_mapdata_usb_get_data"
            android:textColor="@color/onSecondaryDay"
            app:textColor4Skin="@color/onSecondaryDay"
            app:textColor4Night="@color/onSecondaryNight"
            android:includeFontPadding="false"
            android:textSize="@dimen/sv_dimen_22"
            tools:visibility="gone"
            app:visibleGone="@{viewModel.loading}"
            android:layout_marginTop="@dimen/sv_dimen_26"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loading"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/loading_tip_warn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/sv_mapdata_usb_wait"
            tools:visibility="gone"
            app:visibleGone="@{viewModel.loading}"
            android:textColor="@color/onSecondaryDay"
            app:textColor4Skin="@color/onSecondaryDay"
            app:textColor4Night="@color/onSecondaryNight"
            android:textSize="@dimen/sv_dimen_20"
            android:layout_marginTop="@dimen/sv_dimen_8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loading_tip"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.autonavi.auto.skin.view.SkinImageView
            android:id="@+id/downloading_no_data_iv"
            android:layout_width="@dimen/sv_dimen_150"
            android:layout_height="@dimen/sv_dimen_150"
            android:scaleType="fitXY"
            android:src="@drawable/ic_empty_trip_day"
            app:src4Night="@drawable/ic_empty_trip_night"
            app:src4Skin="@drawable/ic_empty_trip_day"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintBottom_toTopOf="@+id/downloading_no_data"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:visibility="gone"
            app:visibleGone="@{!viewModel.loading &amp;&amp; !viewModel.hasData}"/>
        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/downloading_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sv_dimen_32"
            app:layout_constraintTop_toBottomOf="@+id/downloading_no_data_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_button"
            tools:text="@string/offline_downloadmanager_text_offline_data_downloading_no"
            android:text="@{viewModel.checkDataInDiskStateStr}"
            android:textColor="@color/onSecondaryDay"
            app:textColor4Skin="@color/onSecondaryDay"
            app:textColor4Night="@color/onSecondaryNight"
            android:textSize="@dimen/sv_dimen_22"
            android:gravity="center"
            tools:visibility="gone"
            app:visibleGone="@{!viewModel.loading &amp;&amp; !viewModel.hasData}"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sv_dimen_0"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintBottom_toTopOf="@+id/bottom_button"
            tools:visibility="visible"
            app:visibleGone="@{!viewModel.loading &amp;&amp; viewModel.hasData}">
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/base_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/sv_mapdata_usb_base"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                android:textSize="@dimen/sv_dimen_28"
                app:visibleGone="@{viewModel.hasUsbBaseData}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/direct_data"
                app:layout_constraintVertical_chainStyle="packed" />
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/direct_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                tools:text="@string/sv_mapdata_usb_direct"
                android:text="@{viewModel.usbDirectDataStr}"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                android:textSize="@dimen/sv_dimen_28"
                app:visibleGone="@{viewModel.usbDirectDataNum > 0}"
                android:layout_marginTop="@dimen/sv_dimen_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/base_data"
                app:layout_constraintBottom_toTopOf="@+id/provinceInfo" />
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/provinceInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                tools:text="@string/sv_mapdata_usb_province_info"
                android:text="@{viewModel.usbProvDataStr}"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                android:textSize="@dimen/sv_dimen_28"
                app:visibleGone="@{viewModel.usbProvDataNum > 0}"
                android:layout_marginTop="@dimen/sv_dimen_20"
                app:layout_constraintEnd_toStartOf="@+id/city_num"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/direct_data"
                app:layout_constraintBottom_toTopOf="@+id/special_data"
                app:layout_constraintHorizontal_chainStyle="packed"/>
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/city_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                tools:text="@string/sv_mapdata_usb_city_num"
                android:text="@{viewModel.usbCityDataStr}"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                android:textSize="@dimen/sv_dimen_28"
                app:visibleGone="@{viewModel.usbCityDataNum > 0}"
                android:layout_marginStart="@dimen/sv_dimen_32"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/provinceInfo"
                app:layout_constraintTop_toTopOf="@+id/provinceInfo" />
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/special_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                tools:text="@string/sv_mapdata_usb_special"
                android:text="@{viewModel.usbSpecialDataStr}"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                android:textSize="@dimen/sv_dimen_28"
                android:layout_marginTop="@dimen/sv_dimen_20"
                app:visibleGone="@{viewModel.usbSpecialDataNum > 0}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/provinceInfo"
                app:layout_constraintBottom_toTopOf="@+id/progress_text" />
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/sv_mapdata_usb_progress"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                android:textSize="@dimen/sv_dimen_28"
                android:layout_marginTop="@dimen/sv_dimen_20"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/data_progress"
                app:layout_constraintTop_toBottomOf="@+id/special_data"
                app:layout_constraintBottom_toTopOf="@+id/error_tip"
                app:layout_constraintHorizontal_chainStyle="packed" />
            <com.autonavi.auto.skin.view.SkinProgressBar
                android:id="@+id/data_progress"
                android:layout_width="@dimen/sv_dimen_500"
                android:layout_height="@dimen/sv_dimen_10"
                android:max="100"
                android:indeterminateOnly="false"
                android:progress="@{viewModel.usbDataProgress}"
                tools:progress="50"
                android:progressDrawable="@drawable/layer_list_data_progressbar_day"
                app:progressDrawable4Skin="@drawable/layer_list_data_progressbar_day"
                app:progressDrawable4Night="@drawable/layer_list_data_progressbar_night"
                app:layout_constraintLeft_toRightOf="@+id/progress_text"
                app:layout_constraintRight_toLeftOf="@+id/progress_content"
                app:layout_constraintTop_toTopOf="@+id/progress_text"
                app:layout_constraintBottom_toBottomOf="@+id/progress_text" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/progress_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                tools:text="50%"
                android:text="@{viewModel.usbDataProgressStr}"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                android:textSize="@dimen/sv_dimen_28"
                android:layout_marginLeft="@dimen/sv_dimen_20"
                app:layout_constraintLeft_toRightOf="@+id/data_progress"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/progress_text"
                app:layout_constraintBottom_toBottomOf="@+id/progress_text" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/error_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sv_mapdata_usb_error_tip"
                android:textColor="@color/onErrorDay"
                app:textColor4Night="@color/customColorDotRedNight"
                app:textColor4Skin="@color/onErrorDay"
                android:textSize="@dimen/sv_dimen_22"
                android:paddingTop="@dimen/sv_dimen_16"
                tools:visibility="gone"
                app:visibleGone="@{viewModel.usbDataError}"
                app:layout_constraintTop_toBottomOf="@+id/progress_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/sv_dimen_100">
            <com.desaysv.psmap.model.view.ShadowLayout
                android:id="@+id/restart"
                android:layout_width="@dimen/sv_dimen_290"
                android:layout_height="@dimen/sv_dimen_68"
                android:background="@drawable/selector_bg_report_btn_day"
                app:background4Night="@drawable/selector_bg_report_btn_night"
                app:background4Skin="@drawable/selector_bg_report_btn_day"
                android:layout_marginEnd="@dimen/sv_dimen_32"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cancel"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="gone"
                app:visibleGone="@{viewModel.usbDataDownLoaded}"
                app:radius="@dimen/sv_dimen_4"
                app:setShadowColor="@{viewModel.isNight}"
                app:shadowColor="@color/customColorShadowColorDay"
                app:shadowDx="@dimen/sv_dimen_2"
                app:shadowDy="@dimen/sv_dimen_2"
                app:shadowRadius="@dimen/sv_dimen_10">
                <com.autonavi.auto.skin.view.SkinTextView
                    android:layout_width="@dimen/sv_dimen_290"
                    android:layout_height="@dimen/sv_dimen_68"
                    android:text="@string/sv_mapdata_usb_restart"
                    android:gravity="center"
                    android:textColor="@color/primaryDay"
                    app:textColor4Night="@color/customColorMapDataNumNight"
                    app:textColor4Skin="@color/primaryDay"
                    android:textSize="@dimen/sv_dimen_24" />
            </com.desaysv.psmap.model.view.ShadowLayout>

            <com.desaysv.psmap.model.view.ShadowLayout
                android:id="@+id/cancel"
                android:layout_width="@dimen/sv_dimen_290"
                android:layout_height="@dimen/sv_dimen_68"
                android:background="@drawable/selector_bg_inverse_primary_day"
                app:background4Skin="@drawable/selector_bg_inverse_primary_day"
                app:background4Night="@drawable/selector_bg_inverse_primary_night"
                app:layout_constraintStart_toEndOf="@+id/restart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/restart"
                tools:visibility="visible"
                app:visibleGone="@{!viewModel.usbDataDownLoaded}"
                app:radius="@dimen/sv_dimen_4"
                app:setShadowColor="@{viewModel.isNight}"
                app:shadowColor="@color/customColorShadowColorDay"
                app:shadowDx="@dimen/sv_dimen_2"
                app:shadowDy="@dimen/sv_dimen_2"
                app:shadowRadius="@dimen/sv_dimen_10">
                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/cancelTv"
                    android:layout_width="@dimen/sv_dimen_290"
                    android:layout_height="@dimen/sv_dimen_68"
                    android:gravity="center"
                    android:text="@string/sv_agreement_exit_txt"
                    android:textColor="@color/onPrimaryDay"
                    android:textSize="@dimen/sv_dimen_24"
                    app:textColor4Night="@color/onPrimaryNight"
                    app:textColor4Skin="@color/onPrimaryDay" />
            </com.desaysv.psmap.model.view.ShadowLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.autonavi.auto.skin.view.SkinConstraintLayout>
</layout>