<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.desaysv.psmap.ui.navi.NaviViewModel" />

        <import type="android.view.View" />
    </data>


    <com.autonavi.auto.skin.view.SkinConstraintLayout
        android:id="@+id/clNaviParking"
        android:layout_width="@dimen/sv_dimen_680"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_main_bg_day"
        android:onClick="@{()->0}"
        android:soundEffectsEnabled="false"
        app:background4Night="@drawable/ic_main_bg_night"
        app:background4Skin="@drawable/ic_main_bg_day"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:id="@+id/clNaviParkingSimple"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sv_dimen_100"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibleGone="@{!viewModel.showParkingRecommendDetail}"
            tools:visibility="gone">

            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/parkingSimpleLogo"
                android:layout_width="@dimen/sv_dimen_80"
                android:layout_height="@dimen/sv_dimen_80"
                android:layout_marginStart="@dimen/sv_dimen_40"
                android:src="@drawable/ic_parking_simple_logo_day"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:src4Night="@drawable/ic_parking_simple_logo_night"
                app:src4Skin="@drawable/ic_parking_simple_logo_day" />


            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tvParkingSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sv_dimen_32"
                android:text="@{viewModel.parkingSizeTip}"
                android:textColor="@color/onPrimaryDay"
                android:textSize="@dimen/sv_dimen_34"
                app:layout_constraintBottom_toBottomOf="@+id/parkingSimpleLogo"
                app:layout_constraintStart_toEndOf="@+id/parkingSimpleLogo"
                app:layout_constraintTop_toTopOf="@+id/parkingSimpleLogo"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                tools:text="3个停车场" />

            <com.autonavi.auto.skin.view.SkinImageView
                android:layout_width="@dimen/sv_dimen_64"
                android:layout_height="@dimen/sv_dimen_64"
                android:layout_marginEnd="@dimen/sv_dimen_21"
                android:src="@drawable/ic_route_strategy_right_day"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:src4Night="@drawable/ic_route_strategy_right_night"
                app:src4Skin="@drawable/ic_route_strategy_right_day" />


        </com.autonavi.auto.skin.view.SkinConstraintLayout>

        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:id="@+id/clNaviParkingDetails"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sv_dimen_420"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibleGone="@{viewModel.showParkingRecommendDetail}"
            tools:visibility="visible">


            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/btyNaviParkingFirst"
                android:layout_width="@dimen/sv_dimen_176"
                android:layout_height="@dimen/sv_dimen_72"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/sv_dimen_40"
                android:layout_marginTop="@dimen/sv_dimen_40"
                android:background="@drawable/selector_btn_confirm_day"
                android:gravity="center"
                android:text="@string/sv_navi_text_tab1"
                android:textColor="@color/onPrimaryContainerDay"
                android:textSize="@dimen/sv_dimen_36"
                app:background4Night="@drawable/selector_btn_confirm_night"
                app:background4Skin="@drawable/selector_btn_confirm_day"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:setP1="@{viewModel.naviParkingPosition==0}"
                app:setP1NightMode="@{viewModel.themeChange}"
                tools:visibility="visible" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/btyNaviParkingSecond"
                android:layout_width="@dimen/sv_dimen_176"
                android:layout_height="@dimen/sv_dimen_72"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/sv_dimen_16"
                android:layout_marginTop="@dimen/sv_dimen_40"
                android:background="@drawable/selector_bg_confirm_day"
                android:gravity="center"
                android:text="@string/sv_navi_text_tab2"
                android:textColor="@color/customColorRbBgDay"
                android:textSize="@dimen/sv_dimen_36"
                app:layout_constraintStart_toEndOf="@+id/btyNaviParkingFirst"
                app:layout_constraintTop_toTopOf="parent"
                app:setP2="@{viewModel.naviParkingPosition==1}"
                app:visibleGone="@{viewModel.parkingSize>1}"
                app:setP2NightMode="@{viewModel.themeChange}"
                tools:visibility="visible" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/btyNaviParkingThree"
                android:layout_width="@dimen/sv_dimen_176"
                android:layout_height="@dimen/sv_dimen_72"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/sv_dimen_16"
                android:layout_marginTop="@dimen/sv_dimen_40"
                android:background="@drawable/selector_bg_confirm_day"
                android:gravity="center"
                android:text="@string/sv_navi_text_tab3"
                android:textColor="@color/customColorRbBgDay"
                android:textSize="@dimen/sv_dimen_36"
                app:layout_constraintStart_toEndOf="@+id/btyNaviParkingSecond"
                app:layout_constraintTop_toTopOf="parent"
                app:setP3="@{viewModel.naviParkingPosition==2}"
                app:visibleGone="@{viewModel.parkingSize>2}"
                app:setP3NightMode="@{viewModel.themeChange}"
                tools:visibility="visible" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tvParkingName"
                android:layout_width="@dimen/sv_dimen_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sv_dimen_30"
                android:layout_marginEnd="@dimen/sv_dimen_40"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{viewModel.parkingName}"
                android:textColor="@color/onPrimaryDay"
                android:textSize="@dimen/sv_dimen_34"
                app:layout_constraintBottom_toBottomOf="@+id/parkingSimpleLogo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/btyNaviParkingFirst"
                app:layout_constraintTop_toBottomOf="@+id/btyNaviParkingFirst"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                tools:text="宝龙广场地下停车场" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tvParkingDistance"
                android:layout_width="@dimen/sv_dimen_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sv_dimen_12"
                android:layout_marginEnd="@dimen/sv_dimen_40"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{viewModel.parkingDistance}"
                android:textColor="@color/onSecondaryDay"
                android:textSize="@dimen/sv_dimen_30"
                app:layout_constraintBottom_toBottomOf="@+id/parkingSimpleLogo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvParkingName"
                app:layout_constraintTop_toBottomOf="@+id/tvParkingName"
                app:textColor4Night="@color/onSecondaryNight"
                app:textColor4Skin="@color/onSecondaryDay"
                tools:text="距离292米" />


            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/btStartNavi"
                android:layout_width="@dimen/sv_dimen_400"
                android:layout_height="@dimen/sv_dimen_90"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/sv_dimen_40"
                android:background="@drawable/selector_btn_confirm_day"
                android:gravity="center"
                android:text="@string/sv_navi_text_stop"
                android:textColor="@color/onPrimaryContainerDay"
                android:textSize="@dimen/sv_dimen_34"
                app:background4Night="@drawable/selector_btn_confirm_night"
                app:background4Skin="@drawable/selector_btn_confirm_day"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llNaviStrategy"
                app:textColor4Night="@color/onPrimaryContainerNight"
                app:textColor4Skin="@color/onPrimaryContainerDay"
                tools:visibility="visible" />

        </com.autonavi.auto.skin.view.SkinConstraintLayout>

    </com.autonavi.auto.skin.view.SkinConstraintLayout>

</layout>