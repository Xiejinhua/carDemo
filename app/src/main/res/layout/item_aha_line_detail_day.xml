<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.example.aha_api_sdkd01.manger.models.LineDetailModel.DataDTO.LineDataDTO.NodeDTO" />
        <variable
            name="position"
            type="String" />
        <variable
            name="isLast"
            type="Boolean" />
        <variable
            name="isNight"
            type="Boolean" />
    </data>

    <com.autonavi.auto.skin.view.SkinConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_width="@dimen/sv_dimen_640">
        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/tv_position"
            android:layout_width="@dimen/sv_dimen_64"
            android:layout_height="@dimen/sv_dimen_64"
            android:layout_marginTop="@dimen/sv_dimen_23"
            android:gravity="center"
            android:textColor="@color/onPrimaryDay"
            android:textSize="@dimen/sv_dimen_36"
            app:textColor4Night="@color/onPrimaryNight"
            app:textColor4Skin="@color/onPrimaryDay"
            app:setSearchListTitleTextColor="@{isNight}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1"
            android:text="@{position}"/>
        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="雁门关景区"
            android:text="@{item.caption}"
            android:textColor="@color/onPrimaryDay"
            app:textColor4Skin="@color/onPrimaryDay"
            app:textColor4Night="@color/onPrimaryNight"
            app:setSearchListTitleTextColor="@{isNight}"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/sv_dimen_34"
            android:layout_marginTop="@dimen/sv_dimen_37"
            android:layout_marginLeft="@dimen/sv_dimen_16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_position"
            app:layout_constraintRight_toRightOf="parent"/>
        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/distanceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距离："
            android:textColor="@color/onSecondaryDay"
            app:textColor4Skin="@color/onSecondaryDay"
            app:textColor4Night="@color/onSecondaryNight"
            app:setSearchListAddressTextColor="@{isNight}"
            android:textSize="@dimen/sv_dimen_32"
            tools:visibility="gone"
            app:visibleGone="@{!isLast}"
            android:layout_marginTop="@dimen/sv_dimen_12"
            app:layout_constraintTop_toBottomOf="@+id/caption"
            app:layout_constraintLeft_toLeftOf="@+id/caption" />
        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/distanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="130km"
            android:textColor="@color/onPrimaryDay"
            app:textColor4Skin="@color/onPrimaryDay"
            app:textColor4Night="@color/onPrimaryNight"
            app:setSearchListTitleTextColor="@{isNight}"
            android:textSize="@dimen/sv_dimen_32"
            tools:visibility="gone"
            app:visibleGone="@{!isLast}"
            app:layout_constraintBottom_toBottomOf="@+id/distanceTitle"
            app:layout_constraintLeft_toRightOf="@+id/distanceTitle" />

        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/durationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="行驶："
            android:textColor="@color/onSecondaryDay"
            app:textColor4Skin="@color/onSecondaryDay"
            app:textColor4Night="@color/onSecondaryNight"
            app:setSearchListAddressTextColor="@{isNight}"
            android:textSize="@dimen/sv_dimen_32"
            tools:visibility="gone"
            app:visibleGone="@{!isLast}"
            android:layout_marginLeft="@dimen/sv_dimen_20"
            android:layout_marginTop="@dimen/sv_dimen_12"
            app:layout_constraintTop_toBottomOf="@+id/caption"
            app:layout_constraintLeft_toRightOf="@+id/distanceText" />
        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/durationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="约2.5小时"
            android:textColor="@color/onPrimaryDay"
            app:textColor4Skin="@color/onPrimaryDay"
            app:textColor4Night="@color/onPrimaryNight"
            app:setSearchListTitleTextColor="@{isNight}"
            android:textSize="@dimen/sv_dimen_32"
            tools:visibility="gone"
            app:visibleGone="@{!isLast}"
            app:layout_constraintBottom_toBottomOf="@+id/durationTitle"
            app:layout_constraintLeft_toRightOf="@+id/durationTitle" />

        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/durationLastTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="行驶："
            android:textColor="@color/onSecondaryDay"
            app:textColor4Skin="@color/onSecondaryDay"
            app:textColor4Night="@color/onSecondaryNight"
            app:setSearchListAddressTextColor="@{isNight}"
            android:textSize="@dimen/sv_dimen_32"
            tools:visibility="visible"
            app:visibleGone="@{isLast}"
            android:layout_marginTop="@dimen/sv_dimen_12"
            app:layout_constraintTop_toBottomOf="@+id/caption"
            app:layout_constraintLeft_toLeftOf="@+id/caption" />
        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/durationLastText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="约2.5小时"
            android:textColor="@color/onPrimaryDay"
            app:textColor4Skin="@color/onPrimaryDay"
            app:textColor4Night="@color/onPrimaryNight"
            app:setSearchListTitleTextColor="@{isNight}"
            android:textSize="@dimen/sv_dimen_32"
            tools:visibility="visible"
            app:visibleGone="@{isLast}"
            app:layout_constraintBottom_toBottomOf="@+id/durationLastTitle"
            app:layout_constraintLeft_toRightOf="@+id/durationLastTitle" />

        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/playIntervalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建议游玩时间："
            android:textColor="@color/onSecondaryDay"
            app:textColor4Skin="@color/onSecondaryDay"
            app:textColor4Night="@color/onSecondaryNight"
            app:setSearchListAddressTextColor="@{isNight}"
            android:textSize="@dimen/sv_dimen_32"
            tools:visibility="visible"
            app:visibleGone="@{!isLast}"
            android:layout_marginTop="@dimen/sv_dimen_69"
            app:layout_constraintTop_toBottomOf="@+id/caption"
            app:layout_constraintLeft_toLeftOf="@+id/caption"  />
        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/playInterval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1小时"
            android:textColor="@color/onPrimaryDay"
            app:textColor4Skin="@color/onPrimaryDay"
            app:textColor4Night="@color/onPrimaryNight"
            app:setSearchListTitleTextColor="@{isNight}"
            android:textSize="@dimen/sv_dimen_32"
            tools:visibility="visible"
            app:visibleGone="@{!isLast}"
            android:layout_marginRight="@dimen/sv_dimen_20"
            app:layout_constraintBottom_toBottomOf="@+id/playIntervalTitle"
            app:layout_constraintLeft_toRightOf="@+id/playIntervalTitle" />
        <com.autonavi.auto.skin.view.SkinView
            android:layout_width="0dp"
            android:layout_height="@dimen/sv_dimen_1"
            android:background="@color/lineDay"
            app:background4Night="@color/lineNight"
            app:background4Skin="@color/lineDay"
            app:setSearchLine="@{isNight}"
            tools:visibility="gone"
            app:visibleGone="@{!isLast}"
            android:layout_marginTop="@dimen/sv_dimen_35"
            android:layout_marginLeft="@dimen/sv_dimen_16"
            app:layout_constraintTop_toBottomOf="@+id/playIntervalTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.autonavi.auto.skin.view.SkinView
            android:layout_width="0dp"
            android:layout_height="@dimen/sv_dimen_1"
            android:background="@color/lineDay"
            app:background4Night="@color/lineNight"
            app:background4Skin="@color/lineDay"
            app:setSearchLine="@{isNight}"
            tools:visibility="visible"
            app:visibleGone="@{isLast}"
            android:layout_marginLeft="@dimen/sv_dimen_16"
            android:layout_marginTop="@dimen/sv_dimen_35"
            app:layout_constraintTop_toBottomOf="@+id/durationLastTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </com.autonavi.auto.skin.view.SkinConstraintLayout>
</layout>