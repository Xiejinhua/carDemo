<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="favoriteItem"
            type="com.autonavi.gbl.user.behavior.model.SimpleFavoriteItem" />

        <variable
            name="position"
            type="String" />

        <variable
            name="isTop"
            type="Boolean" />

        <import type="android.text.TextUtils" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/all_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item"
            android:layout_width="@dimen/sv_dimen_640"
            android:layout_height="@dimen/sv_dimen_180"
            android:paddingHorizontal="@dimen/sv_dimen_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/favorite_num"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sv_dimen_64"
                android:layout_marginLeft="@dimen/sv_dimen_24"
                android:layout_marginTop="@dimen/sv_dimen_25"
                android:gravity="center"
                android:includeFontPadding="false"
                android:minWidth="@dimen/sv_dimen_64"
                android:text="@{position}"
                android:textColor="@color/onPrimaryDay"
                android:textFontWeight="500"
                android:textSize="@dimen/sv_dimen_36"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                tools:text="1" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sv_dimen_35_5"
                android:enabled="true"
                android:includeFontPadding="false"
                android:maxWidth="@dimen/sv_dimen_330"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@{TextUtils.isEmpty(favoriteItem.custom_name) ? favoriteItem.name : favoriteItem.custom_name}"
                android:textColor="@color/onPrimaryDay"
                android:textSize="@dimen/sv_dimen_34"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="@+id/address"
                app:layout_constraintRight_toLeftOf="@+id/to_top"
                app:layout_constraintTop_toTopOf="parent"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                app:visibleGone="@{isTop}"
                tools:text="惠州市投资控股大"
                tools:textColor="@color/onPrimaryDay"
                tools:visibility="visible" />

            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/to_top"
                android:layout_width="@dimen/sv_dimen_68"
                android:layout_height="@dimen/sv_dimen_40"
                android:layout_marginLeft="@dimen/sv_dimen_16"
                android:src="@drawable/ic_favorite_to_top_day"
                app:layout_constraintBottom_toBottomOf="@+id/name"
                app:layout_constraintLeft_toRightOf="@+id/name"
                app:layout_constraintRight_toLeftOf="@+id/add_via"
                app:layout_constraintTop_toTopOf="@+id/name"
                app:src4Night="@drawable/ic_favorite_to_top_night"
                app:src4Skin="@drawable/ic_favorite_to_top_day"
                app:visibleGone="@{isTop}"
                tools:visibility="visible" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sv_dimen_16"
                android:layout_marginTop="@dimen/sv_dimen_15"
                android:layout_marginRight="@dimen/sv_dimen_5"
                android:enabled="true"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/onSecondaryDay"
                android:textSize="@dimen/sv_dimen_30"
                android:visibility="@{isTop ? favoriteItem == null ? View.GONE : TextUtils.isEmpty(favoriteItem.address) ? View.GONE : View.VISIBLE : View.GONE}"
                app:layout_constraintLeft_toRightOf="@+id/favorite_num"
                app:layout_constraintRight_toLeftOf="@+id/stv_distance"
                app:layout_constraintTop_toBottomOf="@+id/name"
                app:setFavoriteAddress="@{favoriteItem}"
                app:textColor4Night="@color/onSecondaryNight"
                app:textColor4Skin="@color/onSecondaryDay"
                app:visibleGone="@{isTop}"
                tools:text="广东省-惠州市-仲恺高新区"
                tools:visibility="visible" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/name_max"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sv_dimen_16"
                android:layout_marginTop="@dimen/sv_dimen_35_5"
                android:layout_marginRight="@dimen/sv_dimen_50"
                android:enabled="true"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@{TextUtils.isEmpty(favoriteItem.custom_name) ? favoriteItem.name : favoriteItem.custom_name}"
                android:textColor="@color/onPrimaryDay"
                android:textSize="@dimen/sv_dimen_34"
                app:layout_constraintLeft_toRightOf="@+id/favorite_num"
                app:layout_constraintRight_toLeftOf="@+id/add_via"
                app:layout_constraintTop_toTopOf="parent"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                app:visibleGone="@{!isTop}"
                tools:text="惠州市投资控股大厦和畅五路西8号惠州市投资控股大厦和畅五路西8号"
                tools:textColor="@color/onPrimaryDay"
                tools:visibility="visible" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/address_max"
                android:layout_width="0dp"
                android:layout_height="@dimen/sv_dimen_45"
                android:layout_marginTop="@dimen/sv_dimen_15"
                android:layout_marginRight="@dimen/sv_dimen_5"
                android:enabled="true"
                android:includeFontPadding="false"
                android:gravity="left|center"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/onSecondaryDay"
                android:textSize="@dimen/sv_dimen_30"
                android:visibility="@{isTop ? View.GONE : favoriteItem == null ? View.GONE : TextUtils.isEmpty(favoriteItem.address) ? View.GONE : View.VISIBLE}"
                app:layout_constraintLeft_toLeftOf="@+id/name_max"
                app:layout_constraintRight_toRightOf="@+id/name_max"
                app:layout_constraintTop_toBottomOf="@+id/name_max"
                app:setFavoriteAddress="@{favoriteItem}"
                app:textColor4Night="@color/onSecondaryNight"
                app:textColor4Skin="@color/onSecondaryDay"
                app:visibleGone="@{!isTop}"
                tools:text="广东省-惠州市-仲恺高新区"
                tools:visibility="visible" />

            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/add_via"
                android:layout_width="@dimen/sv_dimen_64"
                android:layout_height="@dimen/sv_dimen_64"
                android:layout_marginTop="@dimen/sv_dimen_31"
                android:layout_marginEnd="@dimen/sv_dimen_40"
                android:src="@drawable/ic_search_alongway_suggestion_right_day"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:src4Night="@drawable/ic_search_alongway_suggestion_right_night"
                app:src4Skin="@drawable/ic_search_alongway_suggestion_right_day"
                tools:src="@drawable/ic_search_alongway_suggestion_right_day"
                tools:visibility="visible" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/stv_distance"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sv_dimen_45"
                android:layout_marginTop="@dimen/sv_dimen_91"
                android:singleLine="true"
                android:gravity="left|center"
                android:textColor="@color/onPrimaryDay"
                android:textSize="@dimen/sv_dimen_26"
                app:layout_constraintEnd_toEndOf="@+id/add_via"
                app:layout_constraintStart_toStartOf="@+id/add_via"
                app:layout_constraintTop_toTopOf="parent"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                tools:text="3.2Km"
                tools:visibility="visible" />

            <com.autonavi.auto.skin.view.SkinView
                android:layout_width="0dp"
                android:layout_height="@dimen/sv_dimen_1"
                android:layout_marginHorizontal="@dimen/sv_dimen_40"
                android:background="@color/lineDay"
                app:background4Night="@color/lineNight"
                app:background4Skin="@color/lineDay"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sv_dimen_180"
            app:layout_constraintLeft_toRightOf="@+id/item"
            app:layout_constraintTop_toTopOf="parent">

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/favorite_top"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_favorite_top_bg"
                android:gravity="center"
                android:paddingHorizontal="@dimen/sv_dimen_32"
                android:text="@{isTop ? @string/sv_setting_cancel_favorite_top : @string/sv_setting_favorite_top}"
                android:textColor="@color/onPrimaryContainerDay"
                android:textSize="@dimen/sv_dimen_34"
                app:layout_constraintRight_toLeftOf="@+id/delete"
                app:layout_constraintTop_toTopOf="parent"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryContainerDay"
                tools:text="@string/sv_setting_favorite_top" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_history_favorite_bg"
                android:gravity="center"
                android:paddingHorizontal="@dimen/sv_dimen_32"
                android:text="@string/sv_setting_cancel_favorite"
                android:textColor="@color/onPrimaryContainerDay"
                android:textSize="@dimen/sv_dimen_34"
                app:layout_constraintRight_toLeftOf="@+id/change_name"
                app:layout_constraintTop_toTopOf="parent"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryContainerDay" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/change_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_favorite_change_name_bg"
                android:gravity="center"
                android:paddingHorizontal="@dimen/sv_dimen_19"
                android:text="@string/dialog_long_pressed_text_two"
                android:textColor="@color/onPrimaryContainerDay"
                android:textSize="@dimen/sv_dimen_34"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryContainerDay" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
