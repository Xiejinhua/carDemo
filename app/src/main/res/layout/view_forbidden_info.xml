<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.desaysv.psmap.ui.navi.NaviViewModel" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clNaviStrategy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:layout_width="@dimen/sv_dimen_620"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_primary_day"
            android:paddingTop="@dimen/sv_dimen_20"
            android:paddingBottom="@dimen/sv_dimen_20"
            app:background4Night="@drawable/shape_bg_primary_night"
            app:background4Skin="@drawable/shape_bg_primary_day"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/ivForbiddenIcon"
                android:layout_width="@dimen/sv_dimen_60"
                android:layout_height="@dimen/sv_dimen_60"
                android:layout_marginStart="@dimen/sv_dimen_50"
                android:src="@drawable/global_image_auto_traffic_11031_day"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:src4Night="@drawable/global_image_auto_traffic_11031_night"
                app:src4Skin="@drawable/global_image_auto_traffic_11031_day" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sv_dimen_16"
                android:layout_marginEnd="@dimen/sv_dimen_30"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{viewModel.forbiddenInfo.title}"
                android:textColor="@color/onPrimaryDay"
                android:textSize="@dimen/sv_dimen_32"
                app:layout_constraintBottom_toBottomOf="@+id/ivForbiddenIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivForbiddenIcon"
                app:layout_constraintTop_toTopOf="@+id/ivForbiddenIcon"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                tools:text="S15广佛高速西向东异常占道" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tvForbiddenContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/sv_dimen_10"
                android:lineSpacingExtra="6dp"
                android:maxLines="2"
                android:text="@{viewModel.forbiddenInfo.content}"
                android:textColor="@color/onSecondaryDay"
                android:textSize="@dimen/sv_dimen_28"
                app:layout_constraintEnd_toEndOf="@+id/tvTitle"
                app:layout_constraintStart_toStartOf="@+id/ivForbiddenIcon"
                app:layout_constraintTop_toBottomOf="@+id/ivForbiddenIcon"
                app:textColor4Night="@color/onSecondaryNight"
                app:textColor4Skin="@color/onSecondaryDay"
                tools:text="在沙贝服务区(广佛高速佛山方向)附近" />


        </com.autonavi.auto.skin.view.SkinConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>