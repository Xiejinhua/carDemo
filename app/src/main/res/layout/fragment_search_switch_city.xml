<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.desaysv.psmap.ui.search.SearchSwitchCityModel" />

        <import type="android.view.View" />
    </data>

    <com.autonavi.auto.skin.view.SkinConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:layout_width="@dimen/sv_dimen_680"
            android:layout_height="@dimen/sv_dimen_1178"
            android:layout_marginStart="@dimen/sv_dimen_20"
            android:layout_marginTop="@dimen/sv_dimen_90"
            android:background="@drawable/ic_main_bg_day"
            android:onClick="@{()->0}"
            android:paddingHorizontal="@dimen/sv_dimen_20"
            android:paddingTop="@dimen/sv_dimen_20"
            android:paddingBottom="@dimen/sv_dimen_28"
            android:soundEffectsEnabled="false"
            app:background4Night="@drawable/ic_main_bg_night"
            app:background4Skin="@drawable/ic_main_bg_day"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.desaysv.psmap.ui.search.view.SearchBoxView
                android:id="@+id/search_box"
                android:layout_width="@dimen/sv_dimen_640"
                android:layout_height="@dimen/sv_dimen_72"
                android:layout_marginTop="@dimen/sv_dimen_26"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.desaysv.psmap.model.view.DampingReboundNestedScrollView
                android:id="@+id/data"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sv_dimen_1006"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_box"
                android:layout_marginTop="@dimen/sv_dimen_26"
                app:visibleGone="@{!viewModel.isSearchCityLiveData()}"
                tools:visibility="visible">
                <com.autonavi.auto.skin.view.SkinRecyclerView
                    android:id="@+id/search_city_category_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:layout_marginBottom="@dimen/sv_dimen_16"
                    android:listSelector="@android:color/transparent"
                    android:overScrollMode="never"
                    android:requiresFadingEdge="horizontal"
                    app:setLayoutManager="@{true}"
                    tools:visibility="visible" />
            </com.desaysv.psmap.model.view.DampingReboundNestedScrollView>

            <com.autonavi.auto.skin.view.SkinRecyclerView
                android:id="@+id/search_city_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sv_dimen_26"
                android:divider="@null"
                android:layout_marginBottom="@dimen/sv_dimen_16"
                android:dividerHeight="0dp"
                android:layout_marginHorizontal="@dimen/sv_dimen_40"
                android:listSelector="@android:color/transparent"
                android:overScrollMode="never"
                android:requiresFadingEdge="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/search_box"
                app:visibleGone="@{viewModel.isSearchCityLiveData()}"
                tools:visibility="visible" />

            <com.autonavi.auto.skin.view.SkinConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/sv_dimen_320"
                app:visibleGone="@{viewModel.noCityLiveData &amp;&amp; viewModel.isSearchCityLiveData()}">

                <com.autonavi.auto.skin.view.SkinImageView
                    android:id="@+id/iv_search_no_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_no_history_day"
                    app:src4Night="@drawable/ic_no_history_night"
                    app:src4Skin="@drawable/ic_no_history_day"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/tv_no_city_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sv_dimen_40"
                    android:paddingHorizontal="@dimen/sv_dimen_40"
                    tools:text="@string/offline_datalist_text_city_serach_no_result"
                    android:text="@{viewModel.noCityTextLiveData}"
                    android:textColor="@color/onPrimaryDay"
                    android:textSize="@dimen/sv_dimen_28"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_search_no_city"
                    app:textColor4Night="@color/onPrimaryNight"
                    app:textColor4Skin="@color/onPrimaryDay" />

            </com.autonavi.auto.skin.view.SkinConstraintLayout>



        </com.autonavi.auto.skin.view.SkinConstraintLayout>


    </com.autonavi.auto.skin.view.SkinConstraintLayout>

</layout>