<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="info"
            type="com.desaysv.psmap.model.bean.MoreInfoBean" />
        <import type="android.text.TextUtils"/>
    </data>

    <com.autonavi.auto.skin.view.SkinConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/customColorPop80Day"
        app:background4Skin="@color/customColorPop80Day"
        app:background4Night="@color/customColorPop70Night"
        android:visibility="gone"
        tools:visibility="visible"
        app:visibleGone="@{!TextUtils.isEmpty(info.content)}">

        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:id="@+id/shadowLayout"
            android:layout_width="@dimen/sv_dimen_1042"
            android:layout_height="@dimen/sv_dimen_325"
            android:background="@drawable/bg_wx_unbind_day"
            app:background4Night="@drawable/bg_wx_unbind_night"
            app:background4Skin="@drawable/bg_wx_unbind_day"
            android:onClick="@{()->0}"
            android:soundEffectsEnabled="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/info_pop_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{info.title}"
                tools:text="@string/sv_setting_wechat_unbind_tip"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Skin="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                android:textSize="@dimen/sv_dimen_40"
                android:textFontWeight="500"
                android:gravity="center"
                android:onClick="@{()->0}"
                android:includeFontPadding="false"
                android:soundEffectsEnabled="false"
                android:layout_marginTop="@dimen/sv_dimen_72"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/info_pop_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{info.content}"
                tools:text="@string/sv_setting_wechat_unbind_tip1"
                android:textColor="@color/onTertiaryDay"
                app:textColor4Skin="@color/onTertiaryDay"
                app:textColor4Night="@color/onTertiaryNight"
                android:textSize="@dimen/sv_dimen_34"
                android:textFontWeight="400"
                android:gravity="center"
                android:onClick="@{()->0}"
                android:includeFontPadding="false"
                android:soundEffectsEnabled="false"
                android:layout_marginTop="@dimen/sv_dimen_42"
                app:layout_constraintTop_toBottomOf="@+id/info_pop_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </com.autonavi.auto.skin.view.SkinConstraintLayout>
    </com.autonavi.auto.skin.view.SkinConstraintLayout>
</layout>