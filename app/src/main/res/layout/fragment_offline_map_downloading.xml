<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.desaysv.psmap.ui.settings.offlinedata.download.OfflineMapDownloadingViewModel" />
    </data>

    <com.autonavi.auto.skin.view.SkinConstraintLayout
        android:id="@+id/cl_offline_data_downloading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_width="@dimen/sv_dimen_640"
        tools:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sv_dimen_29"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:visibleGone="@{!viewModel.isLoading &amp;&amp; viewModel.hasData}">
            <com.desaysv.psmap.model.view.ShadowLayout
                android:id="@+id/all_download"
                android:layout_width="@dimen/sv_dimen_270"
                android:layout_height="@dimen/sv_dimen_90"
                android:enabled="@{!viewModel.isAllStart}"
                app:setViewAlpha="@{!viewModel.isAllStart}"
                android:background="@drawable/selector_bg_report_btn_day"
                app:background4Night="@drawable/selector_bg_report_btn_night"
                app:background4Skin="@drawable/selector_bg_report_btn_day"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/all_pause"
                app:radius="@dimen/sv_dimen_4"
                app:setShadowColor="@{viewModel.isNight}"
                app:shadowColor="@color/customColorShadowColorDay"
                app:shadowDx="@dimen/sv_dimen_2"
                app:shadowDy="@dimen/sv_dimen_2"
                app:shadowRadius="@dimen/sv_dimen_10">
                <com.autonavi.auto.skin.view.SkinTextView
                    android:layout_width="@dimen/sv_dimen_270"
                    android:layout_height="@dimen/sv_dimen_90"
                    android:text="@string/offline_downloadmanager_text_offline_data_downloading_start"
                    android:gravity="center"
                    android:textColor="@color/color_map_data_download_manage_btn_day"
                    app:textColor4Night="@color/color_map_data_download_manage_btn_night"
                    app:textColor4Skin="@color/color_map_data_download_manage_btn_day"
                    android:textSize="@dimen/sv_dimen_34"
                    app:setViewAlpha="@{!viewModel.isAllStart}" />
            </com.desaysv.psmap.model.view.ShadowLayout>

            <com.desaysv.psmap.model.view.ShadowLayout
                android:id="@+id/all_pause"
                android:layout_width="@dimen/sv_dimen_270"
                android:layout_height="@dimen/sv_dimen_90"
                android:enabled="@{!viewModel.isAllPause}"
                app:setViewAlpha="@{!viewModel.isAllPause}"
                android:background="@drawable/selector_bg_report_btn_day"
                app:background4Night="@drawable/selector_bg_report_btn_night"
                app:background4Skin="@drawable/selector_bg_report_btn_day"
                android:layout_marginLeft="@dimen/sv_dimen_20"
                app:layout_constraintLeft_toRightOf="@+id/all_download"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:radius="@dimen/sv_dimen_4"
                app:setShadowColor="@{viewModel.isNight}"
                app:shadowColor="@color/customColorShadowColorDay"
                app:shadowDx="@dimen/sv_dimen_2"
                app:shadowDy="@dimen/sv_dimen_2"
                app:shadowRadius="@dimen/sv_dimen_10">
                <com.autonavi.auto.skin.view.SkinTextView
                    android:layout_width="@dimen/sv_dimen_270"
                    android:layout_height="@dimen/sv_dimen_90"
                    android:text="@string/offline_downloadmanager_text_offline_data_downloading_pause"
                    android:gravity="center"
                    app:setViewAlpha="@{!viewModel.isAllPause}"
                    android:textColor="@color/color_map_data_download_manage_btn_day"
                    app:textColor4Night="@color/color_map_data_download_manage_btn_night"
                    app:textColor4Skin="@color/color_map_data_download_manage_btn_day"
                    android:textSize="@dimen/sv_dimen_34" />
            </com.desaysv.psmap.model.view.ShadowLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.desaysv.psmap.model.view.DampingReboundNestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/top_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="@dimen/sv_dimen_40"
            android:layout_marginBottom="@dimen/sv_dimen_26"
            app:visibleGone="@{!viewModel.isLoading &amp;&amp; viewModel.hasData}">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/downloading_citylist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                app:setLayoutManager="@{true}" />
        </com.desaysv.psmap.model.view.DampingReboundNestedScrollView>

        <com.autonavi.auto.skin.view.SkinImageView
            android:id="@+id/downloading_no_data_iv"
            android:layout_width="@dimen/sv_dimen_200"
            android:layout_height="@dimen/sv_dimen_200"
            android:scaleType="fitXY"
            android:background="@drawable/ic_message_empty_day"
            app:background4Night="@drawable/ic_message_empty_night"
            app:background4Skin="@drawable/ic_message_empty_day"
            android:layout_marginTop="@dimen/sv_dimen_228"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:visibleGone="@{!viewModel.isLoading &amp;&amp; !viewModel.hasData}"
            tools:visibility="visible"/>
        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/downloading_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sv_dimen_40"
            app:layout_constraintTop_toBottomOf="@+id/downloading_no_data_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/offline_downloadmanager_text_offline_data_downloading_no"
            android:textColor="@color/onPrimaryDay"
            app:textColor4Skin="@color/onPrimaryDay"
            app:textColor4Night="@color/onPrimaryNight"
            android:textSize="@dimen/sv_dimen_28"
            android:gravity="center"
            app:visibleGone="@{!viewModel.isLoading &amp;&amp; !viewModel.hasData}"/>

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="@dimen/sv_dimen_80"
            android:layout_height="@dimen/sv_dimen_80"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/rotate_loading_view_day"
            app:setActiveIndeterminateDrawable="@{viewModel.isNight}"
            android:indeterminateOnly="true"
            app:visibleGone="@{viewModel.isLoading}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/loading_tip"
            app:layout_constraintVertical_chainStyle="packed"
            tools:visibility="gone" />
        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/loading_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/routecarresultrestrictedarea_text_fail"
            android:textColor="@color/onPrimaryDay"
            app:textColor4Night="@color/onPrimaryNight"
            app:textColor4Skin="@color/onPrimaryDay"
            android:includeFontPadding="false"
            android:textSize="@dimen/sv_dimen_38"
            tools:visibility="gone"
            app:visibleGone="@{viewModel.isLoading}"
            android:layout_marginTop="@dimen/sv_dimen_40"
            android:layout_marginBottom="@dimen/sv_dimen_92"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loading"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </com.autonavi.auto.skin.view.SkinConstraintLayout>
</layout>