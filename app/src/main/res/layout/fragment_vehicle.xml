<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.desaysv.psmap.ui.settings.vehicle.VehicleViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/customColorBlack60Day">
        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:layout_width="@dimen/sv_dimen_600"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{()->0}"
            android:soundEffectsEnabled="false"
            android:layout_marginTop="@dimen/sv_dimen_88"
            android:background="@drawable/setting_shape_bg_card_day"
            app:background4Night="@drawable/setting_shape_bg_card_night"
            app:background4Skin="@drawable/setting_shape_bg_card_day">
            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/car_number_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sv_dimen_30"
                android:drawableLeft="@drawable/selector_ic_setting_back_day"
                app:drawableLeft4Skin="@drawable/selector_ic_setting_back_day"
                app:drawableLeft4Night="@drawable/selector_ic_back_night"
                android:text="@string/sv_setting_rb4"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Skin="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                android:textSize="@dimen/sv_dimen_36"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/sv_dimen_5"
                android:layout_marginTop="@dimen/sv_dimen_20"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/text_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:textColor4Skin="@color/onTertiaryDay"
                app:textColor4Night="@color/customColorSecondTextTypeTwoNight"
                android:text="@string/sv_setting_my_car_number_edit"
                android:textColor="@color/onTertiaryDay"
                android:textSize="@dimen/sv_dimen_28"
                app:layout_constraintLeft_toLeftOf="@+id/car_number_title"
                app:layout_constraintTop_toBottomOf="@+id/car_number_title"
                android:layout_marginTop="@dimen/sv_dimen_150"
                />

            <com.desaysv.psmap.ui.settings.vehicle.LicensePlateView
                android:id="@+id/licensePlateView"
                android:layout_width="0dp"
                android:layout_height="@dimen/sv_dimen_45"
                android:layout_gravity="center_horizontal"
                app:layout_constraintLeft_toLeftOf="@+id/car_number_title"
                app:layout_constraintTop_toBottomOf="@+id/text_input"
                android:layout_marginTop="@dimen/sv_dimen_36"
                />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/addVehicle"
                android:layout_width="@dimen/sv_dimen_96"
                android:layout_height="@dimen/sv_dimen_50"
                android:background="@drawable/selector_bg_confirm_day"
                app:background4Night="@drawable/selector_bg_confirm_night"
                app:background4Skin="@drawable/selector_bg_confirm_day"
                android:text="@string/sv_common_confirm"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sv_dimen_28"
                android:gravity="center"
                android:enabled="@{viewModel.clickVehicleEnable}"
                app:layout_constraintLeft_toRightOf="@+id/licensePlateView"
                app:layout_constraintTop_toTopOf="@+id/licensePlateView"
                app:layout_constraintBottom_toBottomOf="@+id/licensePlateView"
                android:layout_marginLeft="@dimen/sv_dimen_30"
                />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/text_traffic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:textColor4Skin="@color/onTertiaryDay"
                app:textColor4Night="@color/customColorSecondTextTypeTwoNight"
                android:text="@string/sv_setting_my_car_number_limit"
                android:textColor="@color/onTertiaryDay"
                android:textSize="@dimen/sv_dimen_28"
                app:layout_constraintLeft_toLeftOf="@+id/car_number_title"
                app:layout_constraintTop_toBottomOf="@+id/licensePlateView"
                android:layout_marginTop="@dimen/sv_dimen_75"
                />

            <Switch
                android:id="@+id/limitSwitch"
                android:layout_width="@dimen/sv_dimen_88"
                android:layout_height="@dimen/sv_dimen_50"
                tools:checked="true"
                android:clickable="@{viewModel.limitEnable}"
                android:showText="false"
                android:splitTrack="true"
                android:switchMinWidth="@dimen/sv_dimen_88"
                tools:thumb="@drawable/switch_thumb_checked_day"
                tools:track="@drawable/switch_track_checked_day"
                app:switchSetDrawable="@{viewModel.isNight}"
                app:switchSetChecked="@{viewModel.limitChecked}"
                app:layout_constraintTop_toTopOf="@+id/text_traffic"
                app:layout_constraintBottom_toBottomOf="@+id/text_traffic"
                app:layout_constraintLeft_toRightOf="@+id/text_traffic"
                android:layout_marginLeft="@dimen/sv_dimen_84"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </com.autonavi.auto.skin.view.SkinConstraintLayout>
        <RelativeLayout
            android:id="@+id/reLicensePlate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>