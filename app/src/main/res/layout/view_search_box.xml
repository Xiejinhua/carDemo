<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="isNight"
            type="Boolean" />
    </data>


    <com.autonavi.auto.skin.view.SkinConstraintLayout
        android:id="@+id/search_box"
        android:layout_width="@dimen/sv_dimen_640"
        android:layout_height="@dimen/sv_dimen_72" >

        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/search_back"
            android:layout_width="@dimen/sv_dimen_64"
            android:layout_height="@dimen/sv_dimen_64"
            android:layout_marginStart="@dimen/sv_dimen_30"
            android:contentDescription="@string/sv_search_back_accessibility"
            android:background="@drawable/selector_ic_back_day"
            app:background4Night="@drawable/selector_ic_back_night"
            app:background4Skin="@drawable/selector_ic_back_day"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:id="@+id/search_content"
            android:layout_width="@dimen/sv_dimen_496"
            android:layout_height="@dimen/sv_dimen_72"
            android:layout_marginStart="@dimen/sv_dimen_10"
            android:background="@drawable/shape_commont_search_box_bg_day"
            app:background4Night="@drawable/shape_commont_search_box_bg_night"
            app:background4Skin="@drawable/shape_commont_search_box_bg_day"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/search_back"
            app:layout_constraintTop_toTopOf="parent">

            <com.autonavi.auto.skin.view.SkinConstraintLayout
                android:id="@+id/cl_offline_city"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                tools:visibility="visible">

                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/tv_offline_city_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京市"
                    android:layout_marginStart="@dimen/sv_dimen_12"
                    android:gravity="center"
                    android:maxLines="1"
                    android:maxWidth="@dimen/sv_dimen_152"
                    android:textColor="@color/onPrimaryDay"
                    android:textSize="@dimen/sv_dimen_30"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/iv_offline_city_arrow"
                    app:textColor4Night="@color/onPrimaryNight"
                    app:textColor4Skin="@color/onPrimaryDay" />

                <com.autonavi.auto.skin.view.SkinImageView
                    android:id="@+id/iv_offline_city_arrow"
                    android:layout_width="@dimen/sv_dimen_32"
                    android:layout_height="@dimen/sv_dimen_32"
                    android:layout_marginStart="@dimen/sv_dimen_8"
                    android:layout_marginEnd="@dimen/sv_dimen_16"
                    android:background="@drawable/iv_offline_city_arrow_day"
                    app:background4Night="@drawable/iv_offline_city_arrow_night"
                    app:background4Skin="@drawable/iv_offline_city_arrow_day"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_offline_city_title"
                    app:layout_constraintEnd_toStartOf="@+id/line"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.autonavi.auto.skin.view.SkinImageView
                    android:id="@+id/line"
                    android:layout_width="@dimen/sv_dimen_1"
                    android:layout_height="@dimen/sv_dimen_32"
                    app:background4Night="@color/lineNight"
                    app:background4Skin="@color/lineDay"
                    android:background="@color/lineDay"
                    app:layout_constraintStart_toEndOf="@+id/iv_offline_city_arrow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:background="@color/lineDay" />

            </com.autonavi.auto.skin.view.SkinConstraintLayout>

            <com.autonavi.auto.skin.view.SkinConstraintLayout
                android:id="@+id/cl_trip_city"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                tools:visibility="gone">

                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/tv_trip_city_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京市"
                    android:layout_marginStart="@dimen/sv_dimen_12"
                    android:gravity="center"
                    android:maxLines="1"
                    android:maxWidth="@dimen/sv_dimen_152"
                    android:textColor="@color/onPrimaryDay"
                    android:textSize="@dimen/sv_dimen_30"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/iv_trip_city_arrow"
                    app:textColor4Night="@color/onPrimaryNight"
                    app:textColor4Skin="@color/onPrimaryDay" />

                <com.autonavi.auto.skin.view.SkinImageView
                    android:id="@+id/iv_trip_city_arrow"
                    android:layout_width="@dimen/sv_dimen_32"
                    android:layout_height="@dimen/sv_dimen_32"
                    android:layout_marginStart="@dimen/sv_dimen_8"
                    android:layout_marginEnd="@dimen/sv_dimen_16"
                    android:background="@drawable/iv_offline_city_arrow_day"
                    app:background4Night="@drawable/iv_offline_city_arrow_night"
                    app:background4Skin="@drawable/iv_offline_city_arrow_day"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_trip_city_title"
                    app:layout_constraintEnd_toStartOf="@+id/line"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.autonavi.auto.skin.view.SkinConstraintLayout>

            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/search"
                android:layout_width="@dimen/sv_dimen_64"
                android:layout_height="@dimen/sv_dimen_64"
                android:layout_marginStart="@dimen/sv_dimen_12"
                android:background="@drawable/selector_ic_search_day"
                app:background4Night="@drawable/selector_ic_search_night"
                app:background4Skin="@drawable/selector_ic_search_day"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cl_offline_city"
                app:layout_constraintTop_toTopOf="parent" />

            <com.autonavi.auto.skin.view.SkinEditText
                android:id="@+id/search_around_editText"
                android:layout_width="0dp"
                android:layout_height="@dimen/sv_dimen_45"
                android:layout_marginStart="@dimen/sv_dimen_12"
                android:background="@null"
                android:ellipsize="end"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="left|center_vertical"
                android:hint="请输入目的地"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/onPrimaryDay"
                android:textColorHint="@color/onSecondaryDay"
                android:textCursorDrawable="@drawable/shape_bg_cursor_day"
                android:textSize="@dimen/sv_dimen_30"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/search"
                app:layout_constraintEnd_toStartOf="@+id/siv_search_delete"
                app:layout_constraintTop_toTopOf="parent"
                app:setTextCursorDrawable="@{isNight}"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                app:textColorHint4Night="@color/onSecondaryNight"
                app:textColorHint4Skin="@color/onSecondaryDay" />

            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/siv_search_delete"
                android:layout_width="@dimen/sv_dimen_64"
                android:layout_height="@dimen/sv_dimen_64"
                android:layout_marginEnd="@dimen/sv_dimen_12"
                android:src="@drawable/selector_ic_delete_circle_day"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cls_loading"
                app:layout_constraintTop_toTopOf="parent"
                app:src4Night="@drawable/selector_ic_delete_circle_night"
                app:src4Skin="@drawable/selector_ic_delete_circle_day"
                tools:visibility="visible" />

            <ProgressBar
                android:id="@+id/cls_loading"
                android:layout_width= "@dimen/sv_dimen_64"
                android:layout_height="@dimen/sv_dimen_64"
                android:layout_marginRight="@dimen/sv_dimen_12"
                android:indeterminateBehavior="repeat"
                android:indeterminateDrawable="@drawable/rotate_loading_view_day"
                app:setIndeterminateDrawableSearch="@{isNight}"
                android:indeterminateOnly="true"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cl_trip_city"
                app:layout_constraintTop_toTopOf="parent" />

        </com.autonavi.auto.skin.view.SkinConstraintLayout>


    </com.autonavi.auto.skin.view.SkinConstraintLayout>
</layout>