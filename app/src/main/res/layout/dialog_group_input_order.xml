<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:id="@+id/dialog"
            android:layout_width="@dimen/sv_dimen_900"
            android:layout_height="@dimen/sv_dimen_352"
            android:background="@drawable/shape_bg_custom_dialog_day"
            app:background4Skin="@drawable/shape_bg_custom_dialog_day"
            app:background4Night="@drawable/shape_bg_custom_dialog_night"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.autonavi.auto.skin.view.SkinClearEditText
                android:id="@+id/set_search_team"
                android:layout_width="0dp"
                android:layout_height="@dimen/sv_dimen_100"
                android:ellipsize="end"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="left|center_vertical"
                android:hint="输入口令，加入对方队伍"
                android:inputType="number"
                android:lineSpacingExtra="@dimen/sv_dimen_4"
                android:maxLength="50"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sv_dimen_28"
                android:textColor="@color/customColorBlack60Night"
                app:textColor4Night="@color/onBackgroundNight"
                app:textColor4Skin="@color/customColorBlack60Night"
                android:textColorHint="@color/onSecondaryDay"
                app:textColorHint4Night="@color/customColorWhite30Night"
                app:textColorHint4Skin="@color/onSecondaryDay"
                android:background="@drawable/shape_bg_group_input_day"
                app:background4Night="@drawable/shape_bg_group_input_night"
                app:background4Skin="@drawable/shape_bg_group_input_day"
                app:clear_drawable="@drawable/ic_close_circle_night"
                app:clear_size="@dimen/sv_dimen_35"
                app:setCustomSelectionActionModeCallback="@{true}"
                android:layout_marginHorizontal="@dimen/sv_dimen_80"
                android:layout_marginTop="@dimen/sv_dimen_50"
                android:paddingHorizontal="@dimen/sv_dimen_30"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/ok"
                android:layout_width="@dimen/sv_dimen_320"
                android:layout_height="@dimen/sv_dimen_80"
                android:background="@drawable/selector_bg_confirm_day"
                app:background4Night="@drawable/selector_bg_confirm_night"
                app:background4Skin="@drawable/selector_bg_confirm_day"
                android:gravity="center"
                android:text="@string/sv_setting_team_add_text"
                android:textColor="@color/primaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/primaryDay"
                android:textSize="@dimen/sv_dimen_28"
                android:layout_marginBottom="@dimen/sv_dimen_40"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cancel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"/>

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/cancel"
                android:layout_width="@dimen/sv_dimen_320"
                android:layout_height="@dimen/sv_dimen_80"
                android:background="@drawable/selector_shape_bg_custom_dialog_cancel_btn_day"
                app:background4Night="@drawable/selector_shape_bg_custom_dialog_cancel_btn_night"
                app:background4Skin="@drawable/selector_shape_bg_custom_dialog_cancel_btn_day"
                android:gravity="center"
                android:text="@string/sv_common_cancel"
                android:textColor="@color/onPrimaryDay"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                android:textSize="@dimen/sv_dimen_28"
                android:layout_marginLeft="@dimen/sv_dimen_100"
                app:layout_constraintBottom_toBottomOf="@+id/ok"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ok" />
        </com.autonavi.auto.skin.view.SkinConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>