<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.desaysv.psmap.ui.search.SearchAimPoiPushModel" />

        <import type="android.view.View" />
    </data>

    <com.autonavi.auto.skin.view.SkinConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:layout_width="@dimen/sv_dimen_680"
            android:layout_height="@dimen/sv_dimen_1178"
            android:layout_marginStart="@dimen/sv_dimen_20"
            android:layout_marginTop="@dimen/sv_dimen_90"
            android:background="@drawable/ic_main_bg_day"
            android:onClick="@{()->0}"
            android:soundEffectsEnabled="false"
            android:paddingHorizontal="@dimen/sv_dimen_20"
            android:paddingTop="@dimen/sv_dimen_20"
            android:paddingBottom="@dimen/sv_dimen_28"
            app:background4Night="@drawable/ic_main_bg_night"
            app:background4Skin="@drawable/ic_main_bg_day"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibleGone="@{viewModel.singleResult==null}">

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/search_category_back"
                android:layout_width="@dimen/sv_dimen_64"
                android:layout_height="@dimen/sv_dimen_64"
                android:layout_marginStart="@dimen/sv_dimen_20"
                android:layout_marginTop="@dimen/sv_dimen_30"
                android:background="@drawable/selector_ic_back_day"
                app:background4Night="@drawable/selector_ic_back_night"
                app:background4Skin="@drawable/selector_ic_back_day"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/search_category_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收到的点"
                android:textColor="@color/onPrimaryDay"
                android:textSize="@dimen/sv_dimen_34"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/search_category_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/search_category_back"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay" />

            <com.autonavi.auto.skin.view.SkinRecyclerView
                android:id="@+id/message_listview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sv_dimen_910"
                android:layout_marginTop="@dimen/sv_dimen_33"
                android:layout_marginBottom="@dimen/sv_dimen_14"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:listSelector="@android:color/transparent"
                android:overScrollMode="never"
                android:paddingHorizontal="@dimen/sv_dimen_10"
                android:requiresFadingEdge="horizontal"
                android:scrollbarSize="@dimen/sv_dimen_3"
                android:scrollbarStyle="insideOverlay"
                android:scrollbarThumbVertical="@drawable/shape_account_scrollbar_thumb"
                android:scrollbars="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_category_back"
                app:setLayoutManager="@{true}"
                app:visibleGone="@{!viewModel.isLoading &amp;&amp; viewModel.hasAimData}" />

            <com.autonavi.auto.skin.view.SkinConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:visibleGone="@{viewModel.isLoading || !viewModel.hasAimData}"
                tools:visibility="visible">

                <ProgressBar
                    android:id="@+id/loading"
                    android:layout_width="@dimen/sv_dimen_60"
                    android:layout_height="@dimen/sv_dimen_60"
                    android:indeterminateBehavior="repeat"
                    android:indeterminateDrawable="@drawable/rotate_loading_view_day"
                    android:indeterminateOnly="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:setIndeterminateDrawableSmall="@{viewModel.themeChange}"
                    app:visibleGone="@{viewModel.isLoading}"
                    tools:visibility="visible" />

                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/loading_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sv_dimen_24"
                    android:text="@string/routecarresultrestrictedarea_text_fail"
                    android:textColor="@color/onPrimaryDay"
                    android:textSize="@dimen/sv_dimen_30"
                    app:layout_constraintTop_toBottomOf="@+id/loading"
                    app:layout_constraintLeft_toLeftOf="@+id/loading"
                    app:layout_constraintRight_toRightOf="@+id/loading"
                    app:textColor4Night="@color/customColorWhite80Night"
                    app:textColor4Skin="@color/onPrimaryDay"
                    app:visibleGone="@{viewModel.isLoading}"
                    tools:visibility="visible" />

                <com.autonavi.auto.skin.view.SkinImageView
                    android:id="@+id/empty"
                    android:layout_width="@dimen/sv_dimen_150"
                    android:layout_height="@dimen/sv_dimen_150"
                    android:background="@drawable/ic_message_empty_day"
                    app:background4Night="@drawable/ic_message_empty_night"
                    app:background4Skin="@drawable/ic_message_empty_day"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:visibleGone="@{!viewModel.isLoading &amp;&amp; !viewModel.hasAimData}"
                    tools:visibility="visible" />

                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sv_dimen_32"
                    android:gravity="center"
                    android:text="@string/sv_setting_no_message"
                    android:textColor="@color/onPrimaryDay"
                    android:textSize="@dimen/sv_dimen_30"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/empty"
                    app:textColor4Night="@color/onPrimaryNight"
                    app:textColor4Skin="@color/onPrimaryDay"
                    app:visibleGone="@{!viewModel.isLoading &amp;&amp; !viewModel.hasAimData}"
                    tools:visibility="visible" />

            </com.autonavi.auto.skin.view.SkinConstraintLayout>
        </com.autonavi.auto.skin.view.SkinConstraintLayout>

        <com.desaysv.psmap.ui.search.view.SearchSinglePoiView
            android:id="@+id/single_poi_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:visibleGone="@{viewModel.singleResult!=null}" />


    </com.autonavi.auto.skin.view.SkinConstraintLayout>

</layout>