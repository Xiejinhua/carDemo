<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.desaysv.psmap.ui.search.MapPointDataViewModel" />

        <variable
            name="type"
            type="Integer" />

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <import type="com.desaysv.psmap.model.bean.CommandRequestPOICardBean" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:id="@+id/clMapPoiCard"
            android:layout_width="@dimen/sv_dimen_680"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sv_dimen_20"
            android:layout_marginTop="@dimen/sv_dimen_90"
            android:background="@drawable/ic_main_bg_day"
            android:onClick="@{()->0}"
            android:soundEffectsEnabled="false"
            app:background4Night="@drawable/ic_main_bg_night"
            app:background4Skin="@drawable/ic_main_bg_day"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibleGone="@{!viewModel.showError}"
            tools:visibility="visible">

            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/ivClose1"
                android:layout_width="@dimen/sv_dimen_64"
                android:layout_height="@dimen/sv_dimen_64"
                android:layout_marginStart="@dimen/sv_dimen_30"
                android:layout_marginTop="@dimen/sv_dimen_30"
                android:contentDescription="@string/sv_search_back_accessibility"
                android:background="@drawable/ic_close_tip_day"
                app:background4Night="@drawable/ic_close_tip_night"
                app:background4Skin="@drawable/ic_close_tip_day"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.autonavi.auto.skin.view.SkinConstraintLayout
                android:id="@+id/clTextDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sv_dimen_32"
                android:layout_marginTop="@dimen/sv_dimen_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivClose1">

                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/tvPoiName"
                    style="@style/CustomTextAppearanceBodyMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{viewModel.poiName}"
                    android:textColor="@color/onPrimaryDay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:textColor4Night="@color/onPrimaryNight"
                    app:textColor4Skin="@color/onPrimaryDay"
                    tools:text="球馆之家球馆之家球馆之家球馆之家" />

                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/tvAddress"
                    style="@style/CustomTextAppearanceBodySmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sv_dimen_12"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{viewModel.showViaPoi.poi.addr}"
                    android:textColor="@color/onSecondaryDay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvPoiName"
                    app:textColor4Night="@color/onSecondaryNight"
                    app:textColor4Skin="@color/onSecondaryDay"
                    tools:text="豆腐干豆腐干地方干豆腐干地方干豆腐干地方地方干豆腐" />

                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/tvArriveDistanceTime"
                    android:textSize="@dimen/sv_dimen_36"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sv_dimen_30"
                    android:text="@{viewModel.poiCardDistanceAndTime}"
                    android:textColor="@color/onPrimaryDay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvAddress"
                    app:textColor4Night="@color/onPrimaryNight"
                    app:textColor4Skin="@color/onPrimaryDay"
                    tools:text="3公里 丨 约10分钟"
                    tools:textColor="@color/onPrimaryDay" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rl_search_child_station"
                    android:layout_width="@dimen/sv_dimen_496"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sv_dimen_24"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvArriveDistanceTime"
                    app:visibleGone="@{viewModel.showChild}"
                    tools:visibility="visible" />

                <com.autonavi.auto.skin.view.SkinImageView
                    android:id="@+id/ivMoreChild"
                    android:layout_width="@dimen/sv_dimen_64"
                    android:layout_height="@dimen/sv_dimen_64"
                    android:background="@drawable/selector_ic_arrow_day"
                    app:background4Night="@drawable/selector_ic_arrow_night"
                    app:background4Skin="@drawable/selector_ic_arrow_day"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/rl_search_child_station"
                    app:visibleGone="@{viewModel.moreChild}"
                    tools:visibility="visible" />


                <com.autonavi.auto.skin.view.SkinView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/sv_dimen_1"
                    android:layout_marginTop="@dimen/sv_dimen_24"
                    android:background="@color/lineDay"
                    app:background4Night="@color/lineNight"
                    app:background4Skin="@color/lineDay"
                    app:layout_constraintTop_toBottomOf="@+id/rl_search_child_station"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </com.autonavi.auto.skin.view.SkinConstraintLayout>

            <com.autonavi.auto.skin.view.SkinConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sv_dimen_153"
                android:layout_marginTop="@dimen/sv_dimen_24"
                app:layout_constraintTop_toBottomOf="@+id/clTextDetail"
                app:visibleGone="@{type==1}"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/sv_dimen_40"
                    app:layout_constraintStart_toStartOf="parent">

                    <com.autonavi.auto.skin.view.SkinImageView
                        android:id="@+id/ivSearchAround"
                        android:layout_width="@dimen/sv_dimen_64"
                        android:layout_height="@dimen/sv_dimen_64"
                        android:contentDescription="搜周边"
                        android:background="@drawable/selector_ic_search_around_day"
                        app:background4Night="@drawable/selector_ic_search_around_night"
                        app:background4Skin="@drawable/selector_ic_search_around_day"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/ivFavorite"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.autonavi.auto.skin.view.SkinImageView
                        android:id="@+id/ivFavorite"
                        android:layout_width="@dimen/sv_dimen_64"
                        android:layout_height="@dimen/sv_dimen_64"
                        android:layout_marginStart="@dimen/sv_dimen_56"
                        android:contentDescription="收藏#取消收藏"
                        app:layout_constraintEnd_toEndOf="@+id/ivPhoneCall"
                        app:layout_constraintStart_toEndOf="@+id/ivSearchAround"
                        app:layout_constraintTop_toTopOf="@+id/ivSearchAround"
                        app:layout_goneMarginEnd="@dimen/sv_dimen_32"
                        app:setViewFavorite="@{viewModel.poiCardIsFavorite}"
                        tools:background="@drawable/selector_ic_favorite_day" />

                    <com.autonavi.auto.skin.view.SkinImageView
                        android:id="@+id/ivPhoneCall"
                        android:layout_width="@dimen/sv_dimen_64"
                        android:layout_height="@dimen/sv_dimen_64"
                        android:layout_marginStart="@dimen/sv_dimen_56"
                        android:contentDescription="电话#拨打电话"
                        android:background="@drawable/selector_ic_phone_call_day"
                        app:background4Night="@drawable/selector_ic_phone_call_night"
                        app:background4Skin="@drawable/selector_ic_phone_call_day"
                        app:layout_constraintStart_toEndOf="@+id/ivFavorite"
                        app:layout_constraintTop_toTopOf="@+id/ivFavorite"
                        app:visibleGone="@{!TextUtils.isEmpty(viewModel.phoneNumber)}"
                        tools:visibility="visible" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/ivGoHere"
                    style="@style/CustomTextAppearanceBodyMedium"
                    android:layout_width="@dimen/sv_dimen_200"
                    android:layout_height="@dimen/sv_dimen_72"
                    android:layout_marginEnd="@dimen/sv_dimen_40"
                    android:background="@drawable/selector_btn_confirm_day"
                    android:gravity="center"
                    android:text="@string/sv_common_goto"
                    android:textColor="@color/onPrimaryContainerDay"
                    app:background4Night="@drawable/selector_btn_confirm_night"
                    app:background4Skin="@drawable/selector_btn_confirm_day"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:textColor4Night="@color/onPrimaryContainerNight"
                    app:textColor4Skin="@color/onPrimaryContainerDay"
                    tools:visibility="visible" />
            </com.autonavi.auto.skin.view.SkinConstraintLayout>

            <com.autonavi.auto.skin.view.SkinConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sv_dimen_153"
                android:layout_marginTop="@dimen/sv_dimen_24"
                app:layout_constraintTop_toBottomOf="@+id/clTextDetail"
                app:visibleGone="@{type==3 || type==4 || type==5}"
                tools:visibility="gone">
                <com.autonavi.auto.skin.view.SkinView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/sv_dimen_1"
                    android:background="@color/lineDay"
                    app:background4Night="@color/lineNight"
                    app:background4Skin="@color/lineDay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/ivAddHome"
                    style="@style/CustomTextAppearanceBodyMedium"
                    android:layout_width="@dimen/sv_dimen_340"
                    android:layout_height="@dimen/sv_dimen_72"
                    android:background="@drawable/selector_btn_confirm_day"
                    android:gravity="center"
                    android:text="设置为家"
                    android:textSize="@dimen/sv_dimen_32"
                    android:textColor="@color/onPrimaryContainerDay"
                    app:background4Night="@drawable/selector_btn_confirm_night"
                    app:background4Skin="@drawable/selector_btn_confirm_day"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:textColor4Night="@color/onPrimaryContainerNight"
                    app:textColor4Skin="@color/onPrimaryContainerDay"
                    tools:visibility="visible" />
            </com.autonavi.auto.skin.view.SkinConstraintLayout>

            <com.autonavi.auto.skin.view.SkinConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sv_dimen_153"
                android:layout_marginTop="@dimen/sv_dimen_24"
                app:layout_constraintTop_toBottomOf="@+id/clTextDetail"
                app:visibleGone="@{type==2}"
                tools:visibility="gone">

                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/ivViaGoHere"
                    style="@style/CustomTextAppearanceBodyMedium"
                    android:layout_width="@dimen/sv_dimen_264"
                    android:layout_height="@dimen/sv_dimen_90"
                    android:background="@drawable/selector_btn_confirm_day"
                    android:gravity="center"
                    android:text="@string/sv_common_goto"
                    android:textColor="@color/onPrimaryContainerDay"
                    app:background4Night="@drawable/selector_btn_confirm_night"
                    app:background4Skin="@drawable/selector_btn_confirm_day"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/ivAddVia"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:textColor4Night="@color/onPrimaryContainerNight"
                    app:textColor4Skin="@color/onPrimaryContainerDay"
                    tools:visibility="visible" />


                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/ivAddVia"
                    style="@style/CustomTextAppearanceBodyMedium"
                    android:layout_width="@dimen/sv_dimen_264"
                    android:layout_height="@dimen/sv_dimen_90"
                    android:layout_marginStart="@dimen/sv_dimen_32"
                    android:background="@drawable/selector_btn_confirm_day"
                    android:gravity="center"
                    android:text="添加为途经点"
                    android:textColor="@color/onPrimaryContainerDay"
                    app:background4Night="@drawable/selector_btn_confirm_night"
                    app:background4Skin="@drawable/selector_btn_confirm_day"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivViaGoHere"
                    app:layout_constraintTop_toTopOf="parent"
                    app:textColor4Night="@color/onPrimaryContainerNight"
                    app:textColor4Skin="@color/onPrimaryContainerDay"
                    tools:textColor="@color/onPrimaryNight"
                    tools:visibility="visible" />
            </com.autonavi.auto.skin.view.SkinConstraintLayout>

        </com.autonavi.auto.skin.view.SkinConstraintLayout>

        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:id="@+id/clError"
            android:layout_width="@dimen/sv_dimen_680"
            android:layout_height="@dimen/sv_dimen_869"
            android:layout_marginStart="@dimen/sv_dimen_20"
            android:layout_marginTop="@dimen/sv_dimen_90"
            android:background="@drawable/ic_main_bg_day"
            android:onClick="@{()->0}"
            android:soundEffectsEnabled="false"
            app:background4Night="@drawable/ic_main_bg_night"
            app:background4Skin="@drawable/ic_main_bg_day"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibleGone="@{viewModel.showError || viewModel.showLoading}"
            tools:visibility="gone">

            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/ivClose2"
                android:layout_width="@dimen/sv_dimen_64"
                android:layout_height="@dimen/sv_dimen_64"
                android:layout_marginStart="@dimen/sv_dimen_30"
                android:layout_marginTop="@dimen/sv_dimen_30"
                android:contentDescription="@string/sv_search_back_accessibility"
                android:background="@drawable/ic_close_tip_day"
                app:background4Night="@drawable/ic_close_tip_night"
                app:background4Skin="@drawable/ic_close_tip_day"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.autonavi.auto.skin.view.SkinConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sv_dimen_113"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:visibleGone="@{viewModel.showLoading}"
                tools:visibility="gone">

                <ProgressBar
                    android:id="@+id/pbLoading"
                    android:layout_width="@dimen/sv_dimen_54"
                    android:layout_height="@dimen/sv_dimen_54"
                    android:indeterminateBehavior="repeat"
                    android:indeterminateDrawable="@drawable/rotate_loading_view_day"
                    android:indeterminateOnly="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:setIndeterminateDrawableFiftyFour="@{viewModel.isNight}" />

                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/tvivLoading"
                    style="@style/CustomTextAppearanceBodySmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/sv_map_card_loading_tips"
                    android:textColor="@color/onSecondaryDay"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:textColor4Night="@color/onSecondaryNight"
                    app:textColor4Skin="@color/onSecondaryDay" />
            </com.autonavi.auto.skin.view.SkinConstraintLayout>

            <com.autonavi.auto.skin.view.SkinConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sv_dimen_600"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivClose2"
                app:visibleGone="@{viewModel.showError}"
                tools:visibility="gone">

                <com.autonavi.auto.skin.view.SkinImageView
                    android:id="@+id/ivError"
                    android:layout_width="@dimen/sv_dimen_200"
                    android:layout_height="@dimen/sv_dimen_200"
                    android:background="@drawable/ic_network_error_day"
                    app:background4Night="@drawable/ic_network_error_night"
                    app:background4Skin="@drawable/ic_network_error_day"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/tvError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sv_dimen_40"
                    android:layout_marginBottom="@dimen/sv_dimen_48"
                    android:gravity="center"
                    android:text="@string/sv_map_card_network_tips"
                    android:textColor="@color/onTertiaryDay"
                    android:textFontWeight="400"
                    android:textSize="@dimen/sv_dimen_28"
                    app:layout_constraintTop_toBottomOf="@+id/ivError"
                    app:textColor4Night="@color/onTertiaryNight"
                    app:textColor4Skin="@color/onTertiaryDay" />

                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/tvReTry"
                    android:layout_width="@dimen/sv_dimen_304"
                    android:layout_height="@dimen/sv_dimen_90"
                    android:layout_marginTop="@dimen/sv_dimen_40"
                    android:background="@drawable/selector_bg_second_primary_day"
                    android:gravity="center"
                    android:text="@string/sv_common_click_retry"
                    android:textColor="@color/customAhaSecenicPointTextDay"
                    android:textFontWeight="400"
                    android:textSize="@dimen/sv_dimen_34"
                    app:background4Night="@drawable/selector_bg_second_primary_night"
                    app:background4Skin="@drawable/selector_bg_second_primary_day"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvError"
                    app:textColor4Night="@color/onPrimaryNight"
                    app:textColor4Skin="@color/customAhaSecenicPointTextDay"
                    tools:visibility="visible" />

            </com.autonavi.auto.skin.view.SkinConstraintLayout>

        </com.autonavi.auto.skin.view.SkinConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>