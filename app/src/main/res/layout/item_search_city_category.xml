<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cityCategory"
            type="com.desaysv.psmap.model.bean.ProvinceDataBean" />
        <variable
            name="isSelect"
            type="boolean" />
        <variable
            name="isNight"
            type="Boolean" />
    </data>

    <com.autonavi.auto.skin.view.SkinConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@drawable/ic_main_bg_day">

        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tv_city_category_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/sv_dimen_51"
                android:gravity="center|left"
                android:text="@{cityCategory.name}"
                android:layout_marginTop="@dimen/sv_dimen_35"
                android:textColor="@color/onPrimaryDay"
                android:layout_marginStart="@dimen/sv_dimen_40"
                android:textSize="@dimen/sv_dimen_34"
                app:layout_constraintEnd_toStartOf="@+id/iv_offline_city_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                app:setSearchListTitleTextColor="@{isNight}"
                tools:text="常用城市"/>

            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/iv_offline_city_arrow"
                android:layout_width="@dimen/sv_dimen_64"
                android:layout_height="@dimen/sv_dimen_64"
                android:layout_marginStart="@dimen/sv_dimen_20"
                android:layout_marginEnd="@dimen/sv_dimen_40"
                android:rotation="@{isSelect?180:0}"
                android:background="@drawable/iv_offline_city_list_arrow_down_day"
                app:background4Night="@drawable/iv_offline_city_list_arrow_down_night"
                app:background4Skin="@drawable/iv_offline_city_list_arrow_down_day"
                app:setSearOfflineCityArrow="@{isNight}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_city_category_name"
                app:layout_constraintBottom_toBottomOf="@+id/tv_city_category_name"/>


            <com.autonavi.auto.skin.view.SkinView
                android:layout_width="match_parent"
                android:layout_height="@dimen/sv_dimen_1"
                android:background="@color/lineDay"
                app:background4Night="@color/lineNight"
                app:background4Skin="@color/lineDay"
                android:layout_marginTop="@dimen/sv_dimen_34"
                android:layout_marginHorizontal="@dimen/sv_dimen_40"
                app:layout_constraintTop_toBottomOf="@+id/tv_city_category_name"
                tools:background="@color/lineNight"
                app:setSearchLine="@{isNight}"
                app:visibleGone="@{!isSelect}"
                tools:visibility="visible"/>
        </com.autonavi.auto.skin.view.SkinConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/city_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/sv_dimen_40"
            android:layout_marginTop="@dimen/sv_dimen_22"
            android:orientation="vertical"
            android:nestedScrollingEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top"
            app:layout_constraintBottom_toTopOf="@+id/line"
            android:layout_marginBottom="@dimen/sv_dimen_18"
            app:visibleGone="@{isSelect}"
            tools:visibility="visible" />

        <com.autonavi.auto.skin.view.SkinView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sv_dimen_1"
            android:background="@color/lineDay"
            app:background4Night="@color/lineNight"
            app:background4Skin="@color/lineDay"
            android:layout_marginHorizontal="@dimen/sv_dimen_40"
            app:layout_constraintTop_toBottomOf="@+id/city_list"
            tools:background="@color/lineNight"
            app:setSearchLine="@{isNight}"
            app:visibleGone="@{!isSelect}" />
    </com.autonavi.auto.skin.view.SkinConstraintLayout>
</layout>
