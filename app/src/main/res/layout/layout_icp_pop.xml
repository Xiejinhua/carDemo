<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="info"
            type="com.desaysv.psmap.model.bean.MoreInfoBean" />
        <import type="android.text.TextUtils"/>
    </data>

    <com.autonavi.auto.skin.view.SkinConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/customColorPop80Day"
        app:background4Skin="@color/customColorPop80Day"
        app:background4Night="@color/customColorPop70Night"
        android:visibility="gone"
        tools:visibility="visible"
        app:visibleGone="@{!TextUtils.isEmpty(info.content)}">

        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:id="@+id/shadowLayout"
            android:layout_width="@dimen/sv_dimen_800"
            android:layout_height="@dimen/sv_dimen_662"
            android:background="@drawable/ic_main_dialog_bg_day"
            app:background4Night="@drawable/ic_main_dialog_bg_night"
            app:background4Skin="@drawable/ic_main_dialog_bg_day"
            android:onClick="@{()->0}"
            android:soundEffectsEnabled="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sv_agreement_icp_title_text"
            android:textColor="@color/onPrimaryDay"
            app:textColor4Skin="@color/onPrimaryDay"
            app:textColor4Night="@color/onPrimaryNight"
            android:textSize="@dimen/sv_dimen_34"
            android:layout_marginTop="@dimen/sv_dimen_70"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/shadowLayout" />

        <com.autonavi.auto.skin.view.SkinImageView
            android:id="@+id/qr_img_bg"
            android:layout_width="@dimen/sv_dimen_350"
            android:layout_height="@dimen/sv_dimen_350"
            android:background="@drawable/shape_bg_qr_day"
            app:background4Skin="@drawable/shape_bg_qr_day"
            app:background4Night="@drawable/shape_bg_qr_night"
            android:layout_marginTop="@dimen/sv_dimen_32"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <ImageView
            android:id="@+id/qr_img"
            android:layout_width="@dimen/sv_dimen_300"
            android:layout_height="@dimen/sv_dimen_300"
            app:layout_constraintEnd_toEndOf="@+id/qr_img_bg"
            app:layout_constraintStart_toStartOf="@+id/qr_img_bg"
            app:layout_constraintTop_toTopOf="@+id/qr_img_bg"
            app:layout_constraintBottom_toBottomOf="@+id/qr_img_bg"
            app:agreementImage="@{2}" />

        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/qr_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sv_dimen_32"
            android:textColor="@color/onTertiaryDay"
            app:textColor4Skin="@color/onTertiaryDay"
            app:textColor4Night="@color/onTertiaryNight"
            android:textSize="@dimen/sv_dimen_28"
            app:layout_constraintEnd_toEndOf="@+id/qr_img_bg"
            app:layout_constraintStart_toStartOf="@+id/qr_img_bg"
            app:layout_constraintTop_toBottomOf="@+id/qr_img_bg"
            android:text="@string/sv_agreement_phone_scan_qr_code" />
    </com.autonavi.auto.skin.view.SkinConstraintLayout>
</layout>