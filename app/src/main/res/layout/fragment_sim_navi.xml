        <include
            android:id="@+id/naviInfoView"
            layout="@layout/view_navi_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sv_dimen_10"
            android:layout_marginTop="@dimen/sv_dimen_90"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:viewModel="@{viewModel}" />

        <include
            android:id="@+id/viewIntervalCameraView"
            layout="@layout/view_interval_camera"
            android:layout_width="@dimen/sv_dimen_680"
            android:layout_height="@dimen/sv_dimen_200"
            android:layout_marginTop="@dimen/sv_dimen_n16"
            app:layout_constraintEnd_toEndOf="@+id/naviInfoView"
            app:layout_constraintStart_toStartOf="@+id/skinLinearLayout"
            app:layout_constraintTop_toBottomOf="@+id/naviInfoView"
            app:viewModel="@{viewModel}"
            app:visibleGone="@{viewModel.limitSpeedVisible}"
            tools:visibility="visible" />

        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:layout_width="@dimen/sv_dimen_164"
            android:layout_height="@dimen/sv_dimen_156"
            android:layout_marginStart="@dimen/sv_dimen_n22"
            android:layout_marginTop="@dimen/sv_dimen_90"
            android:background="@drawable/shape_cruise_speed_bg_day"
            app:background4Night="@drawable/shape_cruise_speed_bg_night"
            app:background4Skin="@drawable/shape_cruise_speed_bg_day"
            app:layout_constraintStart_toEndOf="@+id/naviInfoView"
            app:layout_constraintTop_toTopOf="parent">

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tvSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sv_dimen_33"
                android:text="@{viewModel.naviSpeed}"
                android:textColor="@color/onPrimaryDay"
                android:textFontWeight="500"
                android:textSize="@dimen/sv_dimen_50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                tools:text="120" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tvSpeedUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sv_dimen_86"
                android:text="@string/sv_common_speed_unit"
                android:textColor="@color/onSecondaryDay"
                android:textFontWeight="500"
                android:textSize="@dimen/sv_dimen_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:textColor4Night="@color/onSecondaryNight"
                app:textColor4Skin="@color/onSecondaryDay" />

        </com.autonavi.auto.skin.view.SkinConstraintLayout>


        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/sapaComposeView"
            android:layout_width="@dimen/sv_dimen_640"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sv_dimen_2"
            app:layout_constraintEnd_toEndOf="@+id/naviInfoView"
            app:layout_constraintStart_toStartOf="@+id/skinLinearLayout"
            app:layout_constraintTop_toBottomOf="@+id/viewIntervalCameraView"
            app:visibleGone="@{viewModel.sapaViewVisibility &amp;&amp; !viewModel.showCrossView}" />

        <!--        <include-->
