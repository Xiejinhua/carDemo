<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.autosdk.bussiness.common.POI" />

        <variable
            name="isShow"
            type="Boolean" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sv_dimen_100"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingRight="@dimen/sv_dimen_20">

        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/startPoiTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sv_dimen_20"
            android:textColor="@color/onSecondaryDay"
            android:textSize="@dimen/sv_font_size_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:poiType="@{viewModel.poiType}"
            app:textColor4Night="@color/onSecondaryNight"
            app:textColor4Skin="@color/onSecondaryDay"
            tools:text="经" />

        <HorizontalScrollView
            android:id="@+id/poiScrollView"
            android:layout_width="@dimen/sv_dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/sv_dimen_56"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:paddingLeft="@dimen/sv_dimen_14"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="@+id/startPoiTip"
            app:layout_constraintEnd_toEndOf="@+id/ivDeleteVia"
            app:layout_constraintStart_toEndOf="@+id/startPoiTip"
            app:layout_constraintTop_toTopOf="@+id/startPoiTip">

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/etPoi"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sv_dimen_45"
                android:background="@null"
                android:singleLine="true"
                android:text="@{viewModel.name}"
                android:textColor="@color/onPrimaryDay"
                android:textSize="@dimen/sv_font_size_30"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                tools:text="@string/sv_route_please_enter_a_via" />
        </HorizontalScrollView>

        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/ivDeleteVia"
            android:layout_width="@dimen/sv_dimen_40"
            android:layout_height="@dimen/sv_dimen_40"
            android:layout_marginEnd="@dimen/sv_dimen_16"
            android:background="@drawable/selector_ic_delete_day"
            app:background4Night="@drawable/selector_ic_delete_night"
            app:background4Skin="@drawable/selector_ic_delete_day"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivDrag"
            app:layout_constraintTop_toTopOf="parent"
            app:visibleGone="@{viewModel.poiType!=3}" />

        <com.autonavi.auto.skin.view.SkinTextView
            android:id="@+id/ivDrag"
            android:layout_width="@dimen/sv_dimen_40"
            android:layout_height="@dimen/sv_dimen_40"
            android:background="@drawable/selector_ic_route_drag_day"
            app:background4Night="@drawable/selector_ic_route_drag_night"
            app:background4Skin="@drawable/selector_ic_route_drag_day"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibleGone="@{isShow}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>