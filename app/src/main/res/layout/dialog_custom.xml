<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.desaysv.psmap.ui.dialog.CustomDialogViewModel" />
    </data>

    <com.autonavi.auto.skin.view.SkinConstraintLayout
        android:id="@+id/cl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/showLoadingBgDay"
        app:background4Night="@color/showLoadingBgNight"
        app:background4Skin="@color/showLoadingBgDay">

        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:layout_width="@dimen/sv_dimen_1042"
            android:layout_height="@dimen/sv_dimen_475"
            android:layout_marginTop="@dimen/sv_dimen_12"
            android:background="@drawable/ic_main_dialog_bg_day"
            android:onClick="@{()->0}"
            android:soundEffectsEnabled="false"
            app:background4Night="@drawable/ic_main_dialog_bg_night"
            app:background4Skin="@drawable/ic_main_dialog_bg_day"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.autonavi.auto.skin.view.SkinImageView
                android:id="@+id/close_iv"
                android:layout_width="@dimen/sv_dimen_56"
                android:layout_height="@dimen/sv_dimen_56"
                android:layout_marginStart="@dimen/sv_dimen_16"
                android:layout_marginTop="@dimen/sv_dimen_20"
                android:src="@drawable/selector_ic_dialog_close_day"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:src4Night="@drawable/selector_ic_dialog_close_night"
                app:src4Skin="@drawable/selector_ic_dialog_close_day"
                tools:visibility="gone" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sv_dimen_64"
                android:layout_marginTop="@dimen/sv_dimen_90"
                android:gravity="center"
                android:text="@{viewModel.title}"
                android:textColor="@color/onPrimaryDay"
                android:textFontWeight="500"
                android:textSize="@dimen/sv_font_size_40"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay"
                app:visibleGone="@{viewModel.showTitle &amp;&amp; !viewModel.isMoreLine}"
                tools:text="@string/app_name"
                tools:visibility="gone" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tv_content_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sv_dimen_155"
                android:layout_marginTop="@dimen/sv_dimen_32"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/sv_dimen_5"
                android:text="@{viewModel.content}"
                android:textColor="@color/onTertiaryDay"
                android:textSize="@dimen/sv_font_size_34"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                app:textColor4Night="@color/onTertiaryNight"
                app:textColor4Skin="@color/onTertiaryDay"
                app:visibleGone="@{viewModel.showTitle &amp;&amp; !viewModel.isMoreLine}"
                tools:text="@string/app_name"
                tools:visibility="gone" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tv_content"
                android:layout_width="0dp"
                android:layout_height="@dimen/sv_dimen_147"
                android:layout_marginHorizontal="@dimen/sv_dimen_155"
                android:layout_marginTop="@dimen/sv_dimen_64"
                android:layout_marginBottom="@dimen/sv_dimen_180"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/sv_dimen_5"
                android:text="@{viewModel.content}"
                android:textColor="@color/onTertiaryDay"
                android:textSize="@dimen/sv_font_size_40"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:textColor4Night="@color/onTertiaryNight"
                app:textColor4Skin="@color/onTertiaryDay"
                app:visibleGone="@{!viewModel.showTitle &amp;&amp; !viewModel.isMoreLine}"
                tools:text="@string/app_name"
                tools:visibility="visible" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/tv_content_more_line"
                android:layout_width="0dp"
                android:layout_height="@dimen/sv_dimen_147"
                android:layout_marginHorizontal="@dimen/sv_dimen_155"
                android:layout_marginTop="@dimen/sv_dimen_64"
                android:layout_marginBottom="@dimen/sv_dimen_180"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/sv_dimen_5"
                android:text="@{viewModel.content}"
                android:textColor="@color/onTertiaryDay"
                android:textSize="@dimen/sv_font_size_34"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:textColor4Night="@color/onTertiaryNight"
                app:textColor4Skin="@color/onTertiaryDay"
                app:visibleGone="@{viewModel.isMoreLine}"
                tools:text="@string/app_name"
                tools:visibility="gone" />

            <com.desaysv.psmap.model.view.ShadowLayout
                android:id="@+id/cancel"
                android:layout_width="@dimen/sv_dimen_400"
                android:layout_height="@dimen/sv_dimen_90"
                android:layout_marginBottom="@dimen/sv_dimen_64"
                android:background="@drawable/selector_bg_report_btn_day"
                app:background4Night="@drawable/selector_bg_report_btn_night"
                app:background4Skin="@drawable/selector_bg_report_btn_day"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ok"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:radius="@dimen/sv_dimen_4"
                app:setShadowColor="@{viewModel.isNight}"
                app:shadowColor="@color/customColorShadowColorDay"
                app:shadowDx="@dimen/sv_dimen_2"
                app:shadowDy="@dimen/sv_dimen_2"
                app:shadowRadius="@dimen/sv_dimen_10"
                app:visibleGone="@{viewModel.showDoubleBtn}"
                tools:visibility="visible">

                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/cancelTv"
                    android:layout_width="@dimen/sv_dimen_400"
                    android:layout_height="@dimen/sv_dimen_90"
                    android:gravity="center"
                    android:text="@{viewModel.cancel}"
                    android:textColor="@color/customAhaSecenicPointTextDay"
                    android:textSize="@dimen/sv_dimen_34"
                    app:textColor4Night="@color/onPrimaryContainerNight"
                    app:textColor4Skin="@color/customAhaSecenicPointTextDay"
                    tools:text="@string/sv_common_cancel" />
            </com.desaysv.psmap.model.view.ShadowLayout>

            <com.desaysv.psmap.model.view.ShadowLayout
                android:id="@+id/ok"
                android:layout_width="@dimen/sv_dimen_400"
                android:layout_height="@dimen/sv_dimen_90"
                android:layout_marginLeft="@dimen/sv_dimen_54"
                android:background="@drawable/selector_bg_inverse_primary_day"
                app:background4Night="@drawable/selector_btn_confirm_login_night"
                app:background4Skin="@drawable/selector_bg_inverse_primary_day"
                app:layout_constraintBottom_toBottomOf="@+id/cancel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cancel"
                app:radius="@dimen/sv_dimen_4"
                app:setShadowColor="@{viewModel.isNight}"
                app:shadowColor="@color/customColorShadowColorDay"
                app:shadowDx="@dimen/sv_dimen_2"
                app:shadowDy="@dimen/sv_dimen_2"
                app:shadowRadius="@dimen/sv_dimen_10"
                app:visibleGone="@{viewModel.showDoubleBtn}"
                tools:visibility="visible">

                <com.autonavi.auto.skin.view.SkinTextView
                    android:layout_width="@dimen/sv_dimen_400"
                    android:layout_height="@dimen/sv_dimen_90"
                    android:gravity="center"
                    android:text="@{viewModel.confirm}"
                    android:textColor="@color/primaryDay"
                    android:textSize="@dimen/sv_dimen_34"
                    app:textColor4Night="@color/onPrimaryNight"
                    app:textColor4Skin="@color/primaryDay"
                    tools:text="@string/sv_setting_team_add_text" />
            </com.desaysv.psmap.model.view.ShadowLayout>

            <com.desaysv.psmap.model.view.ShadowLayout
                android:id="@+id/know"
                android:layout_width="@dimen/sv_dimen_400"
                android:layout_height="@dimen/sv_dimen_90"
                android:layout_marginBottom="@dimen/sv_dimen_64"
                android:background="@drawable/selector_bg_inverse_primary_day"
                app:background4Night="@drawable/selector_btn_confirm_login_night"
                app:background4Skin="@drawable/selector_bg_inverse_primary_day"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:radius="@dimen/sv_dimen_4"
                app:setShadowColor="@{viewModel.isNight}"
                app:shadowColor="@color/customColorShadowColorDay"
                app:shadowDx="@dimen/sv_dimen_2"
                app:shadowDy="@dimen/sv_dimen_2"
                app:shadowRadius="@dimen/sv_dimen_10"
                app:visibleGone="@{!viewModel.showDoubleBtn}"
                tools:visibility="gone">

                <com.autonavi.auto.skin.view.SkinTextView
                    android:id="@+id/knowTv"
                    android:layout_width="@dimen/sv_dimen_400"
                    android:layout_height="@dimen/sv_dimen_90"
                    android:gravity="center"
                    android:text="@{viewModel.know}"
                    android:textColor="@color/primaryDay"
                    android:textSize="@dimen/sv_dimen_34"
                    app:textColor4Night="@color/onPrimaryNight"
                    app:textColor4Skin="@color/primaryDay"
                    tools:text="@string/sv_common_got_it" />
            </com.desaysv.psmap.model.view.ShadowLayout>
        </com.autonavi.auto.skin.view.SkinConstraintLayout>
    </com.autonavi.auto.skin.view.SkinConstraintLayout>
</layout>