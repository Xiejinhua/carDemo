<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription">

    <data>

        <variable
            name="screenStatus"
            type="Boolean" />

        <variable
            name="isNight"
            type="Boolean" />
    </data>


    <com.autonavi.auto.skin.view.SkinConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_main_bg_day"
        app:background4Night="@drawable/ic_main_bg_night"
        app:background4Skin="@drawable/ic_main_bg_day">

        <com.autonavi.auto.skin.view.SkinConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sv_dimen_100"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:sendToPhoneWidth="@{screenStatus}"
            tools:layout_width="@dimen/sv_dimen_950">

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/icon"
                android:layout_width="@dimen/sv_dimen_68"
                android:layout_height="@dimen/sv_dimen_48"
                android:background="@drawable/ic_navi_phone_day"
                android:paddingLeft="@dimen/sv_dimen_20"
                android:visibility="gone"
                app:background4Night="@drawable/ic_navi_phone_night"
                app:background4Skin="@drawable/ic_navi_phone_day"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/type_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sv_dimen_20"
                android:layout_marginRight="@dimen/sv_dimen_24"
                android:includeFontPadding="false"
                android:text="@string/sv_navi_walk_navigation"
                android:textColor="@color/onPrimaryDay"
                android:textSize="@dimen/sv_dimen_34"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/icon"
                app:layout_constraintRight_toLeftOf="@+id/btSend"
                app:layout_constraintTop_toTopOf="parent"
                app:textColor4Night="@color/onPrimaryNight"
                app:textColor4Skin="@color/onPrimaryDay" />


            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/btSend"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sv_dimen_64"
                android:layout_marginEnd="@dimen/sv_dimen_16"
                android:background="@drawable/selector_btn_confirm_day"
                android:gravity="center"
                android:paddingHorizontal="@dimen/sv_dimen_6"
                android:text="@string/sv_navi_send_it_now"
                android:textColor="@color/onPrimaryContainerDay"
                android:textSize="@dimen/sv_dimen_34"
                app:background4Night="@drawable/selector_btn_confirm_night"
                app:background4Skin="@drawable/selector_btn_confirm_day"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/close"
                app:layout_constraintTop_toTopOf="parent"
                app:textColor4Night="@color/onPrimaryContainerNight"
                app:textColor4Skin="@color/onPrimaryContainerDay" />

            <com.autonavi.auto.skin.view.SkinTextView
                android:id="@+id/close"
                android:layout_width="@dimen/sv_dimen_64"
                android:layout_height="@dimen/sv_dimen_64"
                android:layout_marginEnd="@dimen/sv_dimen_20"
                android:background="@drawable/selector_ic_delete_day"
                app:background4Night="@drawable/selector_ic_delete_night"
                app:background4Skin="@drawable/selector_ic_delete_day"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.autonavi.auto.skin.view.SkinConstraintLayout>
    </com.autonavi.auto.skin.view.SkinConstraintLayout>
</layout>