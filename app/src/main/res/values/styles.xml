<resources>
    <style name="license_plate_editStyle">
        <item name="android:layout_height">@dimen/sv_dimen_45</item>
        <item name="android:layout_width">@dimen/sv_dimen_45</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/onPrimaryDay</item>
        <item name="android:textSize">@dimen/sv_dimen_28</item>
        <item name="android:layout_marginRight">@dimen/sv_dimen_2</item>
    </style>

    <style name="license_plate_num_textStyle">
        <item name="android:layout_height">@dimen/sv_dimen_86</item>
        <item name="android:layout_width">@dimen/sv_dimen_111</item>
        <item name="android:background">@drawable/selector_bg_ime_car_btn_day</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/onPrimaryDay</item>
        <item name="android:textSize">@dimen/sv_dimen_42</item>
        <item name="android:layout_marginRight">@dimen/sv_dimen_8</item>
        <item name="android:layout_marginTop">@dimen/sv_dimen_12</item>
    </style>

    <style name="scrollbar_style">
        <item name="android:layout_marginTop">@dimen/sv_dimen_10</item>
        <item name="android:scrollbarThumbVertical">@drawable/shape_account_scrollbar_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/shape_account_scrollbar_track</item>
        <item name="android:scrollbarSize">@dimen/sv_dimen_6</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
    </style>

    <style name="switch_style_night">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="kswThumbWidth">@dimen/sv_dimen_44</item>
        <item name="kswThumbHeight">@dimen/sv_dimen_42</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="kswThumbDrawable">@drawable/bg_switch_thumb_day</item>
        <item name="paddingStart">@dimen/sv_dimen_0</item>
        <item name="kswThumbMarginLeft">@dimen/sv_dimen_4</item>
        <item name="kswThumbMarginTop">@dimen/sv_dimen_3</item>
        <item name="kswThumbMarginRight">@dimen/sv_dimen_4</item>
        <item name="kswThumbMarginBottom">@dimen/sv_dimen_1</item>
        <item name="kswBackRadius">@dimen/sv_dimen_8</item>
        <item name="kswThumbRadius">@dimen/sv_dimen_4</item>
        <item name="kswBackDrawable">@drawable/bg_switch_track_day</item>
    </style>
</resources>
